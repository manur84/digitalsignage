{
  "Server": {
    "Port": 8080,
    "Host": "0.0.0.0",
    "EnableCors": true,
    "MaxClients": 100
  },
  "Database": {
    "Provider": "SqlServer",
    "ConnectionString": "Server=localhost;Database=DigitalSignage;Integrated Security=true;Encrypt=true;TrustServerCertificate=true;",
    "EnableAutoMigration": true
  },
  "WebSocket": {
    "HeartbeatInterval": 30,
    "ReconnectDelay": [5, 10, 30, 60],
    "MessageCompression": true,
    "MaxMessageSize": 1048576
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "logs/digitalsignage-.txt",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    }
  },
  "Security": {
    "EnableAuthentication": true,
    "ApiKeyHeader": "X-API-Key",
    "AllowedOrigins": ["*"],
    "RequireHttps": false
  },
  "DataRefresh": {
    "DefaultInterval": 60,
    "MinInterval": 5,
    "MaxInterval": 3600
  },
  "Media": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".svg", ".mp4"],
    "StoragePath": "media"
  }
}
