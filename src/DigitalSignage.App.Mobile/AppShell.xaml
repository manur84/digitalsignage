<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DigitalSignage.App.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DigitalSignage.App.Mobile.Views"
    Title="Digital Signage"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="login"
            Icon="lock.png" />

        <ShellContent
            Title="Devices"
            ContentTemplate="{DataTemplate local:DeviceListPage}"
            Route="devices"
            Icon="devices.png" />
    </TabBar>

</Shell>
