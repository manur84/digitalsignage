<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer>
		<integer>2</integer>
	</array>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>XSAppIconAssets</key>
	<string>Assets.xcassets/appicon.appiconset</string>

	<!-- Local Network Usage (required for mDNS/Bonjour on iOS 14+) -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>Find Digital Signage servers on your local network</string>

	<!-- Bonjour services -->
	<key>NSBonjourServices</key>
	<array>
		<string>_digitalsignage._tcp</string>
	</array>

	<!-- Face ID/Touch ID -->
	<key>NSFaceIDUsageDescription</key>
	<string>Use Face ID to securely access the Digital Signage app</string>

	<!-- App Transport Security - Restrict to local network only for security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Allow local networking only - more secure than arbitrary loads -->
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<!-- Exception for development/testing with specific domains -->
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Support for Dark Mode -->
	<key>UIUserInterfaceStyle</key>
	<string>Automatic</string>
	
	<!-- App Capabilities -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
	</array>
</dict>
</plist>
