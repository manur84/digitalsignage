<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DigitalSignage.App.Mobile.ViewModels"
             xmlns:models="clr-namespace:DigitalSignage.Core.Models;assembly=DigitalSignage.Core"
             x:Class="DigitalSignage.App.Mobile.Views.DeviceListPage"
             x:DataType="viewmodels:DeviceListViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Stats -->
        <Frame Grid.Row="0"
               BorderColor="{DynamicResource Gray300}"
               BackgroundColor="{DynamicResource Primary}"
               Padding="15"
               Margin="10"
               CornerRadius="8">
            <Grid ColumnDefinitions="*,*">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="{Binding OnlineDeviceCount}"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Online"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="{Binding TotalDeviceCount}"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Total"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Device List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Devices}"
                           SelectionMode="Single"
                           SelectedItem="{Binding SelectedDevice}"
                           SelectionChangedCommand="{Binding DeviceSelectedCommand}"
                           SelectionChangedCommandParameter="{Binding SelectedDevice}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ClientInfo">
                        <Frame BorderColor="{DynamicResource Gray300}"
                               BackgroundColor="White"
                               Padding="15"
                               Margin="10,5"
                               CornerRadius="8">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">

                                <!-- Status Indicator -->
                                <BoxView Grid.Column="0"
                                        Grid.RowSpan="3"
                                        WidthRequest="8"
                                        CornerRadius="4"
                                        Margin="0,0,15,0"
                                        BackgroundColor="{Binding Status, Converter={StaticResource DeviceStatusToColorConverter}}" />

                                <!-- Device Info -->
                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Text="{Binding Hostname}"
                                       FontSize="18"
                                       FontAttributes="Bold" />

                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       Text="{Binding IpAddress}"
                                       FontSize="14"
                                       TextColor="{DynamicResource Gray600}" />

                                <Label Grid.Column="1"
                                       Grid.Row="2"
                                       Text="{Binding Resolution}"
                                       FontSize="12"
                                       TextColor="{DynamicResource Gray600}" />

                                <!-- Status Badge -->
                                <Border Grid.Column="2"
                                       Grid.RowSpan="3"
                                       BackgroundColor="{Binding Status, Converter={StaticResource DeviceStatusToColorConverter}}"
                                       Padding="10,5"
                                       StrokeThickness="0"
                                       VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Status}"
                                           TextColor="White"
                                           FontSize="12"
                                           FontAttributes="Bold" />
                                </Border>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Padding="20">
                        <Label Text="No Devices Found"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource Gray600}" />
                        <Label Text="Devices will appear here once they connect to the server"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource Gray600}"
                               Margin="0,10,0,0" />
                        <Button Text="Refresh"
                                Command="{Binding RefreshCommand}"
                                BackgroundColor="{DynamicResource Primary}"
                                TextColor="White"
                                Margin="0,20,0,0"
                                WidthRequest="200" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

    </Grid>

</ContentPage>
