<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DigitalSignage.App.Mobile.ViewModels"
             xmlns:models="clr-namespace:DigitalSignage.Core.Models;assembly=DigitalSignage.Core"
             x:Class="DigitalSignage.App.Mobile.Views.DeviceListPage"
             x:DataType="viewmodels:DeviceListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource Background}">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Stats -->
        <Frame Grid.Row="0"
               BorderColor="Transparent"
               BackgroundColor="{DynamicResource Primary}"
               Padding="24"
               Margin="16,16,16,12"
               CornerRadius="12"
               HasShadow="False">
            <Grid ColumnDefinitions="*,*">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="4">
                    <Label Text="{Binding OnlineDeviceCount}"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Online"
                           FontSize="15"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="4">
                    <Label Text="{Binding TotalDeviceCount}"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Total"
                           FontSize="15"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Device List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Devices}"
                           SelectionMode="Single"
                           SelectedItem="{Binding SelectedDevice}"
                           SelectionChangedCommand="{Binding DeviceSelectedCommand}"
                           SelectionChangedCommandParameter="{Binding SelectedDevice}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ClientInfo">
                        <Frame BorderColor="{DynamicResource Gray200}"
                               BackgroundColor="{DynamicResource Surface}"
                               Padding="16"
                               Margin="16,6"
                               CornerRadius="12"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="6">

                                <!-- Status Indicator -->
                                <BoxView Grid.Column="0"
                                        Grid.RowSpan="3"
                                        WidthRequest="4"
                                        CornerRadius="2"
                                        Margin="0,0,16,0"
                                        BackgroundColor="{Binding Status, Converter={StaticResource DeviceStatusToColorConverter}}" />

                                <!-- Device Info -->
                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Text="{Binding Name}"
                                       FontSize="17"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource Gray900}" />

                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       Text="{Binding IpAddress}"
                                       FontSize="14"
                                       TextColor="{DynamicResource Gray600}" />

                                <Label Grid.Column="1"
                                       Grid.Row="2"
                                       Text="{Binding Resolution}"
                                       FontSize="13"
                                       TextColor="{DynamicResource Gray500}" />

                                <!-- Status Badge -->
                                <Border Grid.Column="2"
                                       Grid.RowSpan="3"
                                       BackgroundColor="{Binding Status, Converter={StaticResource DeviceStatusToColorConverter}}"
                                       Padding="12,6"
                                       StrokeThickness="0"
                                       VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Status}"
                                           TextColor="White"
                                           FontSize="13"
                                           FontAttributes="Bold" />
                                </Border>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Padding="32"
                                        Spacing="12">
                        <Label Text="No Devices Found"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{DynamicResource Gray500}" />
                        <Label Text="Devices will appear here once they connect to the server"
                               FontSize="14"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{DynamicResource Gray400}"
                               LineBreakMode="WordWrap" />
                        <Button Text="Refresh"
                                Command="{Binding RefreshCommand}"
                                BackgroundColor="{DynamicResource Primary}"
                                TextColor="White"
                                FontSize="15"
                                FontAttributes="Bold"
                                HeightRequest="48"
                                CornerRadius="12"
                                Margin="0,8,0,0"
                                WidthRequest="200" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

    </Grid>

</ContentPage>
