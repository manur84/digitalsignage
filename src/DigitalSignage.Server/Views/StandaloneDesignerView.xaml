<UserControl x:Class="DigitalSignage.Server.Views.StandaloneDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:DigitalSignage.Core.Models;assembly=DigitalSignage.Core"
             xmlns:local="clr-namespace:DigitalSignage.Server.Views"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="700">

    <UserControl.Resources>
        <local:TextTypeToVisibilityConverter x:Key="textOnlyVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <!-- Toolbox -->
        <StackPanel Grid.Column="0" Background="#1F1F1F" Margin="0" >
            <TextBlock Text="Standalone Designer"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>

            <Button Content="New Layout"
                    Command="{Binding CreateNewLayoutCommand}"
                    Margin="0,4"
                    Padding="10"/>
            <Button Content="Save Layout"
                    Command="{Binding SaveLayoutCommand}"
                    Margin="0,4"
                    Padding="10"/>
            <Separator Margin="0,12"/>
            <TextBlock Text="Add Elements" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="Text"
                    Command="{Binding AddTextElementCommand}"
                    Margin="0,4" Padding="8"/>
            <Button Content="Rectangle"
                    Command="{Binding AddRectangleElementCommand}"
                    Margin="0,4" Padding="8"/>
            <Button Content="Delete Selected"
                    Command="{Binding DeleteSelectedCommand}"
                    Margin="0,20,0,0"
                    Padding="8"/>

            <Separator Margin="0,16"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch">
                <TextBlock Text="Width:"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBox Width="70"
                         Margin="8,0,0,0"
                         Text="{Binding CanvasWidth, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0,8,0,0">
                <TextBlock Text="Height:"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBox Width="70"
                         Margin="8,0,0,0"
                         Text="{Binding CanvasHeight, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>

        <!-- Canvas Host -->
        <Border Grid.Column="1"
                Margin="16"
                Background="#F3F3F3"
                CornerRadius="6"
                BorderBrush="#C7C7C7"
                BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid Background="#D9D9D9"
                      Margin="24">
                    <Border Background="White"
                            BorderBrush="#999"
                            BorderThickness="1"
                            x:Name="CanvasHost"
                            Width="{Binding CanvasWidth}"
                            Height="{Binding CanvasHeight}">
                        <ItemsControl ItemsSource="{Binding Elements}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding DataContext.CanvasWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Height="{Binding DataContext.CanvasHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding Position.X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Position.Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:DisplayElement}">
                                    <Border Width="{Binding Size.Width}"
                                            Height="{Binding Size.Height}"
                                            Background="{Binding Properties[Fill], TargetNullValue=#F2F2F2}"
                                            BorderBrush="#2E86C1"
                                            BorderThickness="1"
                                            MouseLeftButtonDown="Element_MouseLeftButtonDown"
                                            MouseMove="Element_MouseMove"
                                            MouseLeftButtonUp="Element_MouseLeftButtonUp"
                                            Tag="{Binding}">
                                        <Grid>
                                            <TextBlock Text="{Binding Properties[Content]}"
                                                       Foreground="#1B2631"
                                                       FontSize="{Binding Properties[FontSize], TargetNullValue=28}"
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding Type, Converter={StaticResource textOnlyVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Selected element inspector -->
        <StackPanel Grid.Column="2"
                    Background="#FFFFFF"
                    Margin="0">
            <TextBlock Text="Element Properties"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <TextBlock Text="{Binding SelectedElement.Name, TargetNullValue='(none selected)'}"
                       FontWeight="SemiBold"/>
            <Separator Margin="0,6"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="X:" VerticalAlignment="Center"/>
                <TextBox Width="60"
                         Text="{Binding SelectedElement.Position.X, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"/>
                <TextBlock Text="Y:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                <TextBox Width="60"
                         Text="{Binding SelectedElement.Position.Y, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="W:" VerticalAlignment="Center"/>
                <TextBox Width="60"
                         Text="{Binding SelectedElement.Size.Width, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"/>
                <TextBlock Text="H:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                <TextBox Width="60"
                         Text="{Binding SelectedElement.Size.Height, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"/>
            </StackPanel>
            <TextBlock Text="Text Content:" Margin="0,12,0,0"/>
            <TextBox Text="{Binding SelectedElement.Properties[Content], UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80"/>
        </StackPanel>
    </Grid>
</UserControl>
