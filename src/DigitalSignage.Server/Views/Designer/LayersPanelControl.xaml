<UserControl x:Class="DigitalSignage.Server.Views.Designer.LayersPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="250">
    <Border Background="White" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top"
                   Background="#F5F5F5"
                   BorderBrush="#DDDDDD"
                   BorderThickness="0,0,0,1">
                <TextBlock Text="Layers"
                          FontSize="14"
                          FontWeight="Bold"
                          Padding="12,8"/>
            </Border>

            <!-- Layers List -->
            <ListBox ItemsSource="{Binding Layers}"
                    SelectedItem="{Binding SelectedLayer}"
                    Margin="0"
                    BorderThickness="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                               BorderThickness="0,0,0,1"
                               BorderBrush="#EEEEEE"
                               Padding="8,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Type Icon -->
                                <TextBlock Grid.Column="0"
                                          Text="{Binding Type, Converter={StaticResource ElementTypeIconConverter}}"
                                          FontSize="14"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Width="20"
                                          TextAlignment="Center"/>

                                <!-- Element Name -->
                                <TextBlock Grid.Column="1"
                                          Text="{Binding Name}"
                                          VerticalAlignment="Center"
                                          TextTrimming="CharacterEllipsis"/>

                                <!-- Z-Index -->
                                <TextBlock Grid.Column="2"
                                          Text="{Binding ZIndex}"
                                          FontSize="10"
                                          Foreground="#999999"
                                          VerticalAlignment="Center"
                                          Margin="4,0,8,0"/>

                                <!-- Move Up Button -->
                                <Button Grid.Column="3"
                                       Content="â–²"
                                       Command="{Binding DataContext.MoveLayerUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Width="24"
                                       Height="24"
                                       Padding="0"
                                       FontSize="8"
                                       Margin="0,0,2,0"
                                       ToolTip="Move Up"/>

                                <!-- Move Down Button -->
                                <Button Grid.Column="4"
                                       Content="â–¼"
                                       Command="{Binding DataContext.MoveLayerDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Width="24"
                                       Height="24"
                                       Padding="0"
                                       FontSize="8"
                                       Margin="0,0,2,0"
                                       ToolTip="Move Down"/>

                                <!-- Visibility Toggle -->
                                <Button Grid.Column="5"
                                       Command="{Binding DataContext.ToggleLayerVisibilityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Width="24"
                                       Height="24"
                                       Padding="0"
                                       FontSize="12"
                                       ToolTip="Toggle Visibility">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="ðŸ‘"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding [IsVisible], FallbackValue=True}" Value="False">
                                                        <Setter Property="Text" Value="ðŸš«"/>
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </DockPanel>
    </Border>
</UserControl>
