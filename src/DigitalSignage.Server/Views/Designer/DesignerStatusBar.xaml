<UserControl x:Class="DigitalSignage.Server.Views.Designer.DesignerStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="800"
             Background="#F8F9FA">
    <UserControl.Resources>
        <!-- Status Bar Item Style -->
        <Style x:Key="StatusItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>

        <!-- Separator Style -->
        <Style x:Key="StatusSeparatorStyle" TargetType="Separator">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Margin" Value="4,6"/>
            <Setter Property="Background" Value="#DEE2E6"/>
        </Style>

        <!-- Small Button Style for Zoom -->
        <Style x:Key="ZoomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9ECEF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#DEE2E6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Text Style -->
        <Style x:Key="IconTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Background="#F8F9FA">
        <Grid Margin="4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section: Status Message -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Style="{StaticResource StatusItemStyle}"
                           Text="{Binding StatusMessage, FallbackValue='Ready'}"/>
            </StackPanel>

            <!-- Center Section: Selection Info -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource StatusItemStyle}">
                    <Run Text="Selection:"/>
                    <Run Text="{Binding SelectionService.SelectionCount, FallbackValue=0}"/>
                    <Run Text="element(s)"/>
                </TextBlock>

                <Separator Style="{StaticResource StatusSeparatorStyle}"/>

                <TextBlock Style="{StaticResource StatusItemStyle}">
                    <Run Text="Canvas:"/>
                    <Run Text="{Binding CurrentLayout.Resolution.Width, FallbackValue=1920}"/>
                    <Run Text="x"/>
                    <Run Text="{Binding CurrentLayout.Resolution.Height, FallbackValue=1080}"/>
                    <Run Text="px"/>
                </TextBlock>

                <Separator Style="{StaticResource StatusSeparatorStyle}"/>

                <!-- Grid Status Indicator -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE80A;" Style="{StaticResource IconTextStyle}" Margin="4,0,2,0"/>
                    <TextBlock Style="{StaticResource StatusItemStyle}" Margin="0">
                        <Run Text="Grid:"/>
                        <Run Text="{Binding GridSize, FallbackValue=10}"/>
                        <Run Text="px"/>
                    </TextBlock>
                    <TextBlock Style="{StaticResource StatusItemStyle}" Margin="4,0,0,0"
                               Text="{Binding ShowGrid, Converter={StaticResource BoolToVisibilityStringConverter}, FallbackValue='(Hidden)'}"/>
                </StackPanel>

                <Separator Style="{StaticResource StatusSeparatorStyle}"/>

                <!-- Snap to Grid Indicator -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7C4;" Style="{StaticResource IconTextStyle}" Margin="4,0,2,0"/>
                    <TextBlock Style="{StaticResource StatusItemStyle}" Margin="0"
                               Text="{Binding SnapToGrid, Converter={StaticResource BoolToOnOffStringConverter}, FallbackValue='Off'}"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Section: Zoom Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Style="{StaticResource ZoomButtonStyle}"
                        Command="{Binding ZoomOutCommand}"
                        ToolTip="Zoom Out (Ctrl+-)">
                    <TextBlock Text="&#xE738;" Style="{StaticResource IconTextStyle}"/>
                </Button>

                <TextBlock Style="{StaticResource StatusItemStyle}" MinWidth="60" TextAlignment="Center">
                    <Run Text="{Binding ZoomLevel, StringFormat=P0, FallbackValue='100%'}"/>
                </TextBlock>

                <Button Style="{StaticResource ZoomButtonStyle}"
                        Command="{Binding ZoomInCommand}"
                        ToolTip="Zoom In (Ctrl++)">
                    <TextBlock Text="&#xE710;" Style="{StaticResource IconTextStyle}"/>
                </Button>

                <Button Style="{StaticResource ZoomButtonStyle}"
                        Command="{Binding ZoomToFitCommand}"
                        ToolTip="Zoom to Fit (Ctrl+0)"
                        Margin="4,0,0,0">
                    <TextBlock Text="&#xE71E;" Style="{StaticResource IconTextStyle}"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
