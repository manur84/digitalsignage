<Window x:Class="DigitalSignage.Server.Views.Dialogs.SystemDiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="System Diagnostics - Digital Signage Server"
        Width="1000" Height="750"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="DiagLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="DiagValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="System Diagnostics" FontSize="24" FontWeight="Bold" Foreground="#333333"/>
                    <TextBlock Text="Comprehensive health check of all system components"
                               FontSize="13" Foreground="#666666" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Overall Status Badge -->
                <Border Grid.Column="1" Style="{StaticResource StatusBadge}"
                        Background="{Binding OverallStatusColor}">
                    <TextBlock Text="{Binding OverallStatus}" FontWeight="Bold"
                               FontSize="14" Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="0" BorderThickness="0" Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="White" BorderBrush="#E0E0E0"
                                        BorderThickness="1,1,1,0" CornerRadius="4,4,0,0"
                                        Padding="15,10" Margin="0,0,2,0">
                                    <ContentPresenter ContentSource="Header"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Database Health Tab -->
            <TabItem Header="Database">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <TextBlock Text="Database Health" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding DatabaseStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding DatabaseStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Connection Status:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DatabaseCanConnect}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Database Provider:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DatabaseProvider}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Database Path:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DatabasePath}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Database Size:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DatabaseSize}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Last Backup:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding LastBackupDate}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Table Row Counts:" Style="{StaticResource DiagLabel}" Margin="0,10,0,10" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DatabaseTableCounts}" Style="{StaticResource DiagValue}" Margin="0,10,0,10"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- WebSocket Server Tab -->
            <TabItem Header="WebSocket Server">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <TextBlock Text="WebSocket Server Health" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding WebSocketStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding WebSocketStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Server Running:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WebSocketIsRunning}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Listening URL:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WebSocketUrl}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="SSL/TLS Status:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WebSocketSslStatus}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Active Connections:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ActiveConnections}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Server Uptime:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ServerUptime}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Port and Certificate Tab -->
            <TabItem Header="Port and Certificate">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <!-- Port Availability Section -->
                        <TextBlock Text="Port Availability" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding PortStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding PortStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Configured Port:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConfiguredPort}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Port Available:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PortAvailable}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Alternative Ports:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding AlternativePorts}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>
                        </Grid>

                        <!-- Certificate Section -->
                        <TextBlock Text="SSL/TLS Certificate" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding CertificateStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding CertificateStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="SSL Enabled:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SslEnabled}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Certificate Path:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CertificatePath}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Subject:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CertificateSubject}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Expiration Date:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CertificateExpiration}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Valid:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CertificateValid}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Client Statistics Tab -->
            <TabItem Header="Clients">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <TextBlock Text="Client Statistics" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding ClientStatsStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding ClientStatsStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Clients:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalClients}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Online Clients:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding OnlineClients}" Style="{StaticResource DiagValue}" Margin="0,0,0,10" Foreground="#4CAF50" FontWeight="Bold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Offline Clients:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding OfflineClients}" Style="{StaticResource DiagValue}" Margin="0,0,0,10" Foreground="#FF9800"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Disconnected Clients:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DisconnectedClients}" Style="{StaticResource DiagValue}" Margin="0,0,0,10" Foreground="#F44336"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Performance Tab -->
            <TabItem Header="Performance">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <TextBlock Text="Performance Metrics" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding PerformanceStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding PerformanceStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="CPU Usage:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CpuUsage}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Memory Usage:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MemoryUsage}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Thread Count:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ThreadCount}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Disk Usage:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DiskUsage}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <TextBlock Text="Log Analysis" Style="{StaticResource SectionHeader}"/>

                        <Border Style="{StaticResource StatusBadge}" Background="{Binding LogStatusColor}" Margin="0,0,0,15">
                            <TextBlock Text="{Binding LogStatus}" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Log Files Count:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LogFilesCount}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Log Size:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LogTotalSize}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Errors (Last Hour):" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ErrorsLastHour}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Warnings (Last Hour):" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding WarningsLastHour}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Errors (Today):" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ErrorsToday}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Warnings (Today):" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding WarningsToday}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Last Critical Error:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding LastCriticalError}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- System Info Tab -->
            <TabItem Header="System Info">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                        <TextBlock Text="System Information" Style="{StaticResource SectionHeader}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Machine Name:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MachineName}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Operating System:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding OperatingSystem}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Processors:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ProcessorInfo}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text=".NET Version:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DotNetVersion}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Application Version:" Style="{StaticResource DiagLabel}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding AppVersion}" Style="{StaticResource DiagValue}" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="⏳" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="Running diagnostics..." FontSize="13" Foreground="#666666"/>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                           FontSize="13" Foreground="#666666"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Refresh"
                        Command="{Binding RefreshDiagnosticsCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0"/>

                <Button Content="Copy to Clipboard"
                        Command="{Binding CopyToClipboardCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"/>

                <Button Content="Export..."
                        Command="{Binding ExportToFileCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"/>

                <Button Content="Close"
                        Click="CloseButton_Click"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="4"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock Text="Running System Diagnostics..."
                           FontSize="16" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
