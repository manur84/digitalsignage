<Window x:Class="DigitalSignage.Server.Views.Dialogs.TableEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tabelle bearbeiten"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               CornerRadius="4"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Info Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Tabelle bearbeiten" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Bearbeiten Sie die Spalten und Daten der Tabelle im JSON-Format."
                       Foreground="#666666" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Columns Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Spalten (Comma-separated)" Style="{StaticResource SectionHeaderStyle}"/>
            <TextBox x:Name="ColumnsTextBox"
                     Text="{Binding ColumnsText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="8"
                     Height="40"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     ToolTip="Spalten durch Komma getrennt eingeben, z.B.: Name, Email, Telefon"/>
        </StackPanel>

        <!-- Rows Section -->
        <Border Grid.Row="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Zeilen (JSON-Format)" Style="{StaticResource SectionHeaderStyle}" Margin="10,10,10,5"/>

                <TextBox Grid.Row="1"
                         x:Name="RowsTextBox"
                         Text="{Binding RowsJson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Consolas"
                         FontSize="11"
                         Padding="10"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Margin="10,0,10,10"
                         ToolTip="Zeilen im JSON-Array-Format, z.B.: [[&quot;Max&quot;, &quot;max@email.com&quot;, &quot;123&quot;], [&quot;Anna&quot;, &quot;anna@email.com&quot;, &quot;456&quot;]]"/>
            </Grid>
        </Border>

        <!-- Button Bar -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <TextBlock x:Name="ErrorText" Foreground="Red" VerticalAlignment="Center" Margin="0,0,15,0" Text="{Binding ErrorMessage}"/>
            <Button Content="Abbrechen"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="120"
                    Margin="0,0,10,0"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
            <Button Content="Ãœbernehmen"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="120"
                    IsDefault="True"
                    Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
