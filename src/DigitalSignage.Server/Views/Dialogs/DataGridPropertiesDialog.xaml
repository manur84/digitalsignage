<Window x:Class="DigitalSignage.Server.Views.Dialogs.DataGridPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSignage.Server.Views.Dialogs"
        mc:Ignorable="d"
        Title="DataGrid Properties - SQL Data Source"
        Width="900" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>     <!-- Content area -->
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Data Source Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Data Source" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding AvailableDataSources}"
                                      SelectedItem="{Binding SelectedDataSource, Mode=TwoWay}"
                                      DisplayMemberPath="Name"
                                      Margin="0,0,8,0"
                                      Padding="8"
                                      FontSize="14">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TableName}" FontSize="11" Foreground="#666"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button Grid.Column="1" Content="Refresh"
                                    Command="{Binding RefreshDataSourcesCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,8"/>
                        </Grid>

                        <!-- Preview -->
                        <Border Background="#F9F9F9" BorderBrush="#DDDDDD" BorderThickness="1"
                                CornerRadius="4" Padding="12" Margin="0,12,0,0"
                                Visibility="{Binding HasPreviewData, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Preview (first 3 rows)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <DataGrid ItemsSource="{Binding PreviewData}"
                                          AutoGenerateColumns="True"
                                          IsReadOnly="True"
                                          MaxHeight="150"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="All"
                                          AlternationCount="2"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False"
                                          CanUserSortColumns="False"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Display Settings Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Display Settings" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Rows Per Page:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding RowsPerPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Show Header:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <CheckBox Grid.Row="1" Grid.Column="1"
                                      IsChecked="{Binding ShowHeader, Mode=TwoWay}"
                                      VerticalAlignment="Center" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Auto Scroll:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <CheckBox Grid.Row="2" Grid.Column="1"
                                      IsChecked="{Binding AutoScroll, Mode=TwoWay}"
                                      VerticalAlignment="Center" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Scroll Interval (s):" VerticalAlignment="Center"
                                       IsEnabled="{Binding AutoScroll}"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Text="{Binding ScrollInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding AutoScroll}"
                                     Padding="8"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Styling Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Styling" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Header Background:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding HeaderBackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Header Text Color:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding HeaderTextColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Row Background:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding RowBackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Alternate Row Color:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Text="{Binding AlternateRowColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Border Color:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="4" Grid.Column="1"
                                     Text="{Binding BorderColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Border Thickness:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="5" Grid.Column="1"
                                     Text="{Binding BorderThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Cell Padding:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="6" Grid.Column="1"
                                     Text="{Binding CellPadding, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Font Size:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="7" Grid.Column="1"
                                     Text="{Binding FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="OK"
                    Width="100"
                    Click="OK_Click"
                    IsDefault="True"
                    IsEnabled="{Binding CanSave}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,0,12,0"/>
            <Button Content="Cancel"
                    Width="100"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
