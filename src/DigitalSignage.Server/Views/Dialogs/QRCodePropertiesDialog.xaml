<Window x:Class="DigitalSignage.Server.Views.Dialogs.QRCodePropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSignage.Server.Views.Dialogs"
        mc:Ignorable="d"
        Title="QR Code Properties"
        Width="700" Height="650"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>     <!-- Content area -->
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Content Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="QR Code Content" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Content:" VerticalAlignment="Top" Margin="0,8,0,8"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="150"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="8"
                                     Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="Enter the text or URL to encode in the QR code. This can be a website URL, contact information (vCard), WiFi credentials, or plain text."
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Appearance Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Appearance" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Foreground Color -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Foreground:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBox Text="{Binding ForegroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100" Padding="8" Margin="0,0,8,0"/>
                                <Rectangle Width="40" Height="30" Stroke="#CCCCCC" StrokeThickness="1">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding ForegroundColor}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Text="(QR code modules color)"
                                           VerticalAlignment="Center"
                                           Foreground="#666"
                                           FontSize="11"
                                           Margin="12,0,0,0"/>
                            </StackPanel>

                            <!-- Background Color -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Background:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBox Text="{Binding BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100" Padding="8" Margin="0,0,8,0"/>
                                <Rectangle Width="40" Height="30" Stroke="#CCCCCC" StrokeThickness="1">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding BackgroundColor}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Text="(Background color)"
                                           VerticalAlignment="Center"
                                           Foreground="#666"
                                           FontSize="11"
                                           Margin="12,0,0,0"/>
                            </StackPanel>

                            <!-- Alignment -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Alignment:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{Binding AlignmentOptions}"
                                      SelectedValue="{Binding Alignment, Mode=TwoWay}"
                                      Padding="8"
                                      Width="150"
                                      HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Error Correction Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Error Correction" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Level:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding ErrorCorrectionLevels}"
                                      SelectedValue="{Binding ErrorCorrectionLevel, Mode=TwoWay}"
                                      Padding="8"
                                      Width="100"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Top"/>
                            <Expander Grid.Row="1" Grid.Column="1" Header="What does this mean?">
                                <Border Background="#F9F9F9" BorderBrush="#DDDDDD" BorderThickness="1"
                                        CornerRadius="4" Padding="12" Margin="0,8,0,0">
                                    <TextBlock Text="{Binding ErrorCorrectionHelp}"
                                               TextWrapping="Wrap"
                                               FontSize="11"/>
                                </Border>
                            </Expander>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="OK"
                    Width="100"
                    Click="OK_Click"
                    IsDefault="True"
                    IsEnabled="{Binding CanSave}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,0,12,0"/>
            <Button Content="Cancel"
                    Width="100"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
