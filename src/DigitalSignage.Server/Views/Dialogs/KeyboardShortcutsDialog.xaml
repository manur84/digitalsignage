<Window x:Class="DigitalSignage.Server.Views.Dialogs.KeyboardShortcutsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Keyboard Shortcuts"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="CategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="ShortcutKeyStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="ShortcutTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                  Text="Keyboard Shortcuts Reference"
                  FontSize="22"
                  FontWeight="Bold"
                  Foreground="#333333"
                  Margin="0,0,0,10"/>

        <!-- Search Box -->
        <Border Grid.Row="1"
               Background="White"
               BorderBrush="#CCCCCC"
               BorderThickness="1"
               CornerRadius="4"
               Padding="8,6"
               Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"
                        x:Name="SearchTextBox"
                        BorderThickness="0"
                        Background="Transparent"
                        VerticalAlignment="Center"
                        TextChanged="SearchTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Search shortcuts..." Foreground="#AAAAAA" Margin="2,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
        </Border>

        <!-- Shortcuts List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ShortcutsPanel">

                <!-- General Commands -->
                <TextBlock Text="General" Style="{StaticResource CategoryHeaderStyle}"/>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="S" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Save Layout" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Z" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Undo" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Y" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Redo" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <!-- Selection -->
                <TextBlock Text="Selection" Style="{StaticResource CategoryHeaderStyle}"/>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="A" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Select All" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Del" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Delete Selected" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <!-- Clipboard -->
                <TextBlock Text="Clipboard" Style="{StaticResource CategoryHeaderStyle}"/>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="C" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Copy" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="X" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Cut" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="V" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Paste" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="D" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Duplicate" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <!-- Movement -->
                <TextBlock Text="Movement" Style="{StaticResource CategoryHeaderStyle}"/>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Arrow Keys" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Move element 1px" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Shift" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Arrow Keys" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Move element 10px" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <!-- Grouping -->
                <TextBlock Text="Grouping" Style="{StaticResource CategoryHeaderStyle}"/>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="G" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Group Selected Elements" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Ctrl" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="Shift" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                        <TextBlock Text="+" Margin="2,0" VerticalAlignment="Center"/>
                        <Border Style="{StaticResource ShortcutKeyStyle}">
                            <TextBlock Text="G" Style="{StaticResource ShortcutTextStyle}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="Ungroup Selected Group" Style="{StaticResource DescriptionStyle}"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="3"
               Content="Close"
               HorizontalAlignment="Right"
               Padding="30,10"
               Margin="0,15,0,0"
               Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="4"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#005A9E"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
