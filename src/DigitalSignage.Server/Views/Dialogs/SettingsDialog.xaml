<Window x:Class="DigitalSignage.Server.Views.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings - Digital Signage Server"
        Width="800" Height="650"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Warning Button Style -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Foreground" Value="#FF6B00"/>
            <Setter Property="BorderBrush" Value="#FF6B00"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TabControl for Settings Categories -->
        <TabControl Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="1">

            <!-- Server Settings Tab -->
            <TabItem Header="Server">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Server Configuration" Style="{StaticResource SectionHeader}"/>

                        <TextBlock Text="WebSocket Port:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="Auto-select alternative port if main port is in use"
                                  IsChecked="{Binding AutoSelectPort}"/>

                        <TextBlock Text="Alternative Ports (comma-separated):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding AlternativePorts, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="WebSocket Endpoint Path:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding EndpointPath, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="SSL/TLS Configuration" Style="{StaticResource SectionHeader}"/>

                        <CheckBox Content="Enable SSL/TLS (WSS)"
                                  IsChecked="{Binding EnableSsl}"/>

                        <TextBlock Text="Certificate Path (.pfx file):" Style="{StaticResource SettingLabel}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding CertificatePath, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Grid.Column="1" Content="Browse..."
                                    Command="{Binding BrowseCertificateCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="5,5,0,10"
                                    Padding="10,5"/>
                        </Grid>

                        <TextBlock Text="Certificate Thumbprint (Windows Certificate Store):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding CertificateThumbprint, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Certificate Password:" Style="{StaticResource SettingLabel}"/>
                        <PasswordBox x:Name="CertificatePasswordBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Advanced Settings" Style="{StaticResource SectionHeader}"/>

                        <TextBlock Text="Max Message Size (bytes):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding MaxMessageSize, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Client Heartbeat Timeout (seconds):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding ClientHeartbeatTimeout, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Database Settings Tab -->
            <TabItem Header="Database">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Database Connection" Style="{StaticResource SectionHeader}"/>

                        <TextBlock Text="Connection String:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding ConnectionString, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Backup Settings" Style="{StaticResource SectionHeader}"/>

                        <CheckBox Content="Enable automatic database backup"
                                  IsChecked="{Binding EnableAutoBackup}"/>

                        <TextBlock Text="Backup Interval (hours):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding BackupInterval, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding EnableAutoBackup}"/>

                        <TextBlock Text="Backup Retention (days):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding BackupRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding EnableAutoBackup}"/>

                        <TextBlock Text="Backup Directory:" Style="{StaticResource SettingLabel}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding BackupPath, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding EnableAutoBackup}"/>
                            <Button Grid.Column="1" Content="Browse..."
                                    Command="{Binding BrowseBackupPathCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    IsEnabled="{Binding EnableAutoBackup}"
                                    Margin="5,5,0,10"
                                    Padding="10,5"/>
                        </Grid>

                        <TextBlock Text="Connection Pool Settings" Style="{StaticResource SectionHeader}"/>

                        <CheckBox Content="Enable connection pooling"
                                  IsChecked="{Binding EnablePooling}"/>

                        <TextBlock Text="Minimum Pool Size:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding MinPoolSize, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding EnablePooling}"/>

                        <TextBlock Text="Maximum Pool Size:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding MaxPoolSize, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding EnablePooling}"/>

                        <TextBlock Text="Connection Timeout (seconds):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding ConnectionTimeout, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Command Timeout (seconds):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding CommandTimeout, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Logging Settings Tab -->
            <TabItem Header="Logging">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Log Level Configuration" Style="{StaticResource SectionHeader}"/>

                        <TextBlock Text="Minimum Log Level:" Style="{StaticResource SettingLabel}"/>
                        <ComboBox SelectedItem="{Binding MinimumLogLevel}">
                            <ComboBoxItem Content="Trace"/>
                            <ComboBoxItem Content="Debug"/>
                            <ComboBoxItem Content="Information"/>
                            <ComboBoxItem Content="Warning"/>
                            <ComboBoxItem Content="Error"/>
                            <ComboBoxItem Content="Critical"/>
                        </ComboBox>

                        <TextBlock Text="Log Outputs" Style="{StaticResource SectionHeader}"/>

                        <CheckBox Content="Enable console logging"
                                  IsChecked="{Binding EnableConsoleLogging}"/>

                        <CheckBox Content="Enable debug output logging"
                                  IsChecked="{Binding EnableDebugLogging}"/>

                        <TextBlock Text="File Logging Settings" Style="{StaticResource SectionHeader}"/>

                        <TextBlock Text="Log File Path:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding LogFilePath, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True"/>

                        <TextBlock Text="Maximum Log File Size (MB):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding MaxLogFileSizeMB, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Retained Log File Count:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding RetainedLogFileCount, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   FontSize="11"
                                   Margin="0,10,0,0">
                            Note: Log files are automatically rotated daily. Old files are deleted after the retention period expires.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Performance Tab -->
            <TabItem Header="Performance">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Query Cache Settings" Style="{StaticResource SectionHeader}"/>

                        <CheckBox Content="Enable query result caching"
                                  IsChecked="{Binding EnableQueryCaching}"/>

                        <TextBlock Text="Default Cache Duration (seconds):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding DefaultCacheDuration, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding EnableQueryCaching}"/>

                        <TextBlock Text="Maximum Cache Entries:" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding MaxCacheEntries, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding EnableQueryCaching}"/>

                        <CheckBox Content="Enable cache statistics"
                                  IsChecked="{Binding EnableCacheStatistics}"
                                  IsEnabled="{Binding EnableQueryCaching}"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   FontSize="11"
                                   Margin="0,10,0,0">
                            Query caching improves performance by storing frequently accessed data in memory.
                            Cached data is automatically refreshed when it expires or when the underlying data changes.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Discovery Tab -->
            <TabItem Header="Discovery">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Network Discovery Settings" Style="{StaticResource SectionHeader}"/>

                        <CheckBox Content="Enable mDNS (Multicast DNS) discovery"
                                  IsChecked="{Binding EnableMdns}"/>

                        <CheckBox Content="Enable UDP broadcast discovery"
                                  IsChecked="{Binding EnableUdpBroadcast}"/>

                        <TextBlock Text="Discovery Interval (seconds):" Style="{StaticResource SettingLabel}"/>
                        <TextBox Text="{Binding DiscoveryInterval, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   FontSize="11"
                                   Margin="0,15,0,0">
                            Network discovery allows clients to automatically find the server on the local network.
                            mDNS works best on modern networks. UDP broadcast provides fallback compatibility.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Network Interface Tab -->
            <TabItem Header="Network">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Network Interface Selection" Style="{StaticResource SectionHeader}"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   FontSize="12"
                                   Margin="0,5,0,15">
                            Select the preferred network interface for WebSocket server binding and auto-discovery.
                            Leave blank for automatic selection (first available non-localhost interface).
                        </TextBlock>

                        <TextBlock Text="Available Network Interfaces:" Style="{StaticResource SettingLabel}"/>

                        <Grid Margin="0,5,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding AvailableNetworkInterfaces}"
                                      SelectedItem="{Binding SelectedNetworkInterface, Mode=TwoWay}"
                                      Margin="0,0,5,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding IpAddress}" FontSize="11" Foreground="#666666"/>
                                            <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#999999"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button Grid.Column="1"
                                    Content="Refresh"
                                    Command="{Binding RefreshNetworkInterfacesCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="10,5"
                                    Margin="0"/>
                        </Grid>

                        <TextBlock Text="Selected Interface Details" Style="{StaticResource SectionHeader}"/>

                        <Grid Margin="0,5,0,10" Visibility="{Binding SelectedNetworkInterface, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedNetworkInterface.Name}" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="IP Address:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedNetworkInterface.IpAddress}" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="MAC Address:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedNetworkInterface.MacAddress}" Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedNetworkInterface.InterfaceType}" Margin="0,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Description:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedNetworkInterface.Description}" Margin="0,5" TextWrapping="Wrap"/>
                        </Grid>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#FF6B00"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Margin="0,15,0,0">
                            Important: Changes to network interface settings require application restart to take effect.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Windows Service Tab -->
            <TabItem Header="Windows Service">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Windows Service Management" Style="{StaticResource SectionHeader}"/>

                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   FontSize="12"
                                   Margin="0,5,0,15">
                            Install the Digital Signage Server as a Windows Service to run automatically on system startup without user login.
                            This requires Administrator privileges.
                        </TextBlock>

                        <!-- Administrator Status -->
                        <Border Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="1"
                                CornerRadius="4" Padding="10" Margin="0,0,0,15"
                                Visibility="{Binding IsAdministrator, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" VerticalAlignment="Center">
                                    <Run Text="Not running as Administrator." FontWeight="SemiBold"/>
                                    <LineBreak/>
                                    <Run Text="Please restart the application as Administrator to manage Windows Service."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Service Status Display -->
                        <TextBlock Text="Service Status" Style="{StaticResource SectionHeader}"/>

                        <Grid Margin="0,5,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Current Status:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ServiceStatus}" VerticalAlignment="Center" FontSize="14"/>
                            <Button Grid.Column="2" Content="Refresh Status"
                                    Command="{Binding RefreshServiceStatusCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="10,5"/>
                        </Grid>

                        <CheckBox Content="Service is installed"
                                  IsChecked="{Binding IsServiceInstalled, Mode=OneWay}"
                                  IsEnabled="False"
                                  Margin="0,0,0,15"/>

                        <!-- Service Management Actions -->
                        <TextBlock Text="Service Actions" Style="{StaticResource SectionHeader}"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Install Service Button -->
                            <Button Grid.Row="0" Grid.Column="0"
                                    Content="Install as Windows Service"
                                    Command="{Binding InstallServiceCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="15,10"
                                    IsEnabled="{Binding CanInstallService}"/>

                            <!-- Uninstall Service Button -->
                            <Button Grid.Row="0" Grid.Column="2"
                                    Content="Uninstall Windows Service"
                                    Command="{Binding UninstallServiceCommand}"
                                    Style="{StaticResource WarningButton}"
                                    Padding="15,10"
                                    IsEnabled="{Binding CanUninstallService}"/>

                            <!-- Start Service Button -->
                            <Button Grid.Row="2" Grid.Column="0"
                                    Content="Start Service"
                                    Command="{Binding StartServiceCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="15,10"
                                    IsEnabled="{Binding CanStartService}"/>

                            <!-- Stop Service Button -->
                            <Button Grid.Row="2" Grid.Column="2"
                                    Content="Stop Service"
                                    Command="{Binding StopServiceCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="15,10"
                                    IsEnabled="{Binding CanStopService}"/>
                        </Grid>

                        <!-- Service Information -->
                        <TextBlock Text="Service Information" Style="{StaticResource SectionHeader}" Margin="0,20,0,5"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Service Name:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="DigitalSignageServer" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Display Name:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Digital Signage Server" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Startup Type:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Automatic" Margin="0,5"/>
                        </Grid>

                        <!-- Important Notes -->
                        <TextBlock Text="Important Notes" Style="{StaticResource SectionHeader}" Margin="0,20,0,5"/>

                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • Administrator privileges are required for all service operations
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • The service will start automatically on system boot
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • The service runs in the background without a UI
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • Logs are written to the configured log directory
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • You can view service status in Windows Services (services.msc)
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About Tab -->
            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Digital Signage Server" FontSize="18" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock Text="Version 1.0.0" FontSize="13" Foreground="#666666" Margin="0,0,0,20"/>

                        <TextBlock Text="Configuration File Location" Style="{StaticResource SectionHeader}"/>
                        <TextBlock Text="appsettings.json" FontFamily="Consolas"
                                   Foreground="#0066CC" Margin="0,5,0,15"/>

                        <TextBlock Text="Important Notes" Style="{StaticResource SectionHeader}"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • Changes require application restart to take effect
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • Always backup your configuration before making changes
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • Invalid settings may prevent the server from starting
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            • Port changes require URL ACL reconfiguration
                        </TextBlock>

                        <TextBlock Text="Support" Style="{StaticResource SectionHeader}"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#666666" FontSize="12" Margin="0,5,0,0">
                            For help and documentation, visit the project repository or run diagnose-server.ps1 for troubleshooting.
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="1" Background="#FAFAFA" BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,1" Padding="10" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="●" Foreground="#FF6B00" FontSize="16"
                           VerticalAlignment="Center" Margin="0,0,5,0"
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                           FontSize="12" Foreground="#666666"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Reset to Defaults"
                    Command="{Binding ResetToDefaultsCommand}"
                    Style="{StaticResource WarningButton}"
                    Margin="0,0,10,0"/>

            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,10,0"/>

            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButton}"
                    IsEnabled="{Binding HasUnsavedChanges}"/>
        </StackPanel>
    </Grid>
</Window>
