<Window x:Class="DigitalSignage.Server.Views.Dialogs.VariableBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DigitalSignage.Server.ViewModels"
        mc:Ignorable="d"
        Title="Template Variable Browser"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        d:DataContext="{d:DesignInstance Type=vm:VariableBrowserViewModel}">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Available Template Variables"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Search Box -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Search:"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Padding="5"/>
        </Grid>

        <!-- Variables List -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredVariables}"
                  SelectedItem="{Binding SelectedVariable}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category"
                                    Binding="{Binding Category}"
                                    Width="120"/>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#2196F3"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}"
                                    Width="*"/>
                <DataGridTextColumn Header="Type"
                                    Binding="{Binding Type}"
                                    Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Syntax Preview -->
        <GroupBox Grid.Row="3"
                  Header="Syntax"
                  Margin="0,0,0,10"
                  Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Text="{Binding VariableSyntax, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#F5F5F5"
                         Padding="8"
                         MinHeight="60"
                         VerticalScrollBarVisibility="Auto"/>

                <TextBlock Grid.Row="1"
                           Margin="0,5,0,0"
                           FontSize="11"
                           Foreground="Gray"
                           TextWrapping="Wrap">
                    <Run Text="Tip: Use Scriban syntax for templates. Example: "/>
                    <Run FontFamily="Consolas" FontWeight="Bold">{{ variable_name }}</Run>
                    <Run Text=" or "/>
                    <Run FontFamily="Consolas" FontWeight="Bold">{{ for item in list }}...{{ end }}</Run>
                </TextBlock>
            </Grid>
        </GroupBox>

        <!-- Help Text -->
        <TextBlock Grid.Row="4"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"
                   FontSize="11"
                   Foreground="DarkBlue">
            <Run Text="Select a variable to view its syntax. Click 'Copy' to copy to clipboard or 'Insert' to use in your template."/>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Copy to Clipboard"
                    Command="{Binding CopyToClipboardCommand}"
                    Width="130"
                    Padding="10,5"
                    Margin="0,0,10,0"/>
            <Button Content="Insert"
                    Command="{Binding InsertVariableCommand}"
                    IsDefault="True"
                    Width="100"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Click="InsertButton_Click"/>
            <Button Content="Close"
                    IsCancel="True"
                    Width="100"
                    Padding="10,5"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
