<Window x:Class="DigitalSignage.Server.Views.Dialogs.DataSourceTextPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSignage.Server.Views.Dialogs"
        mc:Ignorable="d"
        Title="DataSource Text Properties - SQL Data with Template"
        Width="900" Height="750"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>     <!-- Content area -->
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Data Source Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Data Source" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding AvailableDataSources}"
                                      SelectedItem="{Binding SelectedDataSource, Mode=TwoWay}"
                                      DisplayMemberPath="Name"
                                      Margin="0,0,8,0"
                                      Padding="8"
                                      FontSize="14">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TableName}" FontSize="11" Foreground="#666"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button Grid.Column="1" Content="Refresh"
                                    Command="{Binding RefreshDataSourcesCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,8"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Template Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Template Configuration" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Template -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Template:" VerticalAlignment="Top" Margin="0,8,0,8"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding Template, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="150"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     Padding="8"
                                     Margin="0,0,0,8"/>

                            <!-- Row Index -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Row Index:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBox Text="{Binding RowIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100" Padding="8"/>
                                <TextBlock Text="(0 = first row, use loop in template for all rows)"
                                           VerticalAlignment="Center"
                                           Foreground="#666"
                                           FontSize="11"
                                           Margin="12,0,0,0"/>
                            </StackPanel>

                            <!-- Update Interval -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Update Interval:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding UpdateInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100" Padding="8"/>
                                <TextBlock Text="seconds"
                                           VerticalAlignment="Center"
                                           Foreground="#666"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Template Help -->
                        <Expander Header="Template Help &amp; Examples" Margin="0,12,0,0">
                            <Border Background="#F9F9F9" BorderBrush="#DDDDDD" BorderThickness="1"
                                    CornerRadius="4" Padding="12" Margin="0,8,0,0">
                                <TextBlock Text="{Binding TemplateHelp}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </Expander>
                    </StackPanel>
                </Border>

                <!-- Preview Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Preview" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left"/>
                            <Button Content="Refresh Preview"
                                    Command="{Binding UpdatePreviewCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,6"
                                    HorizontalAlignment="Right"/>
                        </Grid>

                        <Border Background="#F9F9F9" BorderBrush="#DDDDDD" BorderThickness="1"
                                CornerRadius="4" Padding="12">
                            <StackPanel>
                                <TextBlock Text="Rendered Output:"
                                           FontWeight="SemiBold"
                                           FontSize="11"
                                           Foreground="#666"
                                           Margin="0,0,0,8"/>
                                <Border Background="White"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        Padding="12"
                                        MinHeight="60">
                                    <TextBlock Text="{Binding PreviewResult}"
                                               TextWrapping="Wrap"
                                               FontFamily="{Binding FontFamily}"
                                               FontSize="{Binding FontSize}"
                                               Foreground="{Binding TextColor}"/>
                                </Border>

                                <!-- Error Display -->
                                <Border Background="#FFEBEE"
                                        BorderBrush="#EF5350"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,8,0,0"
                                        Visibility="{Binding HasPreviewError, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Template Error:"
                                                   FontWeight="Bold"
                                                   Foreground="#C62828"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding PreviewError}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#C62828"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Text Formatting Section -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="4" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Text Formatting" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Font Family:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      SelectedValue="{Binding FontFamily, Mode=TwoWay}"
                                      Padding="8"
                                      Margin="0,0,0,8">
                                <ComboBoxItem Content="Arial" IsSelected="True"/>
                                <ComboBoxItem Content="Calibri"/>
                                <ComboBoxItem Content="Times New Roman"/>
                                <ComboBoxItem Content="Courier New"/>
                                <ComboBoxItem Content="Verdana"/>
                                <ComboBoxItem Content="Tahoma"/>
                            </ComboBox>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Font Size:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"
                                     Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Text Color:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding TextColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"
                                     Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Text Align:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      SelectedValue="{Binding TextAlign, Mode=TwoWay}"
                                      Padding="8">
                                <ComboBoxItem Content="left" IsSelected="True"/>
                                <ComboBoxItem Content="center"/>
                                <ComboBoxItem Content="right"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="OK"
                    Width="100"
                    Click="OK_Click"
                    IsDefault="True"
                    IsEnabled="{Binding CanSave}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,0,12,0"/>
            <Button Content="Cancel"
                    Width="100"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
