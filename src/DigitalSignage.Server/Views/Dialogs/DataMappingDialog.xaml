<Window x:Class="DigitalSignage.Server.Views.Dialogs.DataMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DigitalSignage.Server.ViewModels"
        xmlns:converters="clr-namespace:DigitalSignage.Server.Converters"
        mc:Ignorable="d"
        Title="Visual Data Mapping"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        d:DataContext="{d:DesignInstance Type=vm:DataMappingViewModel}">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#BDC3C7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Visual Data Mapping"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2C3E50" />
            <TextBlock Text="Map data source fields to layout elements for dynamic content"
                       FontSize="12"
                       Foreground="#7F8C8D"
                       Margin="0,4,0,0" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>

            <!-- Available Data Fields -->
            <Border Grid.Column="0" Style="{StaticResource SectionBorder}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Available Data Fields"
                               Style="{StaticResource HeaderTextStyle}" />

                    <TextBlock DockPanel.Dock="Top"
                               Text="Fields from query results"
                               FontSize="11"
                               Foreground="#95A5A6"
                               Margin="0,0,0,8" />

                    <ListBox ItemsSource="{Binding AvailableDataFields}"
                             SelectedItem="{Binding SelectedDataField}"
                             BorderThickness="1"
                             BorderBrush="#BDC3C7">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding FieldName}"
                                               FontWeight="SemiBold"
                                               FontSize="13" />

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="{Binding DataType}"
                                                   FontSize="11"
                                                   Foreground="#3498DB"
                                                   FontStyle="Italic"
                                                   Margin="0,0,8,0" />
                                        <TextBlock Text="Sample: "
                                                   FontSize="11"
                                                   Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding SampleValue}"
                                                   FontSize="11"
                                                   Foreground="#7F8C8D"
                                                   MaxWidth="150"
                                                   TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Mapping Buttons -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="8,0">
                <Button Content="Add Mapping â†’"
                        Command="{Binding AddMappingCommand}"
                        ToolTip="Map selected field to selected element" />
            </StackPanel>

            <!-- Available Elements -->
            <Border Grid.Column="2" Style="{StaticResource SectionBorder}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Available Elements"
                               Style="{StaticResource HeaderTextStyle}" />

                    <TextBlock DockPanel.Dock="Top"
                               Text="Mappable elements in layout"
                               FontSize="11"
                               Foreground="#95A5A6"
                               Margin="0,0,0,8" />

                    <ListBox ItemsSource="{Binding AvailableElements}"
                             SelectedItem="{Binding SelectedElement}"
                             BorderThickness="1"
                             BorderBrush="#BDC3C7">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding ElementName}"
                                               FontWeight="SemiBold"
                                               FontSize="13" />

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="{Binding ElementType}"
                                                   FontSize="11"
                                                   Foreground="#9B59B6"
                                                   FontStyle="Italic"
                                                   Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding CurrentBinding}"
                                                   FontSize="11"
                                                   Foreground="#E67E22"
                                                   Visibility="{Binding CurrentBinding, Converter={x:Static converters:NullToVisibilityConverter.Instance}}" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="3"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          Margin="4,0" />

            <!-- Current Mappings -->
            <Border Grid.Column="4" Style="{StaticResource SectionBorder}">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Current Mappings"
                                   Style="{StaticResource HeaderTextStyle}"
                                   Margin="0" />
                        <TextBlock Text="{Binding CurrentMappings.Count, StringFormat=' ({0})'}"
                                   FontSize="12"
                                   Foreground="#95A5A6"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0" />
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Bottom" Margin="0,8,0,0">
                        <Button Content="Remove Selected"
                                Command="{Binding RemoveMappingCommand}"
                                Background="#E74C3C"
                                Foreground="White" />
                        <Button Content="Clear All"
                                Command="{Binding ClearAllMappingsCommand}"
                                Background="#95A5A6"
                                Foreground="White" />
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding CurrentMappings}"
                              SelectedItem="{Binding SelectedMapping}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              BorderThickness="1"
                              BorderBrush="#BDC3C7"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#ECF0F1"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Element"
                                                Binding="{Binding ElementName}"
                                                Width="*" />
                            <DataGridTextColumn Header="Data Field"
                                                Binding="{Binding DataField}"
                                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#ECF0F1"
                BorderBrush="#BDC3C7"
                BorderThickness="0,1,0,0"
                Padding="8"
                Margin="-12,12,-12,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           Text="Status:"
                           FontWeight="SemiBold"
                           Margin="0,0,8,0" />
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#2C3E50"
                           TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Save Mappings"
                    Command="{Binding SaveMappingsCommand}"
                    Background="#27AE60"
                    Foreground="White"
                    Click="SaveButton_Click" />
            <Button Content="Cancel"
                    IsCancel="True"
                    Background="#95A5A6"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
