<UserControl x:Class="DigitalSignage.Server.Views.LayersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DigitalSignage.Server.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="250">

    <UserControl.Resources>
        <!-- Note: ElementTypeIconConverter should be defined in MainWindow or App.xaml resources -->
    </UserControl.Resources>

    <Border Background="White" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
        <DockPanel>
            <Border DockPanel.Dock="Top"
                   Background="#F5F5F5"
                   BorderBrush="#DDDDDD"
                   BorderThickness="0,0,0,1">
                <TextBlock Text="Layers"
                          FontSize="14"
                          FontWeight="Bold"
                          Padding="12,8"/>
            </Border>

            <!-- Search Box -->
            <Border DockPanel.Dock="Top"
                   Background="White"
                   BorderBrush="#DDDDDD"
                   BorderThickness="0,0,0,1"
                   Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="12" Margin="4,0,8,0" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                            x:Name="SearchTextBox"
                            BorderThickness="1"
                            BorderBrush="#CCCCCC"
                            Background="White"
                            Padding="4"
                            VerticalAlignment="Center"
                            TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Search layers..." Foreground="#AAAAAA" Margin="4,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <ListBox ItemsSource="{Binding Layers}"
                    SelectedItem="{Binding SelectedLayer}"
                    Margin="0"
                    BorderThickness="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                               BorderThickness="0,0,0,1"
                               BorderBrush="#EEEEEE"
                               Padding="6,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Thumbnail -->
                                <Border Grid.Column="0"
                                       Width="32"
                                       Height="32"
                                       BorderBrush="#CCCCCC"
                                       BorderThickness="1"
                                       CornerRadius="3"
                                       Margin="0,0,8,0"
                                       Background="#F5F5F5">
                                    <TextBlock Text="{Binding Type, Converter={StaticResource ElementTypeIconConverter}}"
                                              FontSize="16"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- Type Icon (small) -->
                                <TextBlock Grid.Column="1"
                                          Text="{Binding Type, Converter={StaticResource ElementTypeIconConverter}}"
                                          FontSize="12"
                                          VerticalAlignment="Center"
                                          Margin="0,0,6,0"
                                          Width="16"
                                          TextAlignment="Center"
                                          Visibility="Collapsed"/>

                                <!-- Element Name and Info -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                              FontWeight="Medium"
                                              FontSize="11"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock FontSize="9"
                                              Foreground="#999999"
                                              TextTrimming="CharacterEllipsis">
                                        <Run Text="{Binding Type}"/>
                                        <Run Text=" â€¢ Z:"/>
                                        <Run Text="{Binding ZIndex}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Move Up Button -->
                                <Button Grid.Column="3"
                                       Content="â–²"
                                       Command="{Binding DataContext.MoveLayerUpCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                       CommandParameter="{Binding}"
                                       Width="20"
                                       Height="20"
                                       Padding="0"
                                       FontSize="7"
                                       Margin="0,0,2,0"
                                       ToolTip="Move Up"
                                       Background="Transparent"
                                       BorderThickness="0"/>

                                <!-- Move Down Button -->
                                <Button Grid.Column="4"
                                       Content="â–¼"
                                       Command="{Binding DataContext.MoveLayerDownCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                       CommandParameter="{Binding}"
                                       Width="20"
                                       Height="20"
                                       Padding="0"
                                       FontSize="7"
                                       Margin="0,0,2,0"
                                       ToolTip="Move Down"
                                       Background="Transparent"
                                       BorderThickness="0"/>

                                <!-- Lock Toggle -->
                                <Button Grid.Column="5"
                                       Command="{Binding DataContext.ToggleLayerLockCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                       CommandParameter="{Binding}"
                                       Width="20"
                                       Height="20"
                                       Padding="0"
                                       FontSize="10"
                                       Margin="0,0,2,0"
                                       ToolTip="Toggle Lock"
                                       Background="Transparent"
                                       BorderThickness="0">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="ðŸ”“"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding [IsLocked], FallbackValue=False}" Value="True">
                                                        <Setter Property="Text" Value="ðŸ”’"/>
                                                        <Setter Property="Opacity" Value="1.0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>

                                <!-- Visibility Toggle -->
                                <Button Grid.Column="6"
                                       Command="{Binding DataContext.ToggleLayerVisibilityCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                       CommandParameter="{Binding}"
                                       Width="20"
                                       Height="20"
                                       Padding="0"
                                       FontSize="10"
                                       ToolTip="Toggle Visibility"
                                       Background="Transparent"
                                       BorderThickness="0">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="ðŸ‘"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding [IsVisible], FallbackValue=True}" Value="False">
                                                        <Setter Property="Text" Value="ðŸš«"/>
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </DockPanel>
    </Border>
</UserControl>
