<Window x:Class="DigitalSignage.Server.Views.DatabaseConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Database Connection"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="SQL Server Connection"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Server -->
                <TextBlock Text="Server:" Margin="0,8,0,4"/>
                <TextBox x:Name="ServerTextBox"
                         Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Server name or IP address (e.g., localhost or 192.168.1.100)"/>

                <!-- Database -->
                <TextBlock Text="Database:" Margin="0,12,0,4"/>
                <TextBox x:Name="DatabaseTextBox"
                         Text="{Binding Database, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Authentication Type -->
                <TextBlock Text="Authentication:" Margin="0,12,0,4"/>
                <ComboBox x:Name="AuthTypeComboBox"
                          SelectedIndex="{Binding AuthTypeIndex}"
                          SelectionChanged="AuthType_Changed">
                    <ComboBoxItem Content="Windows Authentication"/>
                    <ComboBoxItem Content="SQL Server Authentication"/>
                </ComboBox>

                <!-- SQL Authentication Fields -->
                <StackPanel x:Name="SqlAuthPanel" Visibility="Collapsed">
                    <TextBlock Text="Username:" Margin="0,12,0,4"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Password:" Margin="0,12,0,4"/>
                    <PasswordBox x:Name="PasswordBox"
                                 PasswordChanged="Password_Changed"/>
                </StackPanel>

                <!-- Advanced Options -->
                <Expander Header="Advanced Options" Margin="0,16,0,0">
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="Connection Timeout (seconds):" Margin="0,8,0,4"/>
                        <TextBox Text="{Binding ConnectionTimeout, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="Encrypt Connection"
                                  IsChecked="{Binding Encrypt}"
                                  Margin="0,12,0,0"/>

                        <CheckBox Content="Trust Server Certificate"
                                  IsChecked="{Binding TrustServerCertificate}"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Expander>

                <!-- Connection String Preview -->
                <TextBlock Text="Connection String:" Margin="0,16,0,4" FontWeight="SemiBold"/>
                <Border Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="8"
                        CornerRadius="2">
                    <TextBlock Text="{Binding ConnectionString}"
                               TextWrapping="Wrap"
                               FontFamily="Consolas"
                               FontSize="11"/>
                </Border>

                <!-- Test Result -->
                <Border x:Name="TestResultBorder"
                        Margin="0,12,0,0"
                        Padding="12"
                        CornerRadius="4"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TestResultIcon"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock x:Name="TestResultText"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Test Connection"
                    Click="TestConnection_Click"
                    Padding="16,8"
                    Margin="0,0,8,0"/>
            <Button Content="OK"
                    Click="OK_Click"
                    IsDefault="True"
                    Style="{StaticResource PrimaryButton}"
                    Padding="16,8"
                    Margin="0,0,8,0"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"
                    Padding="16,8"/>
        </StackPanel>
    </Grid>
</Window>
