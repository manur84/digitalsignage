<Window x:Class="DigitalSignage.Server.Views.NewLayoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Layout"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Create New Layout"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="Enter the details for your new layout. You can customize all settings later in the designer."
                   FontSize="12"
                   Foreground="#666666"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="2">
            <!-- Layout Name -->
            <TextBlock Text="Layout Name *"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <TextBox Text="{Binding LayoutName, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="14"
                    Padding="10"
                    Margin="0,0,0,20"/>

            <!-- Description -->
            <TextBlock Text="Description (optional)"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="14"
                    Padding="10"
                    Height="60"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,20"/>

            <!-- Resolution -->
            <TextBlock Text="Resolution *"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <ComboBox ItemsSource="{Binding AvailableResolutions}"
                     SelectedItem="{Binding SelectedResolution}"
                     FontSize="14"
                     Padding="10"
                     Margin="0,0,0,20">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Background Color -->
            <TextBlock Text="Background Color"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                        Text="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="14"
                        Padding="10"
                        Margin="0,0,10,0"/>

                <Border Grid.Column="1"
                       Width="50"
                       Height="38"
                       BorderBrush="#CCCCCC"
                       BorderThickness="1"
                       CornerRadius="3">
                    <Border.Background>
                        <SolidColorBrush Color="{Binding BackgroundColor}"/>
                    </Border.Background>
                </Border>
            </Grid>
        </StackPanel>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="3"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Create"
                    Command="{Binding CreateCommand}"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="120"
                    Height="40"
                    Background="White"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
