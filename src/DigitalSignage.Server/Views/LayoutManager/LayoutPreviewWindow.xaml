<Window x:Class="DigitalSignage.Server.Views.LayoutManager.LayoutPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Layout Vorschau"
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True"
        Background="Black"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#222" Padding="12" Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,12,0"/>
                <TextBlock Text="(Doppelklick oder ESC zum Schließen)"
                           Foreground="#CCCCCC"
                           VerticalAlignment="Center"/>
                <Button Content="Schließen"
                        Click="Close_Click"
                        HorizontalAlignment="Right"
                        Margin="12,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Background="White">
            <WebBrowser x:Name="Browser"/>
            <TextBlock x:Name="ErrorText"
                       Foreground="Red"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
