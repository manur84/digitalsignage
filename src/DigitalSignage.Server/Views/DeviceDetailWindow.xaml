<Window x:Class="DigitalSignage.Server.Views.DeviceDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="750"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        MinHeight="600"
        MinWidth="750">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding DeviceName}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                    <TextBlock Text="{Binding Hostname}"
                               FontSize="13"
                               Foreground="#666666"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border>
                        <Border.Style>
                            <Style TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Online">
                                        <Setter Property="Background" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Offline">
                                        <Setter Property="Background" Value="#F44336"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                        <Setter Property="Background" Value="#FF9800"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Status}"
                                   Foreground="White"
                                   FontWeight="Medium"
                                   FontSize="12"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Device Information Section -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Device Information"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="IP Address:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding IpAddress}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="MAC Address:" Style="{StaticResource LabelStyle}" Margin="12,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding MacAddress}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <!-- Row 2 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Model}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="OS Version:" Style="{StaticResource LabelStyle}" Margin="12,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding OsVersion}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <!-- Row 3 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Client Version:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ClientVersion}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Resolution:" Style="{StaticResource LabelStyle}" Margin="12,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Resolution}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <!-- Row 4 -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Group:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Group}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Location:" Style="{StaticResource LabelStyle}" Margin="12,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding Location}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <!-- Row 5 -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Assigned Layout:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding AssignedLayout}" Style="{StaticResource ValueStyle}"/>
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="Uptime:" Style="{StaticResource LabelStyle}" Margin="12,0,0,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Uptime}" Style="{StaticResource ValueStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Hardware Metrics Section -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Hardware Metrics"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- CPU -->
                        <Grid Margin="0,0,0,16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="CPU Usage" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueStyle}">
                                <Run Text="{Binding CpuUsage, StringFormat='{}{0:F1}%'}"/>
                                <Run Text=" | Temperature: "/>
                                <Run Text="{Binding CpuTemperature, StringFormat='{}{0:F1}Â°C'}"/>
                            </TextBlock>

                            <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                         Height="8"
                                         Margin="0,8,0,0"
                                         Value="{Binding CpuUsage}"
                                         Minimum="0"
                                         Maximum="100"
                                         Foreground="#4CAF50"/>
                        </Grid>

                        <!-- Memory -->
                        <Grid Margin="0,0,0,16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Memory Usage" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueStyle}">
                                <Run Text="{Binding MemoryUsageText}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding MemoryUsagePercent, StringFormat='{}{0:F1}%'}"/>
                                <Run Text=")"/>
                            </TextBlock>

                            <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                         Height="8"
                                         Margin="0,8,0,0"
                                         Value="{Binding MemoryUsagePercent}"
                                         Minimum="0"
                                         Maximum="100"
                                         Foreground="#2196F3"/>
                        </Grid>

                        <!-- Disk -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Disk Usage" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueStyle}">
                                <Run Text="{Binding DiskUsageText}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding DiskUsagePercent, StringFormat='{}{0:F1}%'}"/>
                                <Run Text=")"/>
                            </TextBlock>

                            <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                         Height="8"
                                         Margin="0,8,0,0"
                                         Value="{Binding DiskUsagePercent}"
                                         Minimum="0"
                                         Maximum="100"
                                         Foreground="#9C27B0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Network & Timestamps Section -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Network &amp; Connectivity"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Network Latency:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueStyle}" Margin="0,0,0,8">
                                <Run Text="{Binding NetworkLatency}"/>
                                <Run Text=" ms"/>
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Registered At:" Style="{StaticResource LabelStyle}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RegisteredAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Seen:" Style="{StaticResource LabelStyle}" Margin="0,0,0,16"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LastSeen, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Style="{StaticResource ValueStyle}" Margin="0,0,0,16"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Ping Test:" Style="{StaticResource LabelStyle}" VerticalAlignment="Top" Margin="0,4,0,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                                <Button Content="Ping Device"
                                        Command="{Binding PingDeviceCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Width="120"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding PingResult}"
                                           TextWrapping="Wrap"
                                           Foreground="#333333"
                                           FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="#666666"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="Auto-refresh (5s)"
                              IsChecked="{Binding IsAutoRefreshEnabled}"
                              Command="{Binding ToggleAutoRefreshCommand}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>
                    <Button Content="Refresh Now"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer Actions -->
        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Close"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
