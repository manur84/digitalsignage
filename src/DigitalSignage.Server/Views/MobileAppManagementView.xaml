<UserControl x:Class="DigitalSignage.Server.Views.MobileAppManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:DigitalSignage.Server.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityStandard"/>

        <!-- App Registration Status Color Converter -->
        <converters:AppRegistrationStatusToColorConverter x:Key="AppStatusToColor"/>

        <!-- Modern Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Mobile App Registrations"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333333"
                       VerticalAlignment="Center"/>

            <!-- Pending Count Badge -->
            <Border Background="#FF9800"
                    CornerRadius="12"
                    Padding="10,4"
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    Visibility="{Binding PendingCount, Converter={StaticResource BoolToVisibilityStandard}}">
                <TextBlock Text="{Binding PendingCount, StringFormat='{}{0} Pending'}"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="12"/>
            </Border>

            <!-- Refresh Button -->
            <Button Content="ðŸ”„ Refresh"
                    Command="{Binding LoadRegistrationsCommand}"
                    Background="#2196F3"
                    Foreground="White"
                    Padding="15,8"
                    Margin="0,0,0,0"
                    FontSize="13"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ActionButton}"/>
        </StackPanel>

        <!-- App List -->
        <Border Grid.Row="1"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Background="White">
            <DataGrid ItemsSource="{Binding Registrations}"
                      SelectedItem="{Binding SelectedRegistration, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      RowHeight="45"
                      FontSize="13"
                      AlternatingRowBackground="#F9F9F9"
                      RowBackground="White"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Device Name" Binding="{Binding DeviceName}" Width="*" MinWidth="150"/>
                    <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="100"/>
                    <DataGridTextColumn Header="App Version" Binding="{Binding AppVersion}" Width="100"/>

                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Status, Converter={StaticResource AppStatusToColor}}"
                                        CornerRadius="4"
                                        Padding="8,4">
                                    <TextBlock Text="{Binding Status}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Registered At"
                                        Binding="{Binding RegisteredAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                        Width="150"/>

                    <DataGridTextColumn Header="Last Seen"
                                        Binding="{Binding LastSeenAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                        Width="150"/>

                    <DataGridTextColumn Header="Authorized By" Binding="{Binding AuthorizedBy}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Details Panel -->
        <Border Grid.Row="2"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Background="White"
                Padding="20"
                Margin="0,15,0,0"
                Visibility="{Binding SelectedRegistration, Converter={StaticResource BoolToVisibilityStandard}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Device Details -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Device Details" FontWeight="Bold" FontSize="16" Foreground="#333333" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Device Identifier:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedRegistration.DeviceIdentifier}" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Notes:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRegistration.Notes}" TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>

                <!-- Permissions Section -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Permissions" FontWeight="Bold" FontSize="16" Foreground="#333333" Margin="0,0,0,10"/>

                    <CheckBox Content="ðŸ‘ View (Device List, Screenshots, Layouts)"
                              IsChecked="{Binding ViewPermission, Mode=TwoWay}"
                              Margin="0,5"
                              FontSize="13"/>

                    <CheckBox Content="ðŸŽ® Control (Restart, Commands, Volume)"
                              IsChecked="{Binding ControlPermission, Mode=TwoWay}"
                              Margin="0,5"
                              FontSize="13"/>

                    <CheckBox Content="âš™ Manage (Assign Layouts, Schedules)"
                              IsChecked="{Binding ManagePermission, Mode=TwoWay}"
                              Margin="0,5"
                              FontSize="13"/>
                </StackPanel>

                <!-- Status Info -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock FontSize="12" Foreground="#666666" TextWrapping="Wrap">
                        <Run Text="Status: " FontWeight="SemiBold"/>
                        <Run Text="{Binding SelectedRegistration.Status, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="#666666" TextWrapping="Wrap" Margin="0,5,0,0">
                        <Run Text="Registered: " FontWeight="SemiBold"/>
                        <Run Text="{Binding SelectedRegistration.RegisteredAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}', Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="#666666" TextWrapping="Wrap" Margin="0,5,0,0"
                               Visibility="{Binding SelectedRegistration.AuthorizedAt, Converter={StaticResource BoolToVisibilityStandard}}">
                        <Run Text="Authorized: " FontWeight="SemiBold"/>
                        <Run Text="{Binding SelectedRegistration.AuthorizedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}', Mode=OneWay}"/>
                        <Run Text=" by " FontWeight="SemiBold"/>
                        <Run Text="{Binding SelectedRegistration.AuthorizedBy, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Button Content="âœ“ APPROVE"
                            Command="{Binding ApproveCommand}"
                            Background="#0078D4"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Style="{StaticResource ActionButton}"/>

                    <Button Content="âœ— REJECT"
                            Command="{Binding RejectCommand}"
                            Background="#D13438"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Style="{StaticResource ActionButton}"/>

                    <Button Content="âŠ˜ REVOKE"
                            Command="{Binding RevokeCommand}"
                            Background="#CA5010"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Style="{StaticResource ActionButton}"/>

                    <Button Content="ðŸ—‘ DELETE"
                            Command="{Binding DeleteCommand}"
                            Background="#424242"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityStandard}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..."
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
