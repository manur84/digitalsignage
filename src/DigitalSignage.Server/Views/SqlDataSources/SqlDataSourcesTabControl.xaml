<UserControl x:Class="DigitalSignage.Server.Views.SqlDataSources.SqlDataSourcesTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:DigitalSignage.Server.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanConverter x:Key="InverseBool"/>
        <converters:BoolToVisibilityConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D3E50" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="SQL Data Sources" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Configure SQL Server connections and data sources for dynamic content"
                               FontSize="12" Foreground="#BDC3C7" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="+ New Data Source"
                        Command="{Binding NewDataSourceCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,8" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Saved Data Sources List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#ECF0F1" Padding="12,8" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                        <TextBlock Text="Saved Data Sources" FontWeight="SemiBold" FontSize="14"/>
                    </Border>

                    <ListBox Grid.Row="1" ItemsSource="{Binding DataSources}"
                             SelectedItem="{Binding SelectedDataSource}"
                             Margin="0" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="{Binding TableName}" FontSize="11" Foreground="#7F8C8D"/>
                                        <TextBlock Text=" â€¢ " FontSize="11" Foreground="#BDC3C7" Margin="4,0"/>
                                        <TextBlock FontSize="11" Foreground="#7F8C8D">
                                            <Run Text="{Binding CachedRowCount, Mode=OneWay}"/>
                                            <Run Text=" rows"/>
                                        </TextBlock>
                                        <Border Background="#27AE60" CornerRadius="2" Padding="4,1" Margin="6,0,0,0"
                                                Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="ACTIVE" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right Panel: Configuration -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Connection Panel -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                            CornerRadius="4" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="1. Database Connection" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <!-- Server -->
                                    <TextBlock Text="Server:" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                                    <!-- Database -->
                                    <TextBlock Text="Database:" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding Database, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                                    <!-- Auth Type -->
                                    <TextBlock Text="Authentication:" Margin="0,0,0,4"/>
                                    <ComboBox SelectedValue="{Binding AuthType}" Margin="0,0,0,12">
                                        <ComboBoxItem Content="Windows Authentication" Tag="WindowsAuthentication"/>
                                        <ComboBoxItem Content="SQL Server Authentication" Tag="SqlServerAuthentication"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <!-- Port -->
                                    <TextBlock Text="Port:" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                                    <!-- Username (conditional) -->
                                    <TextBlock Text="Username:" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                                    <!-- Password (conditional) -->
                                    <TextBlock Text="Password:" Margin="0,0,0,4"/>
                                    <PasswordBox x:Name="PasswordBox" Margin="0,0,0,12"/>
                                </StackPanel>
                            </Grid>

                            <!-- Connection Status & Buttons -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" Margin="0,0,12,0" FontWeight="SemiBold"/>
                                <Button Content="Connect" Command="{Binding ConnectCommand}"
                                        IsEnabled="{Binding IsConnecting, Converter={StaticResource InverseBool}}"
                                        Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVis}}"
                                        Style="{StaticResource PrimaryButton}" Padding="16,6" Margin="0,0,8,0"/>
                                <Button Content="Disconnect" Command="{Binding DisconnectCommand}"
                                        Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}"
                                        Style="{StaticResource SecondaryButton}" Padding="16,6"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table & Columns Selection -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                            CornerRadius="4" Padding="16" Margin="0,0,0,16"
                            IsEnabled="{Binding IsConnected}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Tables -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="2. Select Table" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <ListBox ItemsSource="{Binding Tables}"
                                         SelectedItem="{Binding SelectedTable}"
                                         Height="250" BorderBrush="#BDC3C7"/>
                            </StackPanel>

                            <!-- Columns -->
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="3. Select Columns" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <ListBox ItemsSource="{Binding Columns}" Height="250" BorderBrush="#BDC3C7">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected}" Margin="4,2">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Width="150"/>
                                                    <TextBlock Text="{Binding DataType}" Foreground="#7F8C8D" Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </CheckBox>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Query Configuration -->
                    <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
                            CornerRadius="4" Padding="16" Margin="0,0,0,16"
                            IsEnabled="{Binding IsConnected}">
                        <StackPanel>
                            <TextBlock Text="4. Configure Data Source" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Data Source Name:" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding DataSourceName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                                    <TextBlock Text="WHERE Clause (optional):" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding WhereClause, UpdateSourceTrigger=PropertyChanged}"
                                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                             ToolTip="Example: status = 'active' AND created_at > '2024-01-01'" Margin="0,0,0,12"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Refresh Interval (seconds):" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding RefreshInterval, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                                    <TextBlock Text="ORDER BY Clause (optional):" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding OrderByClause, UpdateSourceTrigger=PropertyChanged}"
                                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                             ToolTip="Example: created_at DESC, name ASC" Margin="0,0,0,12"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Max Rows:" Margin="0,0,0,4"/>
                                <TextBox Grid.Column="1" Text="{Binding MaxRows, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,16">
                        <Button Content="Edit Selected" Command="{Binding EditDataSourceCommand}"
                                Style="{StaticResource SecondaryButton}" Padding="16,8" Margin="0,0,8,0"/>
                        <Button Content="Delete Selected" Command="{Binding DeleteDataSourceCommand}"
                                Style="{StaticResource SecondaryButton}" Padding="16,8" Margin="0,0,8,0"/>
                        <Button Content="Toggle Active" Command="{Binding ToggleActiveCommand}"
                                Style="{StaticResource SecondaryButton}" Padding="16,8" Margin="0,0,16,0"/>
                        <Button Content="Save Data Source" Command="{Binding SaveDataSourceCommand}"
                                Style="{StaticResource PrimaryButton}" Padding="20,8" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="12,8" BorderBrush="#2C3E50" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                    <ProgressBar IsIndeterminate="True" Width="150" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Loading..." Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
