<Window x:Class="DigitalSignage.Server.Views.TemplateManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:entities="clr-namespace:DigitalSignage.Data.Entities;assembly=DigitalSignage.Data"
        mc:Ignorable="d"
        Title="Template Manager"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Category to String Converter -->
        <Style x:Key="CategoryBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEBEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Template Manager"
                       FontSize="24"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Create, edit, and manage layout templates"
                       FontSize="12"
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Template List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Templates"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <Button Content="+ New Template"
                                Command="{Binding CreateNewTemplateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Template List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Templates}"
                             SelectedItem="{Binding SelectedTemplate}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        Padding="10"
                                        Margin="0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Template Name -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Category Badge -->
                                        <Border Grid.Row="1"
                                                Style="{StaticResource CategoryBadgeStyle}"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="10"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Description}"
                                                   FontSize="11"
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"
                                                   MaxHeight="40"/>

                                        <!-- Info -->
                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock FontSize="10" Foreground="#999999">
                                                <Run Text="{Binding Resolution.Width, Mode=OneWay}"/>
                                                <Run Text="x"/>
                                                <Run Text="{Binding Resolution.Height, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="•" FontSize="10" Foreground="#999999" Margin="5,0"/>
                                            <TextBlock Text="{Binding UsageCount, StringFormat='Used {0}x'}"
                                                       FontSize="10"
                                                       Foreground="#999999"/>
                                            <TextBlock Text="•" FontSize="10" Foreground="#999999" Margin="5,0"
                                                       Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <TextBlock Text="Built-in"
                                                       FontSize="10"
                                                       Foreground="#FF9800"
                                                       FontWeight="SemiBold"
                                                       Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- List Footer - Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Refresh"
                                Command="{Binding LoadTemplatesCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="10,6"
                                Margin="0,0,5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Template Editor/Details -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <!-- Normal View (Not Editing) -->
                    <Grid Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <TextBlock Grid.Row="0"
                               Text="Template Details"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <!-- Template Details -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <StackPanel Visibility="{Binding SelectedTemplate, Converter={StaticResource InverseNullToVisibilityConverter}}">
                                <TextBlock Text="Name:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedTemplate.Name}" FontSize="14" Margin="0,0,0,15"/>

                                <TextBlock Text="Description:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedTemplate.Description}" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="Category:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedTemplate.Category}" FontSize="12" Margin="0,0,0,15"/>

                                <TextBlock Text="Resolution:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock FontSize="12" Margin="0,0,0,15">
                                    <Run Text="{Binding SelectedTemplate.Resolution.Width, Mode=OneWay}"/>
                                    <Run Text="x"/>
                                    <Run Text="{Binding SelectedTemplate.Resolution.Height, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock Text="Background Color:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <Border Width="30" Height="30" CornerRadius="3" BorderBrush="#CCCCCC" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding SelectedTemplate.BackgroundColor}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="{Binding SelectedTemplate.BackgroundColor}" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Usage Statistics:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedTemplate.UsageCount, StringFormat='Used {0} times'}" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedTemplate.LastUsedAt, StringFormat='Last used: {0:g}'}" FontSize="12" Margin="0,0,0,15"/>

                                <TextBlock Text="Elements JSON:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedTemplate.ElementsJson, Mode=OneWay}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Height="200"
                                         FontFamily="Consolas"
                                         FontSize="10"
                                         Background="#F9F9F9"
                                         Padding="5"/>
                            </StackPanel>

                            <!-- Empty State -->
                            <TextBlock Text="Select a template from the list to view details"
                                       FontSize="14"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SelectedTemplate, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </Grid>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Edit"
                                Command="{Binding EditTemplateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Duplicate"
                                Command="{Binding DuplicateTemplateCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Delete"
                                Command="{Binding DeleteTemplateCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Edit Mode -->
                <Grid Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Edit Header -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding SelectedTemplate, Converter={StaticResource NullToBoolConverter}, ConverterParameter='Edit Template|Create New Template'}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <!-- Edit Form -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Validation Message -->
                            <Border Background="#FFEBEE"
                                    BorderBrush="#D32F2F"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="10"
                                    Margin="0,0,0,15"
                                    Visibility="{Binding ValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding ValidationMessage}"
                                           Foreground="#D32F2F"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Name -->
                            <TextBlock Text="Template Name *" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTemplateName, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="12"
                                     Padding="8"
                                     Margin="0,0,0,15"/>

                            <!-- Description -->
                            <TextBlock Text="Description" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTemplateDescription, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="12"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="60"
                                     Margin="0,0,0,15"/>

                            <!-- Category -->
                            <TextBlock Text="Category" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding AvailableCategories}"
                                      SelectedItem="{Binding EditTemplateCategory}"
                                      FontSize="12"
                                      Padding="8"
                                      Margin="0,0,0,15"/>

                            <!-- Resolution -->
                            <TextBlock Text="Resolution" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBox Text="{Binding EditTemplateWidth, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100"
                                         FontSize="12"
                                         Padding="8"/>
                                <TextBlock Text="x" VerticalAlignment="Center" Margin="10,0"/>
                                <TextBox Text="{Binding EditTemplateHeight, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100"
                                         FontSize="12"
                                         Padding="8"/>
                            </StackPanel>

                            <!-- Background Color -->
                            <TextBlock Text="Background Color" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditTemplateBackgroundColor, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="12"
                                     Padding="8"
                                     Margin="0,0,0,15"/>

                            <!-- Template Content (JSON) -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Template Content (JSON) *" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                <Button Grid.Column="1"
                                        Content="Validate"
                                        Command="{Binding ValidateTemplateContentCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4"
                                        FontSize="10"
                                        Margin="0,0,0,5"/>
                            </Grid>
                            <TextBox Text="{Binding EditTemplateContent, UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Consolas"
                                     FontSize="10"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="200"
                                     Margin="0,0,0,10"/>

                            <!-- Preview Button -->
                            <Button Content="Generate Preview"
                                    Command="{Binding GeneratePreviewCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,10"/>

                            <!-- Preview Output -->
                            <TextBox Text="{Binding PreviewContent, Mode=OneWay}"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="10"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="150"
                                     Background="#F9F9F9"
                                     Visibility="{Binding PreviewContent, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Edit Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Save"
                                Command="{Binding SaveTemplateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Cancel"
                                Command="{Binding CancelEditCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer - Status Bar -->
        <Border Grid.Row="2"
                Background="#E0E0E0"
                CornerRadius="3"
                Padding="10,8"
                Margin="0,10,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="11"
                           Foreground="#666666"
                           VerticalAlignment="Center"/>
                <Button Content="Close"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="15,6"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
