<Window x:Class="DigitalSignage.Server.Views.DeviceManagement.DeviceWebInterfaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Device Web Interface" WindowState="Maximized" WindowStyle="None" Background="Black" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#222" Padding="8" Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Geraete Web Interface" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,16,0"/>
                    <TextBlock x:Name="UrlText" Foreground="LightGray" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Back" Width="60" Margin="0,0,8,0" Click="Back_Click" ToolTip="Zurueck"/>
                    <Button Content="Refresh" Width="70" Margin="0,0,8,0" Click="Refresh_Click" ToolTip="Neu laden (F5)"/>
                    <Button Content="Close" Width="70" Click="Close_Click" ToolTip="Schliessen (Esc)"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <wv2:WebView2 x:Name="WebView" Grid.Row="1" DefaultBackgroundColor="Black" />
    </Grid>
</Window>