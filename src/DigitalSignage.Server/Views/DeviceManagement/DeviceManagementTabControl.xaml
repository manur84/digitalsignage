<UserControl x:Class="DigitalSignage.Server.Views.DeviceManagement.DeviceManagementTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DigitalSignage.Server.Views"
             xmlns:converters="clr-namespace:DigitalSignage.Server.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Device List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="12,8">
                <Button Content="ðŸ”„ Refresh" Command="{Binding LoadClientsCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                <Button Content="âŒ Remove" Command="{Binding RemoveClientCommand}" Style="{StaticResource SecondaryButton}" Padding="8,6" ToolTip="Remove selected device"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1"
                     ItemsSource="{Binding Clients}"
                     SelectedItem="{Binding SelectedClient}"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     SelectionMode="Single"
                     Margin="12,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
                    <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="140"/>
                    <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="100"/>
                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="120"/>
                    <DataGridTemplateColumn Header="Status" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Online">
                                                        <Setter Property="Fill" Value="LimeGreen"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                        <Setter Property="Fill" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="12,8">
                <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="#666666"/>
            </Border>
        </Grid>

        <!-- Control Panel -->
        <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
            <ScrollViewer>
                <StackPanel Margin="16">
                    <TextBlock Text="Device Control" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <!-- Device Info -->
                    <TextBlock Text="Selected Device" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock Text="No device selected" Foreground="Gray" Margin="0,0,0,16">
                        <TextBlock.Visibility>
                            <Binding Path="SelectedClient">
                                <Binding.Converter>
                                    <converters:NullToVisibilityConverter/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.Visibility>
                    </TextBlock>

                    <StackPanel>
                        <StackPanel.Visibility>
                            <Binding Path="SelectedClient">
                                <Binding.Converter>
                                    <converters:NullToVisibilityConverter Invert="True"/>
                                </Binding.Converter>
                            </Binding>
                        </StackPanel.Visibility>

                        <TextBlock Text="{Binding SelectedClient.Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SelectedClient.IpAddress}" FontSize="12" Foreground="#666666" Margin="0,0,0,16"/>

                        <!-- Remote Commands -->
                        <TextBlock Text="Remote Commands" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <Button Content="ðŸ”„ Restart Device" Command="{Binding RestartClientCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="ðŸ”„ Restart App" Command="{Binding RestartClientAppCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="ðŸ“· Take Screenshot" Command="{Binding TakeScreenshotCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                        <!-- Screen Control -->
                        <TextBlock Text="Screen Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="ðŸ’¡ Screen On" Command="{Binding ScreenOnCommand}" Margin="0,0,8,0" Padding="12,6"/>
                            <Button Content="ðŸŒ™ Screen Off" Command="{Binding ScreenOffCommand}" Padding="12,6"/>
                        </StackPanel>

                        <!-- Volume Control -->
                        <TextBlock Text="Volume Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding VolumeLevel}" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1" Text="{Binding VolumeLevel, StringFormat='{}{0}%'}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                        </Grid>
                        <Button Content="ðŸ”Š Set Volume" Command="{Binding SetVolumeCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                        <!-- Layout Assignment -->
                        <TextBlock Text="Layout Assignment" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding AvailableLayouts}"
                                 DisplayMemberPath="Name"
                                 SelectedValuePath="Id"
                                 SelectedValue="{Binding SelectedLayoutId, Mode=TwoWay}"
                                 Margin="0,0,0,8"/>
                        <Button Content="ðŸ“‹ Assign Layout" Command="{Binding AssignLayoutCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                        <!-- Maintenance -->
                        <TextBlock Text="Maintenance" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Button Content="ðŸ—‘ Clear Cache" Command="{Binding ClearCacheCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch" Style="{StaticResource SecondaryButton}"/>

                        <!-- Client Configuration -->
                        <TextBlock Text="Client Configuration" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Configure client connection settings remotely. Client will reconnect with new settings."
                                  FontSize="11"
                                  Foreground="#666666"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="Server Host:" Margin="0,4,0,2"/>
                        <TextBox Text="{Binding ConfigServerHost, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Text="Server Port:" Margin="0,4,0,2"/>
                        <TextBox Text="{Binding ConfigServerPort, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <CheckBox Content="Use SSL/TLS" IsChecked="{Binding ConfigUseSSL}" Margin="0,0,0,4"/>
                        <CheckBox Content="Verify SSL Certificate" IsChecked="{Binding ConfigVerifySSL}" Margin="0,0,0,4"/>
                        <CheckBox Content="Full Screen Mode" IsChecked="{Binding ConfigFullScreen}" Margin="0,0,0,8"/>

                        <TextBlock Text="Log Level:" Margin="0,4,0,2"/>
                        <ComboBox ItemsSource="{Binding LogLevels}"
                                 SelectedItem="{Binding ConfigLogLevel}"
                                 Margin="0,0,0,12"/>

                        <Button Content="âš™ Configure Client"
                               Command="{Binding UpdateClientConfigCommand}"
                               Style="{StaticResource PrimaryButton}"
                               Margin="0,0,0,8"
                               HorizontalAlignment="Stretch"
                               ToolTip="Send configuration update to client"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
