<UserControl x:Class="DigitalSignage.Server.Views.DeviceManagement.DeviceManagementTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DigitalSignage.Server.Views"
             xmlns:converters="clr-namespace:DigitalSignage.Server.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Converters -->
        <converters:RelativeTimeConverter x:Key="RelativeTimeConverter"/>

        <!-- Professional DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="ModernDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="38"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="ModernDataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#BBDEFB"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content - Registered + Discovered Devices -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*" MinHeight="200"/>
            </Grid.RowDefinitions>

            <!-- Registered Devices Section -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="12,8">
                    <TextBlock Text="Registered Devices" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Button Content="ðŸ”„ Refresh" Command="{Binding LoadClientsCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                    <Button Content="âŒ Remove" Command="{Binding RemoveClientCommand}" Style="{StaticResource SecondaryButton}" Padding="8,6" ToolTip="Remove selected device"/>
                </StackPanel>

                <!-- DataGrid with Professional Styling -->
                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding Clients}"
                         SelectedItem="{Binding SelectedClient}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         Margin="12,0"
                         MouseDoubleClick="DataGrid_MouseDoubleClick"
                         Style="{StaticResource ModernDataGrid}"
                         ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                         RowStyle="{StaticResource ModernDataGridRow}"
                         CellStyle="{StaticResource ModernDataGridCell}">
                    <DataGrid.Columns>
                        <!-- Status Column with Badge -->
                        <DataGridTemplateColumn Header="Status" Width="Auto" MinWidth="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="10,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Online">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#9E9E9E"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                <Setter Property="Fill" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                <Setter Property="Fill" Value="#F44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" FontWeight="Medium">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#616161"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Device Name Column -->
                        <DataGridTextColumn Header="Device Name" Binding="{Binding DisplayName}" Width="1.5*" MinWidth="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- IP Address Column -->
                        <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="Auto" MinWidth="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#546E7A"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Resolution Column -->
                        <DataGridTemplateColumn Header="Resolution" Width="Auto" MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" Foreground="#546E7A">
                                        <Run Text="ðŸ“º"/>
                                        <Run>
                                            <Run.Text>
                                                <MultiBinding StringFormat=" {0}Ã—{1}">
                                                    <Binding Path="DeviceInfo.ScreenWidth"/>
                                                    <Binding Path="DeviceInfo.ScreenHeight"/>
                                                </MultiBinding>
                                            </Run.Text>
                                        </Run>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Last Seen Column with Relative Time -->
                        <DataGridTemplateColumn Header="Last Seen" Width="1*" MinWidth="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" ToolTip="{Binding LastSeen, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}">
                                        <Run Text="ðŸ•"/>
                                        <Run Text="{Binding LastSeen, Converter={StaticResource RelativeTimeConverter}}" Foreground="#757575"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Assigned Layout Column -->
                        <DataGridTextColumn Header="Assigned Layout" Binding="{Binding AssignedLayoutName, TargetNullValue='(None)', FallbackValue='(None)'}" Width="1.5*" MinWidth="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#424242"/>
                                    <Setter Property="FontStyle" Value="Italic"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AssignedLayoutName}" Value="{x:Null}">
                                            <Setter Property="Foreground" Value="#BDBDBD"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AssignedLayoutName}" Value="">
                                            <Setter Property="Foreground" Value="#BDBDBD"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Web Interface Column -->
                        <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ðŸŒ Open"
                                            Command="{Binding DataContext.OpenWebInterfaceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource PrimaryButton}"
                                            Padding="8,4"
                                            FontSize="12"
                                            ToolTip="Open web interface"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Status Bar -->
                <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ClientStatusSummary}"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="16,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="#CCCCCC" ResizeBehavior="PreviousAndNext"/>

            <!-- Discovered Devices Section -->
            <Grid Grid.Row="2" DataContext="{Binding DiscoveredDevices}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Border Grid.Row="0" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="0,2,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸ” Discovered Devices" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <Button Content="ðŸ” Scan Network" Command="{Binding ScanNetworkCommand}"
                                    Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"
                                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="âž• Register" Command="{Binding RegisterDeviceCommand}"
                                    Margin="0,0,8,0" Padding="8,6"
                                    ToolTip="Register selected discovered device"/>
                            <Button Content="ðŸ—‘ Clear" Command="{Binding ClearDiscoveredDevicesCommand}"
                                    Style="{StaticResource SecondaryButton}" Padding="8,6"
                                    ToolTip="Clear all discovered devices"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="8,0">
                            <Run Text="Found: "/>
                            <Run Text="{Binding DiscoveredDeviceCount, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text=" devices"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Discovered Devices DataGrid with Professional Styling -->
                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding DiscoveredDevices}"
                         SelectedItem="{Binding SelectedDiscoveredDevice}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         Margin="12,8"
                         Style="{StaticResource ModernDataGrid}"
                         ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                         RowStyle="{StaticResource ModernDataGridRow}"
                         CellStyle="{StaticResource ModernDataGridCell}">
                    <DataGrid.Columns>
                        <!-- Raspberry Pi Indicator Column -->
                        <DataGridTemplateColumn Header="" Width="Auto" MinWidth="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="ðŸ“" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="Likely Raspberry Pi">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLikelyRaspberryPi}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Hostname Column -->
                        <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="1.5*" MinWidth="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- IP Address Column -->
                        <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="1*" MinWidth="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#546E7A"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- MAC Address Column -->
                        <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="1.2*" MinWidth="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#757575"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Discovery Method Column -->
                        <DataGridTemplateColumn Header="Discovery Method" Width="Auto" MinWidth="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Padding="8,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DiscoveryMethod}" Value="mDNS">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DiscoveryMethod}" Value="Network Scan">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding DiscoveryMethod}" FontSize="11" FontWeight="Medium" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#1976D2"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DiscoveryMethod}" Value="mDNS">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DiscoveryMethod}" Value="Network Scan">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Discovered At Column -->
                        <DataGridTemplateColumn Header="Discovered" Width="1*" MinWidth="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" ToolTip="{Binding DiscoveredAt, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}">
                                        <Run Text="ðŸ”"/>
                                        <Run Text="{Binding DiscoveredAt, Converter={StaticResource RelativeTimeConverter}}" Foreground="#757575"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Discovery Status Bar -->
                <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" FontSize="12" Foreground="#666666">
                            <Run Text="{Binding ScanStatusMessage, Mode=OneWay}"/>
                        </TextBlock>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ProgressBar Width="100" Height="16" Margin="0,0,8,0"
                                         IsIndeterminate="True"
                                         Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="Scanning..." Foreground="#2196F3" FontWeight="SemiBold"
                                       Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Control Panel -->
        <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
            <ScrollViewer>
                <StackPanel Margin="16">
                    <TextBlock Text="Device Control" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <!-- Device Info -->
                    <TextBlock Text="Selected Device" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock Text="No device selected" Foreground="Gray" Margin="0,0,0,16">
                        <TextBlock.Visibility>
                            <Binding Path="SelectedClient">
                                <Binding.Converter>
                                    <converters:NullToVisibilityConverter/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.Visibility>
                    </TextBlock>

                    <StackPanel>
                        <StackPanel.Visibility>
                            <Binding Path="SelectedClient">
                                <Binding.Converter>
                                    <converters:NullToVisibilityConverter Invert="True"/>
                                </Binding.Converter>
                            </Binding>
                        </StackPanel.Visibility>

                        <TextBlock Text="{Binding SelectedClient.Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SelectedClient.IpAddress}" FontSize="12" Foreground="#666666" Margin="0,0,0,16"/>

                        <!-- Remote Commands -->
                        <TextBlock Text="Remote Commands" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <Button Content="ðŸ”„ Restart Device" Command="{Binding RestartClientCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="ðŸ”„ Restart App" Command="{Binding RestartClientAppCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="ðŸ“· Take Screenshot" Command="{Binding TakeScreenshotCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                        <!-- Screen Control -->
                        <TextBlock Text="Screen Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="ðŸ’¡ Screen On" Command="{Binding ScreenOnCommand}" Margin="0,0,8,0" Padding="12,6"/>
                            <Button Content="ðŸŒ™ Screen Off" Command="{Binding ScreenOffCommand}" Padding="12,6"/>
                        </StackPanel>

                        <!-- Volume Control -->
                        <TextBlock Text="Volume Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding VolumeLevel}" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1" Text="{Binding VolumeLevel, StringFormat='{}{0}%'}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                        </Grid>
                        <Button Content="ðŸ”Š Set Volume" Command="{Binding SetVolumeCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                        <!-- Layout Assignment -->
                        <TextBlock Text="Layout Assignment" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding AvailableLayouts}"
                                 DisplayMemberPath="Name"
                                 SelectedValuePath="Id"
                                 SelectedValue="{Binding SelectedLayoutId, Mode=TwoWay}"
                                 Margin="0,0,0,8"/>
                        <Button Content="ðŸ“‹ Assign Layout" Command="{Binding AssignLayoutCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                        <!-- Maintenance -->
                        <TextBlock Text="Maintenance" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Button Content="ðŸ—‘ Clear Cache" Command="{Binding ClearCacheCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch" Style="{StaticResource SecondaryButton}"/>

                        <!-- Client Configuration -->
                        <TextBlock Text="Client Configuration" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Configure client connection settings remotely. Client will reconnect with new settings."
                                  FontSize="11"
                                  Foreground="#666666"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="Server Host:" Margin="0,4,0,2"/>
                        <TextBox Text="{Binding ConfigServerHost, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <TextBlock Text="Server Port:" Margin="0,4,0,2"/>
                        <TextBox Text="{Binding ConfigServerPort, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                        <CheckBox Content="Use SSL/TLS" IsChecked="{Binding ConfigUseSSL}" Margin="0,0,0,4"/>
                        <CheckBox Content="Verify SSL Certificate" IsChecked="{Binding ConfigVerifySSL}" Margin="0,0,0,4"/>
                        <CheckBox Content="Full Screen Mode" IsChecked="{Binding ConfigFullScreen}" Margin="0,0,0,8"/>

                        <TextBlock Text="Log Level:" Margin="0,4,0,2"/>
                        <ComboBox ItemsSource="{Binding LogLevels}"
                                 SelectedItem="{Binding ConfigLogLevel}"
                                 Margin="0,0,0,12"/>

                        <Button Content="âš™ Configure Client"
                               Command="{Binding UpdateClientConfigCommand}"
                               Style="{StaticResource PrimaryButton}"
                               Margin="0,0,0,8"
                               HorizontalAlignment="Stretch"
                               ToolTip="Send configuration update to client"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
