<Window x:Class="DigitalSignage.Server.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DigitalSignage.Server.Controls"
        xmlns:local="clr-namespace:DigitalSignage.Server.Converters"
        xmlns:designer="clr-namespace:DigitalSignage.Server.Views.Designer"
        xmlns:alerts="clr-namespace:DigitalSignage.Server.Views.Alerts"
        mc:Ignorable="d"
        Title="Digital Signage Manager"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>
        <local:LogLevelToBackgroundConverter x:Key="LogLevelToBackgroundConverter"/>
        <local:LogLevelToStringConverter x:Key="LogLevelToStringConverter"/>
        <local:ElementTypeToVisibilityConverter x:Key="ElementTypeToVisibilityConverter"/>
        <local:TypeEqualsConverter x:Key="TypeEqualsConverter"/>
        <local:TypeEqualsAnyConverter x:Key="TypeEqualsAnyConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToVisibilityStringConverter x:Key="BoolToVisibilityStringConverter"/>
        <local:BoolToOnOffStringConverter x:Key="BoolToOnOffStringConverter"/>
    </Window.Resources>

    <!-- Keyboard Shortcuts -->
    <Window.InputBindings>
        <!-- File Operations -->
        <KeyBinding Command="{Binding SaveCommand}" Key="S" Modifiers="Control"/>

        <!-- Undo/Redo -->
        <KeyBinding Command="{Binding Designer.UndoCommand}" Key="Z" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.RedoCommand}" Key="Y" Modifiers="Control"/>

        <!-- Selection -->
        <KeyBinding Command="{Binding Designer.SelectAllCommand}" Key="A" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.ClearSelectionCommand}" Key="Escape"/>

        <!-- Edit Operations -->
        <KeyBinding Command="{Binding Designer.CopyCommand}" Key="C" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.CutCommand}" Key="X" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.PasteCommand}" Key="V" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.DuplicateSelectedCommand}" Key="D" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.DeleteSelectedElementCommand}" Key="Delete"/>

        <!-- View Operations -->
        <KeyBinding Command="{Binding Designer.ZoomInCommand}" Key="OemPlus" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.ZoomOutCommand}" Key="OemMinus" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.ZoomToFitCommand}" Key="D0" Modifiers="Control"/>

        <!-- Grouping -->
        <KeyBinding Command="{Binding Designer.GroupSelectedCommand}" Key="G" Modifiers="Control"/>
        <KeyBinding Command="{Binding Designer.UngroupSelectedCommand}" Key="G" Modifiers="Control+Shift"/>

        <!-- Arrow Key Movement (1px) -->
        <KeyBinding Command="{Binding Designer.MoveLeftCommand}" CommandParameter="false" Key="Left"/>
        <KeyBinding Command="{Binding Designer.MoveRightCommand}" CommandParameter="false" Key="Right"/>
        <KeyBinding Command="{Binding Designer.MoveUpCommand}" CommandParameter="false" Key="Up"/>
        <KeyBinding Command="{Binding Designer.MoveDownCommand}" CommandParameter="false" Key="Down"/>

        <!-- Arrow Key Movement (10px with Shift) -->
        <KeyBinding Command="{Binding Designer.MoveLeftCommand}" CommandParameter="true" Key="Left" Modifiers="Shift"/>
        <KeyBinding Command="{Binding Designer.MoveRightCommand}" CommandParameter="true" Key="Right" Modifiers="Shift"/>
        <KeyBinding Command="{Binding Designer.MoveUpCommand}" CommandParameter="true" Key="Up" Modifiers="Shift"/>
        <KeyBinding Command="{Binding Designer.MoveDownCommand}" CommandParameter="true" Key="Down" Modifiers="Shift"/>
    </Window.InputBindings>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Padding="4">
            <MenuItem Header="_File">
                <MenuItem Header="_New Layout" Command="{Binding NewLayoutCommand}"/>
                <MenuItem Header="New from _Template..." Command="{Binding NewFromTemplateCommand}"/>
                <MenuItem Header="_Open Layout" Command="{Binding OpenLayoutCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}"/>
                <Separator/>
                <MenuItem Header="_Export..." Command="{Binding ExportCommand}"/>
                <MenuItem Header="_Import..." Command="{Binding ImportCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding Designer.UndoCommand}" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Command="{Binding Designer.RedoCommand}" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding Designer.CutCommand}" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Copy" Command="{Binding Designer.CopyCommand}" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Command="{Binding Designer.PasteCommand}" InputGestureText="Ctrl+V"/>
                <MenuItem Header="_Duplicate" Command="{Binding Designer.DuplicateSelectedCommand}" InputGestureText="Ctrl+D"/>
                <MenuItem Header="_Delete" Command="{Binding Designer.DeleteSelectedElementCommand}" InputGestureText="Del"/>
                <Separator/>
                <MenuItem Header="Select _All" Command="{Binding Designer.SelectAllCommand}" InputGestureText="Ctrl+A"/>
                <Separator/>
                <MenuItem Header="_Group" Command="{Binding Designer.GroupSelectedCommand}" InputGestureText="Ctrl+G"/>
                <MenuItem Header="_Ungroup" Command="{Binding Designer.UngroupSelectedCommand}" InputGestureText="Ctrl+Shift+G"/>
            </MenuItem>
            <MenuItem Header="_Arrange">
                <MenuItem Header="Bring to _Front" Command="{Binding Designer.BringToFrontCommand}"/>
                <MenuItem Header="Bring _Forward" Command="{Binding Designer.BringForwardCommand}"/>
                <MenuItem Header="Send _Backward" Command="{Binding Designer.SendBackwardCommand}"/>
                <MenuItem Header="Send to _Back" Command="{Binding Designer.SendToBackCommand}"/>
                <Separator/>
                <MenuItem Header="Align _Left" Command="{Binding Designer.AlignLeftCommand}"/>
                <MenuItem Header="Align _Right" Command="{Binding Designer.AlignRightCommand}"/>
                <MenuItem Header="Align _Top" Command="{Binding Designer.AlignTopCommand}"/>
                <MenuItem Header="Align _Bottom" Command="{Binding Designer.AlignBottomCommand}"/>
                <MenuItem Header="Center _Horizontal" Command="{Binding Designer.CenterHorizontalCommand}"/>
                <MenuItem Header="Center _Vertical" Command="{Binding Designer.CenterVerticalCommand}"/>
                <Separator/>
                <MenuItem Header="Distribute _Horizontally" Command="{Binding Designer.DistributeHorizontalCommand}"/>
                <MenuItem Header="Distribute _Vertically" Command="{Binding Designer.DistributeVerticalCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding Designer.ZoomInCommand}"/>
                <MenuItem Header="Zoom _Out" Command="{Binding Designer.ZoomOutCommand}"/>
                <MenuItem Header="Zoom to _Fit" Command="{Binding Designer.ZoomToFitCommand}"/>
                <Separator/>
                <MenuItem Header="Show _Grid" IsCheckable="True" IsChecked="{Binding Designer.ShowGrid}"/>
                <MenuItem Header="Show _Rulers" IsCheckable="True" IsChecked="{Binding ShowRulers}"/>
                <MenuItem Header="Snap to Grid" IsCheckable="True" IsChecked="{Binding Designer.SnapToGrid}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Database Connection" Command="{Binding DatabaseConnectionCommand}" Icon="ðŸ—„"/>
                <MenuItem Header="Test Database" Command="{Binding TestDatabaseCommand}" Icon="âœ“"/>
                <Separator/>
                <MenuItem Header="_Settings" Command="{Binding SettingsCommand}" Icon="âš™"/>
                <MenuItem Header="Server _Configuration" Command="{Binding ServerConfigurationCommand}" Icon="ðŸ–¥"/>
                <Separator/>
                <MenuItem Header="_Logs" Command="{Binding LogsCommand}" Icon="ðŸ“‹"/>
                <MenuItem Header="Clear Logs" Command="{Binding ClearLogsCommand}" Icon="ðŸ—‘"/>
                <Separator/>
                <MenuItem Header="Template _Manager" Command="{Binding TemplateManagerCommand}" Icon="ðŸ“„"/>
                <MenuItem Header="Client _Registration Tokens" Command="{Binding ClientTokensCommand}" Icon="ðŸ”‘"/>
                <Separator/>
                <MenuItem Header="_Backup Database" Command="{Binding BackupDatabaseCommand}" Icon="ðŸ’¾"/>
                <MenuItem Header="_Restore Database" Command="{Binding RestoreDatabaseCommand}" Icon="ðŸ“‚"/>
                <Separator/>
                <MenuItem Header="System _Diagnostics" Command="{Binding SystemDiagnosticsCommand}" Icon="ðŸ”§"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Command="{Binding DocumentationCommand}"/>
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Padding="8,4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Clients: "/>
                    <TextBlock Text="{Binding ConnectedClients}" Margin="4,0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ServerStatus}" Value="Running">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ServerStatus}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area with Tabs -->
        <TabControl Margin="0" TabStripPlacement="Top">
            <!-- Designer Tab -->
            <TabItem Header="Designer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/> <!-- Tool Palette -->
                        <ColumnDefinition Width="250"/> <!-- Layers Panel -->
                        <ColumnDefinition Width="*"/>  <!-- Canvas -->
                        <ColumnDefinition Width="300"/> <!-- Properties -->
                    </Grid.ColumnDefinitions>

                    <!-- Tool Palette Column - Split into Tools and Alignment -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>     <!-- Tool Palette -->
                            <RowDefinition Height="Auto"/>  <!-- Alignment Toolbar -->
                        </Grid.RowDefinitions>

                        <!-- Tool Palette -->
                        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="8">
                                    <Button ToolTip="Select"
                                            Command="{Binding Designer.SelectToolCommand}"
                                            CommandParameter="select"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="â¬š" FontSize="20"/>
                                    </Button>
                                    <Button ToolTip="Text"
                                            Command="{Binding Designer.AddTextElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="T" FontSize="20" FontWeight="Bold"/>
                                    </Button>
                                    <Button ToolTip="Media Library"
                                            Command="{Binding Designer.AddMediaLibraryElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="ðŸ“š" FontSize="18"/>
                                    </Button>
                                    <Button ToolTip="Rectangle"
                                            Command="{Binding Designer.AddRectangleElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <Rectangle Width="24" Height="16" Fill="Transparent" Stroke="White" StrokeThickness="2"/>
                                    </Button>
                                    <Button ToolTip="Circle"
                                            Command="{Binding Designer.AddCircleElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <Ellipse Width="24" Height="24" Fill="Transparent" Stroke="White" StrokeThickness="2"/>
                                    </Button>
                                    <Button ToolTip="QR Code"
                                            Command="{Binding Designer.AddQRCodeElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="â–¦" FontSize="20"/>
                                    </Button>
                                    <Button ToolTip="Table"
                                            Command="{Binding Designer.AddTableElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="â˜°" FontSize="20"/>
                                    </Button>
                                    <Button ToolTip="Date/Time"
                                            Command="{Binding Designer.AddDateTimeElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="ðŸ“…" FontSize="16"/>
                                    </Button>
                                    <Separator Margin="0,8" Background="#3F3F46"/>
                                    <Button ToolTip="Delete Selected (Del)"
                                            Command="{Binding Designer.DeleteSelectedElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="ðŸ—‘" FontSize="18"/>
                                    </Button>
                                    <Button ToolTip="Duplicate (Ctrl+D)"
                                            Command="{Binding Designer.DuplicateSelectedElementCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,4"
                                            Padding="8">
                                        <TextBlock Text="ðŸ“‹" FontSize="18"/>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Alignment Toolbar -->
                        <Border Grid.Row="1" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,1,1,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                <StackPanel Margin="4">
                                    <TextBlock Text="ALIGN" FontSize="9" Foreground="#999" Margin="4,8,4,4" FontWeight="SemiBold"/>

                                    <!-- Horizontal Alignment -->
                                    <Button ToolTip="Align Left"
                                            Command="{Binding Designer.AlignLeftCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â«·" FontSize="18"/>
                                    </Button>
                                    <Button ToolTip="Center Horizontal"
                                            Command="{Binding Designer.CenterHorizontalCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â«´" FontSize="18"/>
                                    </Button>
                                    <Button ToolTip="Align Right"
                                            Command="{Binding Designer.AlignRightCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â«¸" FontSize="18"/>
                                    </Button>

                                    <Separator Margin="0,4" Background="#3F3F46"/>

                                    <!-- Vertical Alignment -->
                                    <Button ToolTip="Align Top"
                                            Command="{Binding Designer.AlignTopCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â«¶" FontSize="18"/>
                                    </Button>
                                    <Button ToolTip="Center Vertical"
                                            Command="{Binding Designer.CenterVerticalCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â«¿" FontSize="18"/>
                                    </Button>
                                    <Button ToolTip="Align Bottom"
                                            Command="{Binding Designer.AlignBottomCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â«·" FontSize="18" RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform Angle="180"/>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </Button>

                                    <Separator Margin="0,4" Background="#3F3F46"/>

                                    <!-- Distribution -->
                                    <Button ToolTip="Distribute Horizontally (3+ elements)"
                                            Command="{Binding Designer.DistributeHorizontalCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â¬Œ" FontSize="16"/>
                                    </Button>
                                    <Button ToolTip="Distribute Vertically (3+ elements)"
                                            Command="{Binding Designer.DistributeVerticalCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â¬" FontSize="16"/>
                                    </Button>

                                    <Separator Margin="0,4" Background="#3F3F46"/>

                                    <!-- Center on Canvas -->
                                    <Button ToolTip="Center on Canvas"
                                            Command="{Binding Designer.CenterOnCanvasCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,2"
                                            Padding="6">
                                        <TextBlock Text="â—ˆ" FontSize="18"/>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>

                    <!-- Layers Panel -->
                    <Border Grid.Column="1" Background="White" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                        <DockPanel>
                            <Border DockPanel.Dock="Top"
                                   Background="#F5F5F5"
                                   BorderBrush="#DDDDDD"
                                   BorderThickness="0,0,0,1">
                                <TextBlock Text="Layers"
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Padding="12,8"/>
                            </Border>

                            <ListBox ItemsSource="{Binding Designer.Layers}"
                                    SelectedItem="{Binding Designer.SelectedLayer}"
                                    Margin="0"
                                    BorderThickness="0"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                               BorderThickness="0,0,0,1"
                                               BorderBrush="#EEEEEE"
                                               Padding="8,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Type Icon -->
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding Type, Converter={StaticResource ElementTypeIconConverter}}"
                                                          FontSize="14"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,8,0"
                                                          Width="20"
                                                          TextAlignment="Center"/>

                                                <!-- Element Name -->
                                                <TextBlock Grid.Column="1"
                                                          Text="{Binding Name}"
                                                          VerticalAlignment="Center"
                                                          TextTrimming="CharacterEllipsis"/>

                                                <!-- Z-Index -->
                                                <TextBlock Grid.Column="2"
                                                          Text="{Binding ZIndex}"
                                                          FontSize="10"
                                                          Foreground="#999999"
                                                          VerticalAlignment="Center"
                                                          Margin="4,0,8,0"/>

                                                <!-- Move Up Button -->
                                                <Button Grid.Column="3"
                                                       Content="â–²"
                                                       Command="{Binding DataContext.Designer.MoveLayerUpCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                       CommandParameter="{Binding}"
                                                       Width="24"
                                                       Height="24"
                                                       Padding="0"
                                                       FontSize="8"
                                                       Margin="0,0,2,0"
                                                       ToolTip="Move Up"/>

                                                <!-- Move Down Button -->
                                                <Button Grid.Column="4"
                                                       Content="â–¼"
                                                       Command="{Binding DataContext.Designer.MoveLayerDownCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                       CommandParameter="{Binding}"
                                                       Width="24"
                                                       Height="24"
                                                       Padding="0"
                                                       FontSize="8"
                                                       Margin="0,0,2,0"
                                                       ToolTip="Move Down"/>

                                                <!-- Visibility Toggle -->
                                                <Button Grid.Column="5"
                                                       Command="{Binding DataContext.Designer.ToggleLayerVisibilityCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                       CommandParameter="{Binding}"
                                                       Width="24"
                                                       Height="24"
                                                       Padding="0"
                                                       FontSize="12"
                                                       ToolTip="Toggle Visibility">
                                                    <TextBlock>
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="ðŸ‘"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding [IsVisible], FallbackValue=True}" Value="False">
                                                                        <Setter Property="Text" Value="ðŸš«"/>
                                                                        <Setter Property="Opacity" Value="0.5"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </DockPanel>
                    </Border>

                    <!-- Canvas Area -->
                    <Grid Grid.Column="2" Background="#1E1E1E">
                        <DockPanel>
                            <!-- Designer Toolbar -->
                            <designer:DesignerToolbar DockPanel.Dock="Top" DataContext="{Binding Designer}"/>

                            <!-- Designer Status Bar -->
                            <designer:DesignerStatusBar DockPanel.Dock="Bottom" DataContext="{Binding Designer}"/>

                            <!-- Canvas -->
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <controls:DesignerCanvas x:Name="DesignerCanvas"
                                                    Background="White"
                                                    Width="{Binding Designer.CurrentLayout.Resolution.Width}"
                                                    Height="{Binding Designer.CurrentLayout.Resolution.Height}"
                                                    ShowGrid="{Binding Designer.ShowGrid}"
                                                    SnapToGrid="{Binding Designer.SnapToGrid}"
                                                    GridSize="{Binding Designer.GridSize}"
                                                    Margin="20">
                                <!-- Context Menu for Canvas -->
                                <controls:DesignerCanvas.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Add Element" Icon="âž•">
                                            <MenuItem Header="Text" Command="{Binding Designer.AddTextElementCommand}" Icon="T" FontWeight="Bold"/>
                                            <MenuItem Header="Media Library" Command="{Binding Designer.AddMediaLibraryElementCommand}" Icon="ðŸ“š"/>
                                            <MenuItem Header="Rectangle" Command="{Binding Designer.AddRectangleElementCommand}" Icon="â¬š"/>
                                            <MenuItem Header="Circle" Command="{Binding Designer.AddCircleElementCommand}" Icon="â­•"/>
                                            <MenuItem Header="QR Code" Command="{Binding Designer.AddQRCodeElementCommand}" Icon="â–¦"/>
                                            <MenuItem Header="Table" Command="{Binding Designer.AddTableElementCommand}" Icon="â˜°"/>
                                            <MenuItem Header="Date/Time" Command="{Binding Designer.AddDateTimeElementCommand}" Icon="ðŸ“…"/>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Cut" Command="{Binding Designer.CutCommand}" InputGestureText="Ctrl+X" Icon="âœ‚"/>
                                        <MenuItem Header="Copy" Command="{Binding Designer.CopyCommand}" InputGestureText="Ctrl+C" Icon="ðŸ“„"/>
                                        <MenuItem Header="Paste" Command="{Binding Designer.PasteCommand}" InputGestureText="Ctrl+V" Icon="ðŸ“‹"/>
                                        <MenuItem Header="Duplicate" Command="{Binding Designer.DuplicateSelectedCommand}" InputGestureText="Ctrl+D" Icon="ðŸ“‹"/>
                                        <MenuItem Header="Delete" Command="{Binding Designer.DeleteSelectedElementCommand}" InputGestureText="Del" Icon="ðŸ—‘"/>
                                        <Separator/>
                                        <MenuItem Header="Select All" Command="{Binding Designer.SelectAllCommand}" InputGestureText="Ctrl+A"/>
                                        <MenuItem Header="Clear Selection" Command="{Binding Designer.ClearSelectionCommand}" InputGestureText="Esc"/>
                                        <Separator/>
                                        <MenuItem Header="Align">
                                            <MenuItem Header="Align Left" Command="{Binding Designer.AlignLeftCommand}" Icon="â«·"/>
                                            <MenuItem Header="Center Horizontal" Command="{Binding Designer.CenterHorizontalCommand}" Icon="â«´"/>
                                            <MenuItem Header="Align Right" Command="{Binding Designer.AlignRightCommand}" Icon="â«¸"/>
                                            <Separator/>
                                            <MenuItem Header="Align Top" Command="{Binding Designer.AlignTopCommand}" Icon="â«¶"/>
                                            <MenuItem Header="Center Vertical" Command="{Binding Designer.CenterVerticalCommand}" Icon="â«¿"/>
                                            <MenuItem Header="Align Bottom" Command="{Binding Designer.AlignBottomCommand}" Icon="â«·"/>
                                            <Separator/>
                                            <MenuItem Header="Distribute Horizontally" Command="{Binding Designer.DistributeHorizontalCommand}" Icon="â¬Œ"/>
                                            <MenuItem Header="Distribute Vertically" Command="{Binding Designer.DistributeVerticalCommand}" Icon="â¬"/>
                                            <Separator/>
                                            <MenuItem Header="Center on Canvas" Command="{Binding Designer.CenterOnCanvasCommand}" Icon="â—ˆ"/>
                                        </MenuItem>
                                        <MenuItem Header="Arrange">
                                            <MenuItem Header="Bring to Front" Command="{Binding Designer.BringToFrontCommand}" Icon="â¬†"/>
                                            <MenuItem Header="Bring Forward" Command="{Binding Designer.BringForwardCommand}" Icon="â¬†"/>
                                            <MenuItem Header="Send Backward" Command="{Binding Designer.SendBackwardCommand}" Icon="â¬‡"/>
                                            <MenuItem Header="Send to Back" Command="{Binding Designer.SendToBackCommand}" Icon="â¬‡"/>
                                        </MenuItem>
                                        <MenuItem Header="Group" Command="{Binding Designer.GroupSelectedCommand}" InputGestureText="Ctrl+G" Icon="â–¦"/>
                                        <MenuItem Header="Ungroup" Command="{Binding Designer.UngroupSelectedCommand}" InputGestureText="Ctrl+Shift+G" Icon="â–¢"/>
                                        <Separator/>
                                        <MenuItem Header="Grid Settings">
                                            <MenuItem Header="Show Grid" IsCheckable="True" IsChecked="{Binding Designer.ShowGrid}"/>
                                            <MenuItem Header="Snap to Grid" IsCheckable="True" IsChecked="{Binding Designer.SnapToGrid}"/>
                                        </MenuItem>
                                    </ContextMenu>
                                </controls:DesignerCanvas.ContextMenu>

                                <controls:DesignerCanvas.LayoutTransform>
                                    <ScaleTransform ScaleX="{Binding Designer.ZoomLevel}"
                                                   ScaleY="{Binding Designer.ZoomLevel}"/>
                                </controls:DesignerCanvas.LayoutTransform>

                                <!-- Render all elements from Designer.Elements - ULTRA SIMPLE GUARANTEED VISIBLE TEMPLATE -->
                                <ItemsControl ItemsSource="{Binding Designer.Elements}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding Position.X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Position.Y}"/>
                                            <Setter Property="Canvas.ZIndex" Value="{Binding ZIndex}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- PROFESSIONAL CANVAS ELEMENT - Renders exactly as it appears on display -->
                                            <Grid x:Name="ElementContainer"
                                                  Width="{Binding Size.Width}"
                                                  Height="{Binding Size.Height}"
                                                  Background="Transparent"
                                                  Cursor="Hand"
                                                  MouseLeftButtonDown="Element_MouseLeftButtonDown"
                                                  MouseMove="Element_MouseMove"
                                                  MouseLeftButtonUp="Element_MouseLeftButtonUp"
                                                  Tag="{Binding}">

                                                <!-- ACTUAL ELEMENT RENDERING (what shows on display) -->
                                                <Grid x:Name="ElementContent">

                                                    <!-- TEXT ELEMENT -->
                                                    <Border Background="Transparent"
                                                            Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=text}">
                                                        <TextBlock Text="{Binding [Content], FallbackValue='Sample Text'}"
                                                                   FontFamily="{Binding [FontFamily], FallbackValue=Arial}"
                                                                   FontSize="{Binding [FontSize], FallbackValue=24}"
                                                                   Foreground="{Binding [Color], FallbackValue=Black}"
                                                                   TextWrapping="Wrap"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Top"
                                                                   Padding="5"/>
                                                    </Border>

                                                    <!-- RECTANGLE ELEMENT -->
                                                    <Rectangle Fill="{Binding [FillColor], FallbackValue=#FFADD8E6}"
                                                               Stroke="{Binding [BorderColor], FallbackValue=#FF0000FF}"
                                                               StrokeThickness="{Binding [BorderThickness], FallbackValue=2}"
                                                               RadiusX="{Binding [CornerRadius], FallbackValue=0}"
                                                               RadiusY="{Binding [CornerRadius], FallbackValue=0}"
                                                               Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=rectangle}"/>

                                                    <!-- CIRCLE ELEMENT -->
                                                    <Ellipse Fill="{Binding [FillColor], FallbackValue=#FFFFD700}"
                                                             Stroke="{Binding [BorderColor], FallbackValue=#FFFFA500}"
                                                             StrokeThickness="{Binding [BorderThickness], FallbackValue=2}"
                                                             Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=circle}"/>

                                                    <!-- IMAGE ELEMENT -->
                                                    <Grid Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=image}">
                                                        <!-- Placeholder background -->
                                                        <Rectangle Fill="#FFF5F5F5" Stroke="#FFCCCCCC" StrokeThickness="1" StrokeDashArray="4 2"/>
                                                        <!-- Icon -->
                                                        <TextBlock Text="ðŸ–¼ï¸" FontSize="48"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#FFCCCCCC"
                                                                   Opacity="0.5"/>
                                                        <!-- Filename at bottom -->
                                                        <TextBlock Text="{Binding [Source], FallbackValue='No image'}"
                                                                   FontSize="9"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Bottom"
                                                                   Margin="5"
                                                                   Foreground="#FF999999"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                    </Grid>

                                                    <!-- QR CODE ELEMENT -->
                                                    <Grid Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=qrcode}">
                                                        <Rectangle Fill="White" Stroke="#FF333333" StrokeThickness="1"/>
                                                        <TextBlock Text="QR" FontSize="32" FontWeight="Bold"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#FF333333"/>
                                                    </Grid>

                                                    <!-- TABLE ELEMENT -->
                                                    <Grid Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=table}">
                                                        <Rectangle Fill="#FFFAFAFA" Stroke="#FF2196F3" StrokeThickness="1"/>
                                                        <TextBlock Text="ðŸ“Š" FontSize="32"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="#FF2196F3"/>
                                                    </Grid>

                                                    <!-- DATETIME ELEMENT -->
                                                    <Grid Visibility="{Binding Type, Converter={StaticResource TypeEqualsConverter}, ConverterParameter=datetime}">
                                                        <Rectangle Fill="Transparent"/>
                                                        <TextBlock FontSize="20" FontWeight="SemiBold"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{Binding [Color], FallbackValue=Black}">
                                                            <Run Text="13.11.2025"/>
                                                            <LineBreak/>
                                                            <Run Text="14:30" FontSize="16"/>
                                                        </TextBlock>
                                                    </Grid>

                                                </Grid>

                                                <!-- SELECTION OVERLAY (only visible when selected) -->
                                                <Grid x:Name="SelectionOverlay" Visibility="Collapsed" IsHitTestVisible="False">

                                                    <!-- Selection Border (thin blue dashed line like Photoshop) -->
                                                    <Rectangle Stroke="#FF007ACC"
                                                               StrokeThickness="1.5"
                                                               StrokeDashArray="4 2"
                                                               Fill="Transparent"/>

                                                    <!-- Resize Handles (8 small squares) -->
                                                    <!-- Top-Left -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-3,-3,0,0"/>

                                                    <!-- Top-Center -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-3,0,0"/>

                                                    <!-- Top-Right -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-3,-3,0"/>

                                                    <!-- Middle-Left -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-3,0,0,0"/>

                                                    <!-- Middle-Right -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-3,0"/>

                                                    <!-- Bottom-Left -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-3,0,0,-3"/>

                                                    <!-- Bottom-Center -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-3"/>

                                                    <!-- Bottom-Right -->
                                                    <Rectangle Width="6" Height="6" Fill="White" Stroke="#FF007ACC" StrokeThickness="1"
                                                               HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-3,-3"/>

                                                </Grid>

                                                <!-- Trigger to show/hide selection overlay -->
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="Panel.ZIndex" Value="999"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>

                                            </Grid>

                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter TargetName="SelectionOverlay" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:DesignerCanvas>
                        </ScrollViewer>
                        </DockPanel>
                    </Grid>

                    <!-- Properties Panel -->
                    <Border Grid.Column="3" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                        <ScrollViewer>
                            <StackPanel Margin="12">
                                <TextBlock Text="Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

                                <!-- Layout Properties -->
                                <TextBlock Text="Layout" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                <TextBlock Text="Name:" Margin="0,4,0,2"/>
                                <TextBox Text="{Binding Designer.CurrentLayout.Name, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Resolution:" Margin="0,8,0,2"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Width="80" Text="{Binding Designer.CurrentLayout.Resolution.Width, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                                    <TextBlock Text="Ã—" Margin="4,0" VerticalAlignment="Center"/>
                                    <TextBox Width="80" Text="{Binding Designer.CurrentLayout.Resolution.Height, UpdateSourceTrigger=PropertyChanged}" Margin="4,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Background:" Margin="0,12,0,4"/>
                                <TextBox Text="{Binding Designer.CurrentLayout.BackgroundColor, UpdateSourceTrigger=PropertyChanged}"/>

                                <Separator Margin="0,16"/>

                                <!-- Selected Element Properties -->
                                <TextBlock Text="Selected Element" FontWeight="SemiBold" Margin="0,8,0,4"/>

                                <!-- Show when no element is selected -->
                                <TextBlock Text="No element selected"
                                          Foreground="Gray"
                                          Margin="0,8">
                                    <TextBlock.Visibility>
                                        <Binding Path="Designer.SelectedElement">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>

                                <!-- Show when element is selected -->
                                <StackPanel>
                                    <StackPanel.Visibility>
                                        <Binding Path="Designer.SelectedElement">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter Invert="True"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </StackPanel.Visibility>

                                    <TextBlock Text="Name:" Margin="0,4,0,2"/>
                                    <TextBox Text="{Binding Designer.SelectedElement.Name, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Position:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="1" Text="{Binding Designer.SelectedElement.Position.X, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="3" Text="{Binding Designer.SelectedElement.Position.Y, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Size:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="W:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="1" Text="{Binding Designer.SelectedElement.Size.Width, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="2" Text="H:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="3" Text="{Binding Designer.SelectedElement.Size.Height, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Z-Index:" Margin="0,12,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Width="60" Text="{Binding Designer.SelectedElement.ZIndex, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Content="â–²" Command="{Binding Designer.MoveElementUpCommand}" Margin="8,0,4,0" Padding="8,2"/>
                                        <Button Content="â–¼" Command="{Binding Designer.MoveElementDownCommand}" Padding="8,2"/>
                                    </StackPanel>

                                    <TextBlock Text="Rotation:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Minimum="0"
                                                Maximum="360"
                                                Value="{Binding Designer.SelectedElement.[Rotation], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"
                                                TickFrequency="45"
                                                IsSnapToTickEnabled="False"
                                                Margin="0,0,8,0"/>
                                        <TextBox Grid.Column="1"
                                                Width="60"
                                                Text="{Binding Designer.SelectedElement.[Rotation], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Opacity:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Minimum="0"
                                                Maximum="1"
                                                Value="{Binding Designer.SelectedElement.Opacity, FallbackValue=1, UpdateSourceTrigger=PropertyChanged}"
                                                TickFrequency="0.1"
                                                IsSnapToTickEnabled="False"
                                                Margin="0,0,8,0"/>
                                        <TextBox Grid.Column="1"
                                                Width="60"
                                                Text="{Binding Designer.SelectedElement.Opacity, FallbackValue=1, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Visibility:" Margin="0,12,0,4"/>
                                    <CheckBox Content="Visible" IsChecked="{Binding Designer.SelectedElement.Visible, FallbackValue=True}" Margin="0,4,0,0"/>

                                    <Separator Margin="0,16"/>

                                    <!-- Advanced Properties -->
                                    <TextBlock Text="Advanced" FontWeight="SemiBold" Margin="0,8,0,8"/>

                                    <TextBlock Text="Border Radius:" Margin="0,4,0,2"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Minimum="0"
                                                Maximum="100"
                                                Value="{Binding Designer.SelectedElement.[BorderRadius], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"
                                                TickFrequency="5"
                                                IsSnapToTickEnabled="False"
                                                Margin="0,0,8,0"/>
                                        <TextBox Grid.Column="1"
                                                Width="60"
                                                Text="{Binding Designer.SelectedElement.[BorderRadius], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Shadow:" Margin="0,12,0,4"/>
                                    <CheckBox Content="Enable Shadow" IsChecked="{Binding Designer.SelectedElement.[EnableShadow], FallbackValue=False}" Margin="0,4,0,8"/>

                                    <StackPanel Visibility="{Binding Designer.SelectedElement.[EnableShadow], Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                        <TextBlock Text="Shadow Blur:" Margin="0,4,0,2" FontSize="11"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Slider Grid.Column="0"
                                                    Minimum="0"
                                                    Maximum="50"
                                                    Value="{Binding Designer.SelectedElement.[ShadowBlur], FallbackValue=10, UpdateSourceTrigger=PropertyChanged}"
                                                    TickFrequency="5"
                                                    IsSnapToTickEnabled="False"
                                                    Margin="0,0,8,0"/>
                                            <TextBox Grid.Column="1"
                                                    Width="60"
                                                    Text="{Binding Designer.SelectedElement.[ShadowBlur], FallbackValue=10, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <TextBlock Text="Shadow Color:" Margin="0,8,0,2" FontSize="11"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement.[ShadowColor], FallbackValue=#80000000, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement.[ShadowColor], Converter={StaticResource HexToColorConverter}, FallbackValue=#80000000}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="Shadow Offset X:" Margin="0,8,0,2" FontSize="11"/>
                                        <TextBox Text="{Binding Designer.SelectedElement.[ShadowOffsetX], FallbackValue=5, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Text="Shadow Offset Y:" Margin="0,4,0,2" FontSize="11"/>
                                        <TextBox Text="{Binding Designer.SelectedElement.[ShadowOffsetY], FallbackValue=5, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <!-- Text Element Properties -->
                                    <StackPanel>
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Designer.SelectedElement.Type}" Value="text">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <TextBlock Text="Text Properties" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                        <TextBlock Text="Content:" Margin="0,4,0,2"/>
                                        <TextBox Text="{Binding Designer.SelectedElement.[Content], UpdateSourceTrigger=PropertyChanged}"
                                                Height="60"
                                                TextWrapping="Wrap"
                                                AcceptsReturn="True"
                                                VerticalScrollBarVisibility="Auto"/>

                                        <TextBlock Text="Font Family:" Margin="0,12,0,4"/>
                                        <ComboBox SelectedValue="{Binding Designer.SelectedElement.[FontFamily], FallbackValue=Arial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectedValuePath="Content">
                                            <ComboBoxItem Content="Arial"/>
                                            <ComboBoxItem Content="Calibri"/>
                                            <ComboBoxItem Content="Times New Roman"/>
                                            <ComboBoxItem Content="Verdana"/>
                                            <ComboBoxItem Content="Georgia"/>
                                            <ComboBoxItem Content="Courier New"/>
                                            <ComboBoxItem Content="Comic Sans MS"/>
                                            <ComboBoxItem Content="Impact"/>
                                            <ComboBoxItem Content="Tahoma"/>
                                            <ComboBoxItem Content="Trebuchet MS"/>
                                        </ComboBox>

                                        <TextBlock Text="Font Size:" Margin="0,12,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Slider Grid.Column="0"
                                                   Minimum="8"
                                                   Maximum="144"
                                                   Value="{Binding Designer.SelectedElement.[FontSize], FallbackValue=24}"
                                                   TickFrequency="4"
                                                   IsSnapToTickEnabled="True"
                                                   Margin="0,0,8,0"/>
                                            <TextBox Grid.Column="1"
                                                    Width="60"
                                                    Text="{Binding Designer.SelectedElement.[FontSize], FallbackValue=24, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <TextBlock Text="Font Style:" Margin="0,12,0,4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <ToggleButton Content="Bold"
                                                         IsChecked="{Binding Designer.SelectedElement.[FontWeight], Converter={StaticResource FontWeightToBoolConverter}, FallbackValue=False}"
                                                         Width="60"
                                                         Margin="0,0,4,0"
                                                         Padding="8,4"/>
                                            <ToggleButton Content="Italic"
                                                         IsChecked="{Binding Designer.SelectedElement.[FontStyle], Converter={StaticResource FontStyleToBoolConverter}, FallbackValue=False}"
                                                         Width="60"
                                                         Padding="8,4"/>
                                        </StackPanel>

                                        <TextBlock Text="Text Color:" Margin="0,12,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement.[Color], FallbackValue=#000000, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement.[Color], Converter={StaticResource HexToColorConverter}, FallbackValue=Black}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <!-- Rectangle/Shape Properties -->
                                    <StackPanel Visibility="{Binding Designer.SelectedElement.Type, Converter={StaticResource ElementTypeToVisibilityConverter}, ConverterParameter='rectangle,shape,circle'}">
                                        <TextBlock Text="Rectangle Properties" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                        <TextBlock Text="Fill Color:" Margin="0,4,0,2"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement.[FillColor], FallbackValue=#ADD8E6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement.[FillColor], Converter={StaticResource HexToColorConverter}, FallbackValue=LightBlue}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="Border Color:" Margin="0,12,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement.[BorderColor], FallbackValue=#00008B, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement.[BorderColor], Converter={StaticResource HexToColorConverter}, FallbackValue=DarkBlue}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="Border Thickness:" Margin="0,12,0,4"/>
                                        <TextBox Text="{Binding Designer.SelectedElement.[BorderThickness], FallbackValue=2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <TextBlock Text="Actions:" FontWeight="SemiBold" Margin="0,8,0,8"/>
                                    <Button Content="Duplicate Element" Command="{Binding Designer.DuplicateSelectedElementCommand}" Margin="0,0,0,4"/>
                                    <Button Content="Delete Element" Command="{Binding Designer.DeleteSelectedElementCommand}" Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="Devices">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Device List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="12,8">
                            <Button Content="ðŸ”„ Refresh" Command="{Binding DeviceManagement.LoadClientsCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                            <Button Content="âŒ Remove" Command="{Binding DeviceManagement.RemoveClientCommand}" Style="{StaticResource SecondaryButton}" Padding="8,6" ToolTip="Remove selected device"/>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                 ItemsSource="{Binding DeviceManagement.Clients}"
                                 SelectedItem="{Binding DeviceManagement.SelectedClient}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single"
                                 Margin="12,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
                                <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="140"/>
                                <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="100"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="120"/>
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="Gray"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                    <Setter Property="Fill" Value="LimeGreen"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                    <Setter Property="Fill" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Status Bar -->
                        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="12,8">
