<Window x:Class="DigitalSignage.Server.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Digital Signage Manager"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Padding="4">
            <MenuItem Header="_File">
                <MenuItem Header="_New Layout" Command="{Binding NewLayoutCommand}"/>
                <MenuItem Header="_Open Layout" Command="{Binding OpenLayoutCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}"/>
                <Separator/>
                <MenuItem Header="_Export..." Command="{Binding ExportCommand}"/>
                <MenuItem Header="_Import..." Command="{Binding ImportCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding CutCommand}"/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}"/>
                <MenuItem Header="_Delete" Command="{Binding DeleteCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding ZoomInCommand}"/>
                <MenuItem Header="Zoom _Out" Command="{Binding ZoomOutCommand}"/>
                <MenuItem Header="Zoom to _Fit" Command="{Binding ZoomToFitCommand}"/>
                <Separator/>
                <MenuItem Header="Show _Grid" IsCheckable="True" IsChecked="{Binding ShowGrid}"/>
                <MenuItem Header="Show _Rulers" IsCheckable="True" IsChecked="{Binding ShowRulers}"/>
                <MenuItem Header="Snap to Grid" IsCheckable="True" IsChecked="{Binding SnapToGrid}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Database Connection" Command="{Binding DatabaseConnectionCommand}"/>
                <MenuItem Header="_Settings" Command="{Binding SettingsCommand}"/>
                <MenuItem Header="_Logs" Command="{Binding LogsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Command="{Binding DocumentationCommand}"/>
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Padding="8,4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Clients: "/>
                    <TextBlock Text="{Binding ConnectedClients}" Margin="4,0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ServerStatus}" Value="Running">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ServerStatus}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area with Tabs -->
        <TabControl Margin="0" TabStripPlacement="Top">
            <!-- Designer Tab -->
            <TabItem Header="Designer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/> <!-- Tool Palette -->
                        <ColumnDefinition Width="*"/>  <!-- Canvas -->
                        <ColumnDefinition Width="300"/> <!-- Properties -->
                    </Grid.ColumnDefinitions>

                    <!-- Tool Palette -->
                    <Border Grid.Column="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                        <StackPanel Margin="8">
                            <Button ToolTip="Select" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <TextBlock Text="â¬š" FontSize="20"/>
                            </Button>
                            <Button ToolTip="Text" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <TextBlock Text="T" FontSize="20" FontWeight="Bold"/>
                            </Button>
                            <Button ToolTip="Image" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <TextBlock Text="ðŸ–¼" FontSize="18"/>
                            </Button>
                            <Button ToolTip="Rectangle" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <Rectangle Width="24" Height="16" Fill="Transparent" Stroke="White" StrokeThickness="2"/>
                            </Button>
                            <Button ToolTip="Circle" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <Ellipse Width="20" Height="20" Fill="Transparent" Stroke="White" StrokeThickness="2"/>
                            </Button>
                            <Button ToolTip="QR Code" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <TextBlock Text="âš" FontSize="20"/>
                            </Button>
                            <Button ToolTip="Table" Style="{StaticResource SecondaryButton}" Margin="0,4" Padding="8">
                                <TextBlock Text="â˜°" FontSize="20"/>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Canvas Area -->
                    <Grid Grid.Column="1" Background="#1E1E1E">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Canvas x:Name="DesignerCanvas"
                                    Background="White"
                                    Width="1920"
                                    Height="1080"
                                    Margin="20">
                                <!-- Designer content will be rendered here -->
                                <TextBlock Text="Designer Canvas - Drop elements here"
                                          Canvas.Left="50"
                                          Canvas.Top="50"
                                          FontSize="24"
                                          Foreground="#CCCCCC"/>
                            </Canvas>
                        </ScrollViewer>
                    </Grid>

                    <!-- Properties Panel -->
                    <Border Grid.Column="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                        <ScrollViewer>
                            <StackPanel Margin="12">
                                <TextBlock Text="Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

                                <TextBlock Text="Layout" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                <TextBlock Text="Name:" Margin="0,4,0,2"/>
                                <TextBox Text="{Binding CurrentLayout.Name, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Resolution:" Margin="0,8,0,2"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Width="80" Text="{Binding CurrentLayout.Resolution.Width}" Margin="0,0,4,0"/>
                                    <TextBlock Text="x" Margin="4,0" VerticalAlignment="Center"/>
                                    <TextBox Width="80" Text="{Binding CurrentLayout.Resolution.Height}" Margin="4,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Background Color:" Margin="0,12,0,4"/>
                                <TextBox Text="{Binding CurrentLayout.BackgroundColor}"/>

                                <Separator Margin="0,16"/>

                                <TextBlock Text="Selected Element" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                <TextBlock Text="No element selected"
                                          Foreground="Gray"
                                          Visibility="{Binding HasSelectedElement, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- Element properties will be shown here based on selection -->
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="Devices">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="12,8">
                        <Button Content="Refresh" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Add Device" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Remove" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>

                    <!-- Device List -->
                    <DataGrid Grid.Row="1"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             Margin="12">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen}" Width="150"/>
                            <DataGridTextColumn Header="Assigned Layout" Binding="{Binding AssignedLayoutId}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Restart" Margin="2" Padding="6,2"/>
                                            <Button Content="Screenshot" Margin="2" Padding="6,2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Data Sources Tab -->
            <TabItem Header="Data Sources">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data Source List -->
                    <Border Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="8">
                                <Button Content="Add Data Source" Style="{StaticResource PrimaryButton}" Margin="0,0,0,8"/>
                            </StackPanel>
                            <ListBox Margin="8,0"/>
                        </DockPanel>
                    </Border>

                    <!-- Data Source Editor -->
                    <ScrollViewer Grid.Column="1">
                        <StackPanel Margin="16">
                            <TextBlock Text="Data Source Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

                            <TextBlock Text="Name:" Margin="0,8,0,4"/>
                            <TextBox/>

                            <TextBlock Text="Type:" Margin="0,12,0,4"/>
                            <ComboBox>
                                <ComboBoxItem Content="SQL Database" IsSelected="True"/>
                                <ComboBoxItem Content="REST API"/>
                                <ComboBoxItem Content="Static Data"/>
                            </ComboBox>

                            <TextBlock Text="Connection String:" Margin="0,12,0,4"/>
                            <TextBox Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <TextBlock Text="Query:" Margin="0,12,0,4"/>
                            <TextBox Height="120" TextWrapping="Wrap" AcceptsReturn="True" FontFamily="Consolas"/>

                            <TextBlock Text="Refresh Interval (seconds):" Margin="0,12,0,4"/>
                            <TextBox Text="60"/>

                            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                <Button Content="Test Connection" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                                <Button Content="Save" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                                <Button Content="Cancel" Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Preview Tab -->
            <TabItem Header="Preview">
                <Grid Background="Black">
                    <Border Background="White"
                           Width="1920"
                           Height="1080"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                        <TextBlock Text="Live Preview"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="#CCCCCC"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
