                                            Padding="12,6"/>
                                    <Button Content="ðŸ—‘ Delete"
                                            Command="{Binding SchedulingViewModel.DeleteScheduleCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            Padding="12,6"/>
                                    <Button Content="ðŸ“‹ Duplicate"
                                            Command="{Binding SchedulingViewModel.DuplicateScheduleCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            Padding="12,6"/>
                                    <Button Content="ðŸ”„ Preview"
                                            Command="{Binding SchedulingViewModel.GenerateSchedulePreviewCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            Padding="12,6"/>
                                    <Button Content="âš  Check Conflicts"
                                            Command="{Binding SchedulingViewModel.CheckConflictsCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            Padding="12,6"/>
                                    <Button Content="ðŸ§ª Test Now"
                                            Command="{Binding SchedulingViewModel.TestScheduleCommand}"
                                            Margin="0,0,0,0"
                                            Padding="12,6"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Preview Tab -->
            <TabItem Header="Preview">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Test Data Source:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ComboBox ItemsSource="{Binding PreviewViewModel.AvailableDataSources}"
                                         SelectedItem="{Binding PreviewViewModel.SelectedTestDataSource}"
                                         DisplayMemberPath="Name"
                                         Width="200"
                                         Margin="0,0,12,0"/>
                                <Button Content="ðŸ”„ Refresh Preview"
                                       Command="{Binding PreviewViewModel.RefreshPreviewCommand}"
                                       Style="{StaticResource PrimaryButton}"
                                       IsEnabled="{Binding PreviewViewModel.IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                                       Margin="0,0,8,0"/>
                                <Button Content="Clear Preview"
                                       Command="{Binding PreviewViewModel.ClearPreviewCommand}"
                                       Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1"
                                      Text="{Binding PreviewViewModel.PreviewStatus}"
                                      VerticalAlignment="Center"
                                      Foreground="#666666"
                                      FontSize="12"/>
                        </Grid>
                    </Border>

                    <!-- Preview Canvas -->
                    <ScrollViewer Grid.Row="1"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="#2A2A2A">
                        <Border Background="White"
                               Width="{Binding PreviewViewModel.CurrentLayout.Resolution.Width, FallbackValue=1920}"
                               Height="{Binding PreviewViewModel.CurrentLayout.Resolution.Height, FallbackValue=1080}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="50">
                            <Canvas>
                                <!-- Background Color -->
                                <Canvas.Background>
                                    <SolidColorBrush Color="{Binding PreviewViewModel.CurrentLayout.BackgroundColor, FallbackValue=White}"/>
                                </Canvas.Background>

                                <!-- Render Preview Elements -->
                                <ItemsControl ItemsSource="{Binding PreviewViewModel.PreviewElements}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style>
                                            <Setter Property="Canvas.Left" Value="{Binding Position.X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Position.Y}"/>
                                            <Setter Property="Canvas.ZIndex" Value="{Binding ZIndex}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="{Binding Size.Width}"
                                                   Height="{Binding Size.Height}"
                                                   Background="Transparent">
                                                <!-- Text Element -->
                                                <TextBlock Text="{Binding [Content]}"
                                                          TextWrapping="Wrap"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="Text">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Placeholder when no layout -->
                                <TextBlock Text="No layout loaded. Create or open a layout in the Designer tab."
                                          Canvas.Left="400"
                                          Canvas.Top="500"
                                          FontSize="24"
                                          Foreground="#999999"
                                          Visibility="{Binding PreviewViewModel.CurrentLayout, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </Canvas>
                        </Border>
                    </ScrollViewer>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" FontSize="11" Foreground="#666666">
                                <Run Text="Preview shows how the layout will appear with test data."/>
                                <Run Text="Variables like {{room_name}} are replaced with actual values."/>
                            </TextBlock>

                            <TextBlock Grid.Column="1"
                                      FontSize="11"
                                      Foreground="#666666">
                                <Run Text="Elements: "/>
                                <Run Text="{Binding PreviewViewModel.PreviewElements.Count, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Media Library Tab -->
            <TabItem Header="Media Library">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Media Grid View -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <Button Content="Upload Media"
                                           Command="{Binding MediaLibraryViewModel.UploadMediaCommand}"
                                           Style="{StaticResource PrimaryButton}"
                                           Margin="0,0,8,0"/>
                                    <Button Content="Refresh"
                                           Command="{Binding MediaLibraryViewModel.RefreshCommand}"
                                           Style="{StaticResource SecondaryButton}"
                                           Margin="0,0,16,0"/>

                                    <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox ItemsSource="{Binding MediaLibraryViewModel.FilterTypes}"
                                             SelectedItem="{Binding MediaLibraryViewModel.FilterType}"
                                             Width="120"
                                             Margin="0,0,8,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0}">
                                                            <Binding Path="." Converter="{StaticResource MediaTypeToStringConverter}"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <TextBox Width="200"
                                            Text="{Binding MediaLibraryViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                            VerticalContentAlignment="Center"
                                            Margin="0,0,8,0">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                                    <VisualBrush.Visual>
                                                                        <TextBlock Text="Search..." Foreground="Gray" Margin="4,0,0,0"/>
                                                                    </VisualBrush.Visual>
                                                                </VisualBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <Button Content="Clear Filter"
                                           Command="{Binding MediaLibraryViewModel.ClearFilterCommand}"
                                           Padding="8,4"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1"
                                          Text="{Binding MediaLibraryViewModel.MediaFiles.Count, StringFormat='Total: {0} files'}"
                                          VerticalAlignment="Center"
                                          Foreground="#666666"
                                          FontWeight="SemiBold"/>
                            </Grid>
                        </Border>

                        <!-- Media DataGrid -->
                        <DataGrid Grid.Row="1"
                                 ItemsSource="{Binding MediaLibraryViewModel.MediaFiles}"
                                 SelectedItem="{Binding MediaLibraryViewModel.SelectedMedia}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single"
                                 Margin="12">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Width="60">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Type">
                                            <Binding.Converter>
                                                <local:MediaTypeToIconConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="File Name" Binding="{Binding OriginalFileName}" Width="250"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="Size" Width="100">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="FileSizeBytes" Converter="{StaticResource FileSizeConverter}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Dimensions" Width="120">
                                    <DataGridTextColumn.Binding>
                                        <MultiBinding StringFormat="{}{0} Ã— {1}">
                                            <Binding Path="Width"/>
                                            <Binding Path="Height"/>
                                        </MultiBinding>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Uploaded" Binding="{Binding UploadedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="140"/>
                                <DataGridTextColumn Header="Accessed" Binding="{Binding AccessCount, StringFormat='{}{0} times'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Status Bar -->
                        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="12,8">
                            <TextBlock Text="{Binding MediaLibraryViewModel.StatusMessage}" FontSize="12" Foreground="#666666"/>
                        </Border>
                    </Grid>

                    <!-- Details Panel -->
                    <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                        <ScrollViewer>
                            <StackPanel Margin="16">
                                <TextBlock Text="Media Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                                <!-- No selection message -->
                                <TextBlock Text="No media selected" Foreground="Gray" Margin="0,8">
                                    <TextBlock.Visibility>
                                        <Binding Path="MediaLibraryViewModel.SelectedMedia">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>

                                <!-- Media details when selected -->
                                <StackPanel>
                                    <StackPanel.Visibility>
                                        <Binding Path="MediaLibraryViewModel.SelectedMedia">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter Invert="True"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </StackPanel.Visibility>

                                    <!-- Thumbnail placeholder -->
                                    <Border Background="#F0F0F0"
                                           BorderBrush="#CCCCCC"
                                           BorderThickness="1"
                                           Height="200"
                                           Margin="0,0,0,16">
                                        <TextBlock Text="Thumbnail Preview"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="#999999"
                                                  FontSize="14"/>
                                    </Border>

                                    <TextBlock Text="File Information" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                    <TextBlock Text="Original Filename:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MediaLibraryViewModel.SelectedMedia.OriginalFileName}" Margin="0,0,0,8" TextWrapping="Wrap"/>

                                    <TextBlock Text="Type:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MediaLibraryViewModel.SelectedMedia.Type}" Margin="0,0,0,8"/>

                                    <TextBlock Text="MIME Type:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MediaLibraryViewModel.SelectedMedia.MimeType}" Margin="0,0,0,8"/>

                                    <TextBlock Text="File Size:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Margin="0,0,0,8">
                                        <TextBlock.Text>
                                            <Binding Path="MediaLibraryViewModel.SelectedMedia.FileSizeBytes" Converter="{StaticResource FileSizeConverter}"/>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <TextBlock Text="Dimensions:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Margin="0,0,0,8">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} Ã— {1} px">
                                                <Binding Path="MediaLibraryViewModel.SelectedMedia.Width"/>
                                                <Binding Path="MediaLibraryViewModel.SelectedMedia.Height"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <TextBlock Text="Uploaded:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MediaLibraryViewModel.SelectedMedia.UploadedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}" Margin="0,0,0,8"/>

                                    <TextBlock Text="Last Accessed:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MediaLibraryViewModel.SelectedMedia.LastAccessedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}" Margin="0,0,0,8"/>

                                    <TextBlock Text="Access Count:" Margin="0,4,0,2" FontSize="11" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MediaLibraryViewModel.SelectedMedia.AccessCount}" Margin="0,0,0,8"/>

                                    <Separator Margin="0,16"/>

                                    <TextBlock Text="Editable Details" FontWeight="SemiBold" Margin="0,8,0,8"/>

                                    <TextBlock Text="Description:" Margin="0,4,0,2"/>
                                    <TextBox Text="{Binding MediaLibraryViewModel.SelectedMedia.Description, UpdateSourceTrigger=PropertyChanged}"
                                            Height="60"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            Margin="0,0,0,8"/>

                                    <TextBlock Text="Tags (comma-separated):" Margin="0,4,0,2"/>
                                    <TextBox Text="{Binding MediaLibraryViewModel.SelectedMedia.Tags, UpdateSourceTrigger=PropertyChanged}"
                                            Margin="0,0,0,8"/>

                                    <TextBlock Text="Category:" Margin="0,4,0,2"/>
                                    <TextBox Text="{Binding MediaLibraryViewModel.SelectedMedia.Category, UpdateSourceTrigger=PropertyChanged}"
                                            Margin="0,0,0,16"/>

                                    <Button Content="Update Details"
                                           Command="{Binding MediaLibraryViewModel.UpdateMediaDetailsCommand}"
                                           Style="{StaticResource PrimaryButton}"
                                           Margin="0,0,0,8"/>

                                    <Button Content="Delete Media"
                                           Command="{Binding MediaLibraryViewModel.DeleteMediaCommand}"
                                           Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Client Filter -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                                <TextBlock Text="Client:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ComboBox Width="200"
                                         ItemsSource="{Binding LogViewerViewModel.AvailableClients}"
                                         SelectedItem="{Binding LogViewerViewModel.SelectedClientId}"/>
                            </StackPanel>

                            <!-- Log Level Filters -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Levels:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <CheckBox Content="Debug" IsChecked="{Binding LogViewerViewModel.FilterDebug}" Margin="0,0,8,0"/>
                                <CheckBox Content="Info" IsChecked="{Binding LogViewerViewModel.FilterInfo}" Margin="0,0,8,0"/>
                                <CheckBox Content="Warning" IsChecked="{Binding LogViewerViewModel.FilterWarning}" Margin="0,0,8,0"/>
                                <CheckBox Content="Error" IsChecked="{Binding LogViewerViewModel.FilterError}" Margin="0,0,8,0"/>
                                <CheckBox Content="Critical" IsChecked="{Binding LogViewerViewModel.FilterCritical}" Margin="0,0,8,0"/>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <CheckBox Content="Auto-scroll" IsChecked="{Binding LogViewerViewModel.AutoScroll}" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                <Button Content="Refresh" Command="{Binding LogViewerViewModel.RefreshLogsCommand}" Margin="0,0,8,0" Padding="12,4"/>
                                <Button Content="Clear" Command="{Binding LogViewerViewModel.ClearLogsCommand}" Margin="0,0,8,0" Padding="12,4"/>
                                <Button Content="Export..." Command="{Binding LogViewerViewModel.ExportLogsCommand}" Padding="12,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Logs DataGrid -->
                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding LogViewerViewModel.FilteredLogs}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             SelectionMode="Extended"
                             GridLinesVisibility="Horizontal"
                             AlternatingRowBackground="#F9F9F9"
                             HeadersVisibility="Column"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Width="150" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                            <DataGridTextColumn Header="Client" Width="150" Binding="{Binding ClientName}"/>
                            <DataGridTemplateColumn Header="Level" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Level, Converter={StaticResource LogLevelToStringConverter}}"
                                                  Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Message" Width="*" Binding="{Binding Message}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Message}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding Level, Converter={StaticResource LogLevelToBackgroundConverter}}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding LogViewerViewModel.StatusText}" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="All" Command="{Binding LogViewerViewModel.SelectAllFiltersCommand}" Margin="0,0,4,0" Padding="8,2" ToolTip="Enable all log levels"/>
                                <Button Content="None" Command="{Binding LogViewerViewModel.DeselectAllFiltersCommand}" Margin="0,0,4,0" Padding="8,2" ToolTip="Disable all log levels"/>
                                <Button Content="Errors Only" Command="{Binding LogViewerViewModel.ShowErrorsOnlyCommand}" Padding="8,2" ToolTip="Show only errors and critical"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Live Debug Logs Tab -->
            <TabItem Header="Live Debug Logs">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="Live server debug logs - Real-time view of all server activity"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      FontWeight="SemiBold"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox Content="Auto-scroll"
                                         IsChecked="{Binding LiveLogsViewModel.AutoScroll}"
                                         Foreground="White"
                                         Margin="0,0,16,0"
                                         VerticalAlignment="Center"/>
                                <Button Content="Clear Logs"
                                       Command="{Binding LiveLogsViewModel.ClearLogsCommand}"
                                       Style="{StaticResource SecondaryButton}"
                                       Padding="16,6"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Log Messages List -->
                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding LiveLogsViewModel.LogMessages}"
                            Background="#1E1E1E"
                            Foreground="#D4D4D4"
                            BorderThickness="0"
                            FontFamily="Consolas"
                            FontSize="11"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="8,2"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#264F78"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2D2E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="12,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="{Binding LiveLogsViewModel.StatusText}"
                                      Foreground="#D4D4D4"
                                      VerticalAlignment="Center"
                                      FontSize="12"/>

                            <TextBlock Grid.Column="1"
                                      Foreground="#888888"
                                      VerticalAlignment="Center"
                                      FontSize="11">
                                <Run Text="Total:"/>
                                <Run Text="{Binding LiveLogsViewModel.LogCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                <Run Text="logs"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Alerts Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Alerts" Margin="0,0,6,0"/>
                        <Border Background="#F44336" CornerRadius="8" Padding="4,2" Margin="0,0,4,0"
                                Visibility="{Binding Alerts.UnreadAlertCount, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding Alerts.UnreadAlertCount}"
                                       Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <alerts:AlertsPanel DataContext="{Binding Alerts}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
