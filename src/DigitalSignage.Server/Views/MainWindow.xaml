<Window x:Class="DigitalSignage.Server.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DigitalSignage.Server.Controls"
        xmlns:local="clr-namespace:DigitalSignage.Server.Converters"
        mc:Ignorable="d"
        Title="Digital Signage Manager"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Padding="4">
            <MenuItem Header="_File">
                <MenuItem Header="_New Layout" Command="{Binding NewLayoutCommand}"/>
                <MenuItem Header="New from _Template..." Command="{Binding NewFromTemplateCommand}"/>
                <MenuItem Header="_Open Layout" Command="{Binding OpenLayoutCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}"/>
                <Separator/>
                <MenuItem Header="_Export..." Command="{Binding ExportCommand}"/>
                <MenuItem Header="_Import..." Command="{Binding ImportCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding CutCommand}"/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}"/>
                <MenuItem Header="_Delete" Command="{Binding DeleteCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding Designer.ZoomInCommand}"/>
                <MenuItem Header="Zoom _Out" Command="{Binding Designer.ZoomOutCommand}"/>
                <MenuItem Header="Zoom to _Fit" Command="{Binding Designer.ZoomToFitCommand}"/>
                <Separator/>
                <MenuItem Header="Show _Grid" IsCheckable="True" IsChecked="{Binding Designer.ShowGrid}"/>
                <MenuItem Header="Show _Rulers" IsCheckable="True" IsChecked="{Binding ShowRulers}"/>
                <MenuItem Header="Snap to Grid" IsCheckable="True" IsChecked="{Binding Designer.SnapToGrid}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Database Connection" Command="{Binding DatabaseConnectionCommand}"/>
                <MenuItem Header="_Settings" Command="{Binding SettingsCommand}"/>
                <MenuItem Header="_Logs" Command="{Binding LogsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Command="{Binding DocumentationCommand}"/>
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Padding="8,4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Clients: "/>
                    <TextBlock Text="{Binding ConnectedClients}" Margin="4,0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ServerStatus}" Value="Running">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ServerStatus}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area with Tabs -->
        <TabControl Margin="0" TabStripPlacement="Top">
            <!-- Designer Tab -->
            <TabItem Header="Designer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/> <!-- Tool Palette -->
                        <ColumnDefinition Width="*"/>  <!-- Canvas -->
                        <ColumnDefinition Width="300"/> <!-- Properties -->
                    </Grid.ColumnDefinitions>

                    <!-- Tool Palette -->
                    <Border Grid.Column="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                        <StackPanel Margin="8">
                            <Button ToolTip="Select"
                                    Command="{Binding Designer.SelectToolCommand}"
                                    CommandParameter="select"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,4"
                                    Padding="8">
                                <TextBlock Text="â¬š" FontSize="20"/>
                            </Button>
                            <Button ToolTip="Text"
                                    Command="{Binding Designer.AddTextElementCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,4"
                                    Padding="8">
                                <TextBlock Text="T" FontSize="20" FontWeight="Bold"/>
                            </Button>
                            <Button ToolTip="Image"
                                    Command="{Binding Designer.AddImageElementCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,4"
                                    Padding="8">
                                <TextBlock Text="ðŸ–¼" FontSize="18"/>
                            </Button>
                            <Button ToolTip="Rectangle"
                                    Command="{Binding Designer.AddRectangleElementCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,4"
                                    Padding="8">
                                <Rectangle Width="24" Height="16" Fill="Transparent" Stroke="White" StrokeThickness="2"/>
                            </Button>
                            <Separator Margin="0,8" Background="#3F3F46"/>
                            <Button ToolTip="Delete Selected (Del)"
                                    Command="{Binding Designer.DeleteSelectedElementCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,4"
                                    Padding="8">
                                <TextBlock Text="ðŸ—‘" FontSize="18"/>
                            </Button>
                            <Button ToolTip="Duplicate (Ctrl+D)"
                                    Command="{Binding Designer.DuplicateSelectedElementCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,4"
                                    Padding="8">
                                <TextBlock Text="ðŸ“‹" FontSize="18"/>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Canvas Area -->
                    <Grid Grid.Column="1" Background="#1E1E1E">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <controls:DesignerCanvas x:Name="DesignerCanvas"
                                                    Background="White"
                                                    Width="{Binding Designer.CurrentLayout.Resolution.Width}"
                                                    Height="{Binding Designer.CurrentLayout.Resolution.Height}"
                                                    ShowGrid="{Binding Designer.ShowGrid}"
                                                    SnapToGrid="{Binding Designer.SnapToGrid}"
                                                    GridSize="{Binding Designer.GridSize}"
                                                    Margin="20">
                                <controls:DesignerCanvas.LayoutTransform>
                                    <ScaleTransform ScaleX="{Binding Designer.ZoomLevel}"
                                                   ScaleY="{Binding Designer.ZoomLevel}"/>
                                </controls:DesignerCanvas.LayoutTransform>

                                <!-- Render all elements from Designer.Elements -->
                                <ItemsControl ItemsSource="{Binding Designer.Elements}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <controls:DesignerItemControl DisplayElement="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:DesignerCanvas>
                        </ScrollViewer>

                        <!-- Zoom Controls Toolbar -->
                        <Border Grid.Row="1" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="12,8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding Designer.ZoomOutCommand}"
                                        Content="-"
                                        Width="32"
                                        Height="28"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,8,0"
                                        ToolTip="Zoom Out (Ctrl+-)"/>
                                <Slider Value="{Binding Designer.ZoomLevel}"
                                        Minimum="0.25"
                                        Maximum="4.0"
                                        Width="150"
                                        VerticalAlignment="Center"
                                        TickFrequency="0.25"
                                        IsSnapToTickEnabled="False"
                                        Margin="0,0,8,0"
                                        ToolTip="Zoom Level"/>
                                <TextBlock Text="{Binding Designer.ZoomLevel, StringFormat={}{0:P0}}"
                                          Width="50"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          Margin="0,0,8,0"/>
                                <Button Command="{Binding Designer.ZoomInCommand}"
                                        Content="+"
                                        Width="32"
                                        Height="28"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,8,0"
                                        ToolTip="Zoom In (Ctrl++)"/>
                                <Button Command="{Binding Designer.ZoomToFitCommand}"
                                        Content="Fit"
                                        Width="50"
                                        Height="28"
                                        Style="{StaticResource SecondaryButton}"
                                        ToolTip="Zoom to Fit (Ctrl+0)"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Properties Panel -->
                    <Border Grid.Column="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                        <ScrollViewer>
                            <StackPanel Margin="12">
                                <TextBlock Text="Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

                                <!-- Layout Properties -->
                                <TextBlock Text="Layout" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                <TextBlock Text="Name:" Margin="0,4,0,2"/>
                                <TextBox Text="{Binding Designer.CurrentLayout.Name, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Resolution:" Margin="0,8,0,2"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Width="80" Text="{Binding Designer.CurrentLayout.Resolution.Width, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                                    <TextBlock Text="Ã—" Margin="4,0" VerticalAlignment="Center"/>
                                    <TextBox Width="80" Text="{Binding Designer.CurrentLayout.Resolution.Height, UpdateSourceTrigger=PropertyChanged}" Margin="4,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Background:" Margin="0,12,0,4"/>
                                <TextBox Text="{Binding Designer.CurrentLayout.BackgroundColor, UpdateSourceTrigger=PropertyChanged}"/>

                                <Separator Margin="0,16"/>

                                <!-- Selected Element Properties -->
                                <TextBlock Text="Selected Element" FontWeight="SemiBold" Margin="0,8,0,4"/>

                                <!-- Show when no element is selected -->
                                <TextBlock Text="No element selected"
                                          Foreground="Gray"
                                          Margin="0,8">
                                    <TextBlock.Visibility>
                                        <Binding Path="Designer.SelectedElement">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>

                                <!-- Show when element is selected -->
                                <StackPanel>
                                    <StackPanel.Visibility>
                                        <Binding Path="Designer.SelectedElement">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter Invert="True"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </StackPanel.Visibility>

                                    <TextBlock Text="Name:" Margin="0,4,0,2"/>
                                    <TextBox Text="{Binding Designer.SelectedElement.Name, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Position:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="1" Text="{Binding Designer.SelectedElement.Position.X, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="3" Text="{Binding Designer.SelectedElement.Position.Y, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Size:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="W:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="1" Text="{Binding Designer.SelectedElement.Size.Width, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="2" Text="H:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="3" Text="{Binding Designer.SelectedElement.Size.Height, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Z-Index:" Margin="0,12,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Width="60" Text="{Binding Designer.SelectedElement.ZIndex, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Content="â–²" Command="{Binding Designer.MoveElementUpCommand}" Margin="8,0,4,0" Padding="8,2"/>
                                        <Button Content="â–¼" Command="{Binding Designer.MoveElementDownCommand}" Padding="8,2"/>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <TextBlock Text="Actions:" FontWeight="SemiBold" Margin="0,8,0,8"/>
                                    <Button Content="Duplicate Element" Command="{Binding Designer.DuplicateSelectedElementCommand}" Margin="0,0,0,4"/>
                                    <Button Content="Delete Element" Command="{Binding Designer.DeleteSelectedElementCommand}" Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="Devices">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Device List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="12,8">
                            <Button Content="ðŸ”„ Refresh" Command="{Binding DeviceManagement.LoadClientsCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                            <Button Content="âŒ Remove Device" Command="{Binding DeviceManagement.RemoveClientCommand}" Style="{StaticResource SecondaryButton}"/>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                 ItemsSource="{Binding DeviceManagement.Clients}"
                                 SelectedItem="{Binding DeviceManagement.SelectedClient}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single"
                                 Margin="12,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
                                <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="140"/>
                                <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="100"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="120"/>
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="Gray"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                    <Setter Property="Fill" Value="LimeGreen"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                    <Setter Property="Fill" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Status Bar -->
                        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="12,8">
                            <TextBlock Text="{Binding DeviceManagement.StatusMessage}" FontSize="12" Foreground="#666666"/>
                        </Border>
                    </Grid>

                    <!-- Control Panel -->
                    <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                        <ScrollViewer>
                            <StackPanel Margin="16">
                                <TextBlock Text="Device Control" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                                <!-- Device Info -->
                                <TextBlock Text="Selected Device" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Text="No device selected" Foreground="Gray" Margin="0,0,0,16">
                                    <TextBlock.Visibility>
                                        <Binding Path="DeviceManagement.SelectedClient">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>

                                <StackPanel>
                                    <StackPanel.Visibility>
                                        <Binding Path="DeviceManagement.SelectedClient">
                                            <Binding.Converter>
                                                <local:NullToVisibilityConverter Invert="True"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </StackPanel.Visibility>

                                    <TextBlock Text="{Binding DeviceManagement.SelectedClient.Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding DeviceManagement.SelectedClient.IpAddress}" FontSize="12" Foreground="#666666" Margin="0,0,0,16"/>

                                    <!-- Remote Commands -->
                                    <TextBlock Text="Remote Commands" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                    <Button Content="ðŸ”„ Restart Device" Command="{Binding DeviceManagement.RestartClientCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                                    <Button Content="ðŸ”„ Restart App" Command="{Binding DeviceManagement.RestartClientAppCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                                    <Button Content="ðŸ“· Take Screenshot" Command="{Binding DeviceManagement.TakeScreenshotCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                                    <!-- Screen Control -->
                                    <TextBlock Text="Screen Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Button Content="ðŸ’¡ Screen On" Command="{Binding DeviceManagement.ScreenOnCommand}" Margin="0,0,8,0" Padding="12,6"/>
                                        <Button Content="ðŸŒ™ Screen Off" Command="{Binding DeviceManagement.ScreenOffCommand}" Padding="12,6"/>
                                    </StackPanel>

                                    <!-- Volume Control -->
                                    <TextBlock Text="Volume Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding DeviceManagement.VolumeLevel}" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                        <TextBlock Grid.Column="1" Text="{Binding DeviceManagement.VolumeLevel, StringFormat='{}{0}%'}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    </Grid>
                                    <Button Content="ðŸ”Š Set Volume" Command="{Binding DeviceManagement.SetVolumeCommand}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                                    <!-- Layout Assignment -->
                                    <TextBlock Text="Layout Assignment" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding DeviceManagement.AvailableLayouts}"
                                             DisplayMemberPath="Name"
                                             SelectedValuePath="Id"
                                             SelectedValue="{Binding DeviceManagement.SelectedClient.AssignedLayoutId}"
                                             Margin="0,0,0,8"/>
                                    <Button Content="ðŸ“‹ Assign Layout" Command="{Binding DeviceManagement.AssignLayoutCommand}" CommandParameter="{Binding DeviceManagement.SelectedClient.AssignedLayoutId}" Margin="0,0,0,16" HorizontalAlignment="Stretch"/>

                                    <!-- Maintenance -->
                                    <TextBlock Text="Maintenance" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <Button Content="ðŸ—‘ Clear Cache" Command="{Binding DeviceManagement.ClearCacheCommand}" Margin="0,0,0,8" HorizontalAlignment="Stretch" Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Data Sources Tab -->
            <TabItem Header="Data Sources">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data Source List -->
                    <Border Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="8">
                                <Button Content="Add SQL Data Source"
                                        Command="{Binding DataSourceViewModel.AddDataSourceCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,0,4"/>
                                <Button Content="Add Static Data Source"
                                        Command="{Binding DataSourceViewModel.AddStaticDataSourceCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,0,8"/>
                            </StackPanel>
                            <ListBox ItemsSource="{Binding DataSourceViewModel.DataSources}"
                                     SelectedItem="{Binding DataSourceViewModel.SelectedDataSource}"
                                     DisplayMemberPath="Name"
                                     Margin="8,0"/>
                        </DockPanel>
                    </Border>

                    <!-- Data Source Editor -->
                    <ScrollViewer Grid.Column="1">
                        <StackPanel Margin="16">
                            <TextBlock Text="Data Source Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

                            <!-- Show when no data source is selected -->
                            <TextBlock Text="No data source selected. Click 'Add SQL Data Source' or 'Add Static Data Source' to begin."
                                      Foreground="Gray"
                                      Margin="0,8"
                                      TextWrapping="Wrap">
                                <TextBlock.Visibility>
                                    <Binding Path="DataSourceViewModel.SelectedDataSource">
                                        <Binding.Converter>
                                            <local:NullToVisibilityConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Visibility>
                            </TextBlock>

                            <!-- Show when data source is selected -->
                            <StackPanel>
                                <StackPanel.Visibility>
                                    <Binding Path="DataSourceViewModel.SelectedDataSource">
                                        <Binding.Converter>
                                            <local:NullToVisibilityConverter Invert="True"/>
                                        </Binding.Converter>
                                    </Binding>
                                </StackPanel.Visibility>

                                <TextBlock Text="Name:" Margin="0,8,0,4"/>
                                <TextBox Text="{Binding DataSourceViewModel.SelectedDataSource.Name, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Type:" Margin="0,12,0,4"/>
                                <CheckBox Content="Use Static Data (for testing)"
                                          IsChecked="{Binding DataSourceViewModel.IsStaticDataSource}"
                                          Margin="0,4"/>

                                <!-- Static Data Section (visible when IsStaticDataSource is true) -->
                                <StackPanel Visibility="{Binding DataSourceViewModel.IsStaticDataSource, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Static Data (JSON):" Margin="0,12,0,4" FontWeight="SemiBold"/>
                                    <TextBlock Text="Example: { &quot;room_name&quot;: &quot;Conference Room A&quot;, &quot;status&quot;: &quot;Available&quot;, &quot;temperature&quot;: &quot;22Â°C&quot; }"
                                              Foreground="Gray"
                                              FontSize="11"
                                              Margin="0,0,0,4"
                                              TextWrapping="Wrap"/>
                                    <TextBox Text="{Binding DataSourceViewModel.StaticDataJson, UpdateSourceTrigger=PropertyChanged}"
                                            Height="200"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            FontFamily="Consolas"
                                            FontSize="12"
                                            VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>

                                <!-- SQL Database Section (visible when IsStaticDataSource is false) -->
                                <StackPanel Visibility="{Binding DataSourceViewModel.IsStaticDataSource, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="Connection String:" Margin="0,12,0,4"/>
                                    <TextBox Text="{Binding DataSourceViewModel.SelectedDataSource.ConnectionString, UpdateSourceTrigger=PropertyChanged}"
                                            Height="60"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"/>

                                    <TextBlock Text="Query:" Margin="0,12,0,4"/>
                                    <TextBox Text="{Binding DataSourceViewModel.SelectedDataSource.Query, UpdateSourceTrigger=PropertyChanged}"
                                            Height="120"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            FontFamily="Consolas"/>

                                    <!-- Query Builder Section -->
                                    <Border Background="#F8F8F8"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,16,0,0">
                                        <StackPanel>
                                            <TextBlock Text="Visual Query Builder" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                            <TextBlock Text="Build SQL queries visually. Generated query will be applied to the Query field above."
                                                      FontSize="11"
                                                      Foreground="#666666"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,12"/>

                                            <!-- Table Name -->
                                            <TextBlock Text="Table Name:" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding DataSourceViewModel.QueryTableName, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,0,8"
                                                    ToolTip="Enter the name of the database table"/>

                                            <!-- Columns -->
                                            <TextBlock Text="Columns:" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding DataSourceViewModel.QueryColumns, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,0,8"
                                                    ToolTip="Enter column names separated by commas, or * for all columns"/>

                                            <!-- WHERE Clause -->
                                            <TextBlock Text="WHERE Clause (optional):" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding DataSourceViewModel.QueryWhereClause, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,0,8"
                                                    ToolTip="Example: status = 'active' AND created_at > '2024-01-01'"/>

                                            <!-- ORDER BY -->
                                            <TextBlock Text="ORDER BY (optional):" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding DataSourceViewModel.QueryOrderBy, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,0,12"
                                                    ToolTip="Example: created_at DESC, name ASC"/>

                                            <!-- Generate Button -->
                                            <Button Content="Generate Query"
                                                   Command="{Binding DataSourceViewModel.GenerateQueryCommand}"
                                                   Style="{StaticResource PrimaryButton}"
                                                   HorizontalAlignment="Left"
                                                   Padding="20,8"/>

                                            <!-- Generated Query Preview -->
                                            <TextBlock Text="Generated Query:" Margin="0,16,0,4" FontWeight="SemiBold"/>
                                            <TextBox Text="{Binding DataSourceViewModel.GeneratedQuery, Mode=OneWay}"
                                                    Height="100"
                                                    IsReadOnly="True"
                                                    Background="#EEEEEE"
                                                    FontFamily="Consolas"
                                                    FontSize="12"
                                                    TextWrapping="Wrap"
                                                    VerticalScrollBarVisibility="Auto"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="Refresh Interval (seconds):" Margin="0,12,0,4"/>
                                <TextBox Text="{Binding DataSourceViewModel.SelectedDataSource.RefreshInterval, UpdateSourceTrigger=PropertyChanged}"/>

                                <!-- Test Result -->
                                <TextBlock Text="{Binding DataSourceViewModel.TestResult}"
                                          Margin="0,12,0,0"
                                          FontWeight="SemiBold"
                                          Foreground="{Binding DataSourceViewModel.TestResult, Converter={StaticResource TestResultToColorConverter}}"
                                          TextWrapping="Wrap"/>

                                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                    <Button Content="Test Connection"
                                            Command="{Binding DataSourceViewModel.TestConnectionCommand}"
                                            Style="{StaticResource PrimaryButton}"
                                            Margin="0,0,8,0"
                                            IsEnabled="{Binding DataSourceViewModel.IsTesting, Converter={StaticResource InverseBooleanConverter}}"/>
                                    <Button Content="Save"
                                            Command="{Binding DataSourceViewModel.SaveDataSourceCommand}"
                                            Style="{StaticResource PrimaryButton}"
                                            Margin="0,0,8,0"/>
                                    <Button Content="Delete"
                                            Command="{Binding DataSourceViewModel.DeleteDataSourceCommand}"
                                            Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Preview Tab -->
            <TabItem Header="Preview">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Test Data Source:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ComboBox ItemsSource="{Binding PreviewViewModel.AvailableDataSources}"
                                         SelectedItem="{Binding PreviewViewModel.SelectedTestDataSource}"
                                         DisplayMemberPath="Name"
                                         Width="200"
                                         Margin="0,0,12,0"/>
                                <Button Content="ðŸ”„ Refresh Preview"
                                       Command="{Binding PreviewViewModel.RefreshPreviewCommand}"
                                       Style="{StaticResource PrimaryButton}"
                                       IsEnabled="{Binding PreviewViewModel.IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                                       Margin="0,0,8,0"/>
                                <Button Content="Clear Preview"
                                       Command="{Binding PreviewViewModel.ClearPreviewCommand}"
                                       Style="{StaticResource SecondaryButton}"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1"
                                      Text="{Binding PreviewViewModel.PreviewStatus}"
                                      VerticalAlignment="Center"
                                      Foreground="#666666"
                                      FontSize="12"/>
                        </Grid>
                    </Border>

                    <!-- Preview Canvas -->
                    <ScrollViewer Grid.Row="1"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="#2A2A2A">
                        <Border Background="White"
                               Width="{Binding PreviewViewModel.CurrentLayout.Resolution.Width, FallbackValue=1920}"
                               Height="{Binding PreviewViewModel.CurrentLayout.Resolution.Height, FallbackValue=1080}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="50">
                            <Canvas>
                                <!-- Background Color -->
                                <Canvas.Background>
                                    <SolidColorBrush Color="{Binding PreviewViewModel.CurrentLayout.BackgroundColor, FallbackValue=White}"/>
                                </Canvas.Background>

                                <!-- Render Preview Elements -->
                                <ItemsControl ItemsSource="{Binding PreviewViewModel.PreviewElements}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style>
                                            <Setter Property="Canvas.Left" Value="{Binding Position.X}"/>
                                            <Setter Property="Canvas.Top" Value="{Binding Position.Y}"/>
                                            <Setter Property="Canvas.ZIndex" Value="{Binding ZIndex}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="{Binding Size.Width}"
                                                   Height="{Binding Size.Height}"
                                                   Background="Transparent">
                                                <!-- Text Element -->
                                                <TextBlock Text="{Binding Properties[Content]}"
                                                          TextWrapping="Wrap"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="Text">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Placeholder when no layout -->
                                <TextBlock Text="No layout loaded. Create or open a layout in the Designer tab."
                                          Canvas.Left="400"
                                          Canvas.Top="500"
                                          FontSize="24"
                                          Foreground="#999999"
                                          Visibility="{Binding PreviewViewModel.CurrentLayout, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </Canvas>
                        </Border>
                    </ScrollViewer>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" FontSize="11" Foreground="#666666">
                                <Run Text="Preview shows how the layout will appear with test data."/>
                                <Run Text="Variables like {{room_name}} are replaced with actual values."/>
                            </TextBlock>

                            <TextBlock Grid.Column="1"
                                      FontSize="11"
                                      Foreground="#666666">
                                <Run Text="Elements: "/>
                                <Run Text="{Binding PreviewViewModel.PreviewElements.Count, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
