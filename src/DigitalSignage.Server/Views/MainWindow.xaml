                                        <TextBox Width="60" Text="{Binding Designer.SelectedElement.ZIndex, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Content="â–²" Command="{Binding Designer.MoveElementUpCommand}" Margin="8,0,4,0" Padding="8,2"/>
                                        <Button Content="â–¼" Command="{Binding Designer.MoveElementDownCommand}" Padding="8,2"/>
                                    </StackPanel>

                                    <TextBlock Text="Rotation:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Minimum="0"
                                                Maximum="360"
                                                Value="{Binding Designer.SelectedElement[Rotation], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"
                                                TickFrequency="45"
                                                IsSnapToTickEnabled="False"
                                                Margin="0,0,8,0"/>
                                        <TextBox Grid.Column="1"
                                                Width="60"
                                                Text="{Binding Designer.SelectedElement[Rotation], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Opacity:" Margin="0,12,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Minimum="0"
                                                Maximum="1"
                                                Value="{Binding Designer.SelectedElement.Opacity, FallbackValue=1, UpdateSourceTrigger=PropertyChanged}"
                                                TickFrequency="0.1"
                                                IsSnapToTickEnabled="False"
                                                Margin="0,0,8,0"/>
                                        <TextBox Grid.Column="1"
                                                Width="60"
                                                Text="{Binding Designer.SelectedElement.Opacity, FallbackValue=1, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Visibility:" Margin="0,12,0,4"/>
                                    <CheckBox Content="Visible" IsChecked="{Binding Designer.SelectedElement.Visible, FallbackValue=True}" Margin="0,4,0,0"/>

                                    <Separator Margin="0,16"/>

                                    <!-- Advanced Properties -->
                                    <TextBlock Text="Advanced" FontWeight="SemiBold" Margin="0,8,0,8"/>

                                    <TextBlock Text="Border Radius:" Margin="0,4,0,2"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Minimum="0"
                                                Maximum="100"
                                                Value="{Binding Designer.SelectedElement[BorderRadius], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"
                                                TickFrequency="5"
                                                IsSnapToTickEnabled="False"
                                                Margin="0,0,8,0"/>
                                        <TextBox Grid.Column="1"
                                                Width="60"
                                                Text="{Binding Designer.SelectedElement[BorderRadius], FallbackValue=0, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <TextBlock Text="Shadow:" Margin="0,12,0,4"/>
                                    <CheckBox Content="Enable Shadow" IsChecked="{Binding Designer.SelectedElement[EnableShadow], FallbackValue=False}" Margin="0,4,0,8"/>

                                    <StackPanel Visibility="{Binding Designer.SelectedElement[EnableShadow], Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                        <TextBlock Text="Shadow Blur:" Margin="0,4,0,2" FontSize="11"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Slider Grid.Column="0"
                                                    Minimum="0"
                                                    Maximum="50"
                                                    Value="{Binding Designer.SelectedElement[ShadowBlur], FallbackValue=10, UpdateSourceTrigger=PropertyChanged}"
                                                    TickFrequency="5"
                                                    IsSnapToTickEnabled="False"
                                                    Margin="0,0,8,0"/>
                                            <TextBox Grid.Column="1"
                                                    Width="60"
                                                    Text="{Binding Designer.SelectedElement[ShadowBlur], FallbackValue=10, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <TextBlock Text="Shadow Color:" Margin="0,8,0,2" FontSize="11"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement[ShadowColor], FallbackValue=#80000000, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement[ShadowColor], Converter={StaticResource HexToColorConverter}, FallbackValue=#80000000}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="Shadow Offset X:" Margin="0,8,0,2" FontSize="11"/>
                                        <TextBox Text="{Binding Designer.SelectedElement[ShadowOffsetX], FallbackValue=5, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Text="Shadow Offset Y:" Margin="0,4,0,2" FontSize="11"/>
                                        <TextBox Text="{Binding Designer.SelectedElement[ShadowOffsetY], FallbackValue=5, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <!-- Text Element Properties -->
                                    <StackPanel>
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Designer.SelectedElement.Type}" Value="text">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <TextBlock Text="Text Properties" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                        <TextBlock Text="Content:" Margin="0,4,0,2"/>
                                        <TextBox Text="{Binding Designer.SelectedElement[Content], UpdateSourceTrigger=PropertyChanged}"
                                                Height="60"
                                                TextWrapping="Wrap"
                                                AcceptsReturn="True"
                                                VerticalScrollBarVisibility="Auto"/>

                                        <TextBlock Text="Font Family:" Margin="0,12,0,4"/>
                                        <ComboBox SelectedValue="{Binding Designer.SelectedElement[FontFamily], FallbackValue=Arial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectedValuePath="Content">
                                            <ComboBoxItem Content="Arial"/>
                                            <ComboBoxItem Content="Calibri"/>
                                            <ComboBoxItem Content="Times New Roman"/>
                                            <ComboBoxItem Content="Verdana"/>
                                            <ComboBoxItem Content="Georgia"/>
                                            <ComboBoxItem Content="Courier New"/>
                                            <ComboBoxItem Content="Comic Sans MS"/>
                                            <ComboBoxItem Content="Impact"/>
                                            <ComboBoxItem Content="Tahoma"/>
                                            <ComboBoxItem Content="Trebuchet MS"/>
                                        </ComboBox>

                                        <TextBlock Text="Font Size:" Margin="0,12,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Slider Grid.Column="0"
                                                   Minimum="8"
                                                   Maximum="144"
                                                   Value="{Binding Designer.SelectedElement[FontSize], FallbackValue=24}"
                                                   TickFrequency="4"
                                                   IsSnapToTickEnabled="True"
                                                   Margin="0,0,8,0"/>
                                            <TextBox Grid.Column="1"
                                                    Width="60"
                                                    Text="{Binding Designer.SelectedElement[FontSize], FallbackValue=24, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <TextBlock Text="Font Style:" Margin="0,12,0,4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <ToggleButton Content="Bold"
                                                         IsChecked="{Binding Designer.SelectedElement[FontWeight], Converter={StaticResource FontWeightToBoolConverter}, FallbackValue=False}"
                                                         Width="60"
                                                         Margin="0,0,4,0"
                                                         Padding="8,4"/>
                                            <ToggleButton Content="Italic"
                                                         IsChecked="{Binding Designer.SelectedElement[FontStyle], Converter={StaticResource FontStyleToBoolConverter}, FallbackValue=False}"
                                                         Width="60"
                                                         Padding="8,4"/>
                                        </StackPanel>

                                        <TextBlock Text="Text Color:" Margin="0,12,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement[Color], FallbackValue=#000000, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement[Color], Converter={StaticResource HexToColorConverter}, FallbackValue=Black}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <!-- Rectangle/Shape Properties -->
                                    <StackPanel Visibility="{Binding Designer.SelectedElement.Type, Converter={StaticResource ElementTypeToVisibilityConverter}, ConverterParameter='rectangle,shape,circle'}">
                                        <TextBlock Text="Rectangle Properties" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                        <TextBlock Text="Fill Color:" Margin="0,4,0,2"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement[FillColor], FallbackValue=#ADD8E6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement[FillColor], Converter={StaticResource HexToColorConverter}, FallbackValue=LightBlue}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="Border Color:" Margin="0,12,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                    Text="{Binding Designer.SelectedElement[BorderColor], FallbackValue=#00008B, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Margin="0,0,8,0"/>
                                            <Border Grid.Column="1"
                                                   Width="40"
                                                   Height="30"
                                                   BorderBrush="#CCCCCC"
                                                   BorderThickness="1">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Designer.SelectedElement[BorderColor], Converter={StaticResource HexToColorConverter}, FallbackValue=DarkBlue}"/>
                                                </Border.Background>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="Border Thickness:" Margin="0,12,0,4"/>
                                        <TextBox Text="{Binding Designer.SelectedElement[BorderThickness], FallbackValue=2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <Separator Margin="0,16"/>

                                    <TextBlock Text="Actions:" FontWeight="SemiBold" Margin="0,8,0,8"/>
                                    <Button Content="Duplicate Element" Command="{Binding Designer.DuplicateSelectedElementCommand}" Margin="0,0,0,4"/>
                                    <Button Content="Delete Element" Command="{Binding Designer.DeleteSelectedElementCommand}" Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="Devices">
                <devicemgmt:DeviceManagementTabControl DataContext="{Binding DeviceManagement}"/>
            </TabItem>

            <!-- SQL Data Sources Tab -->
            <TabItem Header="SQL Data Sources">
                <sqldatasources:SqlDataSourcesTabControl DataContext="{Binding SqlDataSources}"/>
            </TabItem>

            <!-- Scheduling Tab -->
            <TabItem Header="Scheduling">
                <scheduling:SchedulingTabControl DataContext="{Binding}"/>
            </TabItem>

            <!-- Preview Tab -->
            <TabItem Header="Preview">
                <preview:PreviewTabControl DataContext="{Binding}"/>
            </TabItem>

            <!-- Media Library Tab -->
            <TabItem Header="Media Library">
                <media:MediaLibraryTabControl DataContext="{Binding}"/>
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <Grid DataContext="{Binding LogViewerViewModel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 1: Client, Log Level, Date Range -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Client:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding AvailableClients}"
                                     SelectedItem="{Binding SelectedClientId}" MinWidth="150"/>

                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Log Level:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Row="0" Grid.Column="6" ItemsSource="{Binding LogLevels}"
                                     SelectedItem="{Binding SelectedLogLevel}" MinWidth="120"/>

                            <TextBlock Grid.Row="0" Grid.Column="8" Text="Date From:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <DatePicker Grid.Row="0" Grid.Column="10" SelectedDate="{Binding DateFrom}" MinWidth="130"/>

                            <!-- Row 2: Source Filter, Date To, Buttons -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Source:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding AvailableSources}"
                                     Text="{Binding SourceFilter, UpdateSourceTrigger=PropertyChanged}"
                                     IsEditable="True" MinWidth="150"/>

                            <TextBlock Grid.Row="2" Grid.Column="8" Text="Date To:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <DatePicker Grid.Row="2" Grid.Column="10" SelectedDate="{Binding DateTo}" MinWidth="130"/>

                            <StackPanel Grid.Row="2" Grid.Column="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0">
                                <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}"
                                       Width="100" Margin="0,0,5,0"/>
                                <Button Content="Refresh" Command="{Binding RefreshLogsCommand}"
                                       Width="80" Margin="0,0,5,0"/>
                                <Button Content="Clear All" Command="{Binding ClearLogsCommand}"
                                       Width="80" Background="#DC143C" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Search and Export Toolbar -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="2" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Center" ToolTip="Search in message, source, client name, and exception"/>

                            <CheckBox Grid.Column="4" Content="Case Sensitive" IsChecked="{Binding CaseSensitiveSearch}"
                                     VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="5" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Run Text="Results: "/>
                                <Run Text="{Binding SearchResultCount, Mode=OneWay}" FontWeight="Bold"/>
                            </TextBlock>

                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Export:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <Button Content="CSV" Command="{Binding ExportToCsvCommand}"
                                       Width="60" Margin="0,0,5,0" IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"/>
                                <Button Content="Text" Command="{Binding ExportToTextCommand}"
                                       Width="60" Margin="0,0,5,0" IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"/>
                                <Button Content="JSON" Command="{Binding ExportToJsonCommand}"
                                       Width="60" IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Logs DataGrid -->
                    <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredLogs}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Extended"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             EnableRowVirtualization="True"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             AlternationCount="2"
                             AlternatingRowBackground="#F9F9F9">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding Level, Converter={StaticResource LogLevelToBackgroundConverter}}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F4F8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Selected" Click="CopyLogsToClipboard_Click"/>
                                <Separator/>
                                <MenuItem Header="Show Details" Click="ShowLogDetails_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}"
                                               Width="170" SortDirection="Descending"/>
                            <DataGridTextColumn Header="Level" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding Level}"/>
                                        <Setter Property="Foreground" Value="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="150"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="200"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" MinWidth="300">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Message}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding StatusText}" VerticalAlignment="Center" FontStyle="Italic"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}"
                                         VerticalAlignment="Center" Margin="0,0,20,0"
                                         ToolTip="Automatically scroll to newest log entries"/>
                                <TextBlock Text="Total Logs: " VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding LogCount}" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Live Debug Logs Tab -->
            <TabItem Header="Live Debug Logs">
                <Grid DataContext="{Binding LiveLogsViewModel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ðŸ”´ Live Debug Logs" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Button Content="Clear Logs" Command="{Binding ClearLogsCommand}" Width="100" Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Log Display -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding LogMessages}"
                             BorderThickness="0"
                             Margin="0"
                             FontFamily="Consolas,Courier New"
                             FontSize="11"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Margin" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F4F8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="NoWrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <!-- Color based on log level -->
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Error">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Warning">
                                                    <Setter Property="Foreground" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Information">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Debug">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding StatusText}" VerticalAlignment="Center" FontStyle="Italic"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Log Entries: " VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding LogCount}" VerticalAlignment="Center" FontWeight="Bold" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Alerts Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Alerts" Margin="0,0,6,0"/>
                        <Border Background="#F44336" CornerRadius="8" Padding="4,2" Margin="0,0,4,0"
                                Visibility="{Binding Alerts.UnreadAlertCount, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding Alerts.UnreadAlertCount}"
                                       Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <alerts:AlertsPanel DataContext="{Binding Alerts}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
