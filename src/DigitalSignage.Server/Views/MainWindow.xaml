                                </controls:DesignerCanvas.ContextMenu>

                                <controls:DesignerCanvas.LayoutTransform>
                                    <ScaleTransform ScaleX="{Binding Designer.ZoomLevel}"
                                                   ScaleY="{Binding Designer.ZoomLevel}"/>
                                </controls:DesignerCanvas.LayoutTransform>

                                <!-- Render all elements using DesignerItemControl -->
                                <controls:DesignerItemsControl ItemsSource="{Binding Designer.Elements}"
                                                               Width="{Binding Designer.CurrentLayout.Resolution.Width}"
                                                               Height="{Binding Designer.CurrentLayout.Resolution.Height}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="{Binding DataContext.Designer.CurrentLayout.Resolution.Width, RelativeSource={RelativeSource AncestorType=controls:DesignerCanvas}}"
                                                    Height="{Binding DataContext.Designer.CurrentLayout.Resolution.Height, RelativeSource={RelativeSource AncestorType=controls:DesignerCanvas}}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Width/Height bindings keep DesignerItemControl content sized -->
                                            <controls:DesignerItemControl
                                                DisplayElement="{Binding}"
                                                IsSelected="{Binding IsSelected}"
                                                Tag="{Binding}"
                                                Width="{Binding Size.Width}"
                                                Height="{Binding Size.Height}"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="Element_MouseLeftButtonDown"
                                                MouseMove="Element_MouseMove"
                                                MouseLeftButtonUp="Element_MouseLeftButtonUp"/>
