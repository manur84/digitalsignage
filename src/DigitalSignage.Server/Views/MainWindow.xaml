<Window x:Class="DigitalSignage.Server.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSignage.Server.Converters"
        xmlns:views="clr-namespace:DigitalSignage.Server.Views"
        xmlns:devicemgmt="clr-namespace:DigitalSignage.Server.Views.DeviceManagement"
        xmlns:scheduling="clr-namespace:DigitalSignage.Server.Views.Scheduling"
        xmlns:preview="clr-namespace:DigitalSignage.Server.Views.Preview"
        xmlns:alerts="clr-namespace:DigitalSignage.Server.Views.Alerts"
        xmlns:layoutmanager="clr-namespace:DigitalSignage.Server.Views.LayoutManager"
        mc:Ignorable="d"
        Title="Digital Signage Manager"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>
        <local:LogLevelToBackgroundConverter x:Key="LogLevelToBackgroundConverter"/>
        <local:LogLevelToStringConverter x:Key="LogLevelToStringConverter"/>
        <local:ElementTypeToVisibilityConverter x:Key="ElementTypeToVisibilityConverter"/>
        <local:TypeEqualsConverter x:Key="TypeEqualsConverter"/>
        <local:TypeEqualsAnyConverter x:Key="TypeEqualsAnyConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToVisibilityStringConverter x:Key="BoolToVisibilityStringConverter"/>
        <local:BoolToOnOffStringConverter x:Key="BoolToOnOffStringConverter"/>
    </Window.Resources>

    <DockPanel>
                <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Padding="4">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Database Connection" Command="{Binding Diagnostics.DatabaseConnectionCommand}"/>
                <MenuItem Header="Test Database" Command="{Binding Diagnostics.TestDatabaseCommand}"/>
                <Separator/>
                <MenuItem Header="_Settings" Command="{Binding SettingsCommand}"/>
                <MenuItem Header="Server _Configuration" Command="{Binding ServerManagement.ServerConfigurationCommand}"/>
                <Separator/>
                <MenuItem Header="_Client Installer" Command="{Binding ClientInstallerCommand}"/>
                <Separator/>
                <MenuItem Header="_Logs" Command="{Binding LogsCommand}"/>
                <MenuItem Header="Clear Logs" Command="{Binding Diagnostics.ClearLogsCommand}"/>
                <Separator/>
                <MenuItem Header="Client _Registration Tokens" Command="{Binding ClientTokensCommand}"/>
                <Separator/>
                <MenuItem Header="_Backup Database" Command="{Binding BackupDatabaseCommand}"/>
                <MenuItem Header="_Restore Database" Command="{Binding RestoreDatabaseCommand}"/>
                <Separator/>
                <MenuItem Header="System _Diagnostics" Command="{Binding Diagnostics.SystemDiagnosticsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Command="{Binding DocumentationCommand}"/>
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Padding="8,4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Clients: "/>
                    <TextBlock Text="{Binding ServerManagement.ConnectedClients}" Margin="4,0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ServerManagement.ServerStatus}" Value="Running">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ServerManagement.ServerStatus}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area with Tabs -->
        <TabControl Margin="0" TabStripPlacement="Top">
            <!-- Layout Manager Tab -->
            <TabItem Header="Layout Manager (PNG)">
                <layoutmanager:LayoutManagerTabControl DataContext="{Binding LayoutManager}"/>
            </TabItem>

            <!-- Devices Tab -->
            <TabItem Header="Devices">
                <devicemgmt:DeviceManagementTabControl DataContext="{Binding DeviceManagement}"/>
            </TabItem>

            <!-- Scheduling Tab -->
            <TabItem Header="Scheduling">
                <scheduling:SchedulingTabControl DataContext="{Binding}"/>
            </TabItem>

            <!-- Mobile Apps Tab -->
            <TabItem Header="Mobile Apps">
                <views:MobileAppManagementView DataContext="{Binding MobileAppManagement}"/>
            </TabItem>

            <!-- Preview Tab -->

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <Grid DataContext="{Binding LogViewerViewModel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 1: Client, Log Level, Date Range -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Client:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding AvailableClients}"
                                     SelectedItem="{Binding SelectedClientId}" MinWidth="150"/>

                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Log Level:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Row="0" Grid.Column="6" ItemsSource="{Binding LogLevels}"
                                     SelectedItem="{Binding SelectedLogLevel}" MinWidth="120"/>

                            <TextBlock Grid.Row="0" Grid.Column="8" Text="Date From:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <DatePicker Grid.Row="0" Grid.Column="10" SelectedDate="{Binding DateFrom}" MinWidth="130"/>

                            <!-- Row 2: Source Filter, Date To, Buttons -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Source:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding AvailableSources}"
                                     Text="{Binding SourceFilter, UpdateSourceTrigger=PropertyChanged}"
                                     IsEditable="True" MinWidth="150"/>

                            <TextBlock Grid.Row="2" Grid.Column="8" Text="Date To:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <DatePicker Grid.Row="2" Grid.Column="10" SelectedDate="{Binding DateTo}" MinWidth="130"/>

                            <StackPanel Grid.Row="2" Grid.Column="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0">
                                <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}"
                                       Width="100" Margin="0,0,5,0"/>
                                <Button Content="Refresh" Command="{Binding RefreshLogsCommand}"
                                       Width="80" Margin="0,0,5,0"/>
                                <Button Content="Clear All" Command="{Binding ClearLogsCommand}"
                                       Width="80" Background="#DC143C" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Search and Export Toolbar -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="2" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Center" ToolTip="Search in message, source, client name, and exception"/>

                            <CheckBox Grid.Column="4" Content="Case Sensitive" IsChecked="{Binding CaseSensitiveSearch}"
                                     VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="5" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Run Text="Results: "/>
                                <Run Text="{Binding SearchResultCount, Mode=OneWay}" FontWeight="Bold"/>
                            </TextBlock>

                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Export:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <Button Content="CSV" Command="{Binding ExportToCsvCommand}"
                                       Width="60" Margin="0,0,5,0" IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"/>
                                <Button Content="Text" Command="{Binding ExportToTextCommand}"
                                       Width="60" Margin="0,0,5,0" IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"/>
                                <Button Content="JSON" Command="{Binding ExportToJsonCommand}"
                                       Width="60" IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Logs DataGrid -->
                    <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredLogs}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Extended"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             EnableRowVirtualization="True"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             AlternationCount="2"
                             AlternatingRowBackground="#F9F9F9">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding Level, Converter={StaticResource LogLevelToBackgroundConverter}}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F4F8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Selected" Click="CopyLogsToClipboard_Click"/>
                                <Separator/>
                                <MenuItem Header="Show Details" Click="ShowLogDetails_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}"
                                               Width="170" SortDirection="Descending"/>
                            <DataGridTextColumn Header="Level" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding Level}"/>
                                        <Setter Property="Foreground" Value="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="150"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="200"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" MinWidth="300">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Message}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding StatusText}" VerticalAlignment="Center" FontStyle="Italic"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}"
                                         VerticalAlignment="Center" Margin="0,0,20,0"
                                         ToolTip="Automatically scroll to newest log entries"/>
                                <TextBlock Text="Total Logs: " VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding LogCount}" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Live Debug Logs Tab -->
            <TabItem Header="Live Debug Logs">
                <Grid DataContext="{Binding LiveLogsViewModel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ðŸ”´ Live Debug Logs" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Button Content="Clear Logs" Command="{Binding ClearLogsCommand}" Width="100" Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Log Display -->
                    <ListBox Grid.Row="1"
                             x:Name="LogListBox"
                             ItemsSource="{Binding LogMessages}"
                             SelectionMode="Extended"
                             BorderThickness="0"
                             Margin="0"
                             FontFamily="Consolas,Courier New"
                             FontSize="11"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Selected" Command="{Binding CopySelectedLogsCommand}" CommandParameter="{Binding PlacementTarget.SelectedItems, RelativeSource={RelativeSource AncestorType=ContextMenu}}" InputGestureText="Ctrl+C">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Copy All" Command="{Binding CopyAllLogsCommand}" InputGestureText="Ctrl+Shift+C">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“„" FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Select All" Command="{Binding SelectAllLogsCommand}" CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}" InputGestureText="Ctrl+A">
                                    <MenuItem.Icon>
                                        <TextBlock Text="â˜‘ï¸" FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Margin" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F4F8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="NoWrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <!-- Color based on log level -->
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Error">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Warning">
                                                    <Setter Property="Foreground" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Information">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Converter={StaticResource LogLevelToStringConverter}}" Value="Debug">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding StatusText}" VerticalAlignment="Center" FontStyle="Italic"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Log Entries: " VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding LogCount}" VerticalAlignment="Center" FontWeight="Bold" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Alerts Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Alerts" Margin="0,0,6,0"/>
                    </StackPanel>
                </TabItem.Header>
                <alerts:AlertsPanel DataContext="{Binding Alerts}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>


