<UserControl x:Class="DigitalSignage.Server.Views.Preview.PreviewTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DigitalSignage.Server.Views"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Test Data Source:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding PreviewViewModel.AvailableDataSources}"
                             SelectedItem="{Binding PreviewViewModel.SelectedTestDataSource}"
                             DisplayMemberPath="Name"
                             Width="200"
                             Margin="0,0,12,0"/>
                    <Button Content="ðŸ”„ Refresh Preview"
                           Command="{Binding PreviewViewModel.RefreshPreviewCommand}"
                           Style="{StaticResource PrimaryButton}"
                           IsEnabled="{Binding PreviewViewModel.IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                           Margin="0,0,8,0"/>
                    <Button Content="Clear Preview"
                           Command="{Binding PreviewViewModel.ClearPreviewCommand}"
                           Style="{StaticResource SecondaryButton}"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                          Text="{Binding PreviewViewModel.PreviewStatus}"
                          VerticalAlignment="Center"
                          Foreground="#666666"
                          FontSize="12"/>
            </Grid>
        </Border>

        <!-- Preview Canvas -->
        <ScrollViewer Grid.Row="1"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     Background="#2A2A2A">
            <Border Background="White"
                   Width="{Binding PreviewViewModel.CurrentLayout.Resolution.Width, FallbackValue=1920}"
                   Height="{Binding PreviewViewModel.CurrentLayout.Resolution.Height, FallbackValue=1080}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="50">
                <Canvas>
                    <!-- Background Color -->
                    <Canvas.Background>
                        <SolidColorBrush Color="{Binding PreviewViewModel.CurrentLayout.BackgroundColor, FallbackValue=White}"/>
                    </Canvas.Background>

                    <!-- Render Preview Elements -->
                    <ItemsControl ItemsSource="{Binding PreviewViewModel.PreviewElements}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding Position.X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Position.Y}"/>
                                <Setter Property="Canvas.ZIndex" Value="{Binding ZIndex}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="{Binding Size.Width}"
                                       Height="{Binding Size.Height}"
                                       Background="Transparent">
                                    <!-- Text Element -->
                                    <TextBlock Text="{Binding [Content]}"
                                              TextWrapping="Wrap"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="Text">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Placeholder when no layout -->
                    <TextBlock Text="No layout loaded. Create or open a layout in the Designer tab."
                              Canvas.Left="400"
                              Canvas.Top="500"
                              FontSize="24"
                              Foreground="#999999"
                              Visibility="{Binding PreviewViewModel.CurrentLayout, Converter={StaticResource NullToVisibilityConverter}}"/>
                </Canvas>
            </Border>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" FontSize="11" Foreground="#666666">
                    <Run Text="Preview shows how the layout will appear with test data."/>
                    <Run Text="Variables like {{room_name}} are replaced with actual values."/>
                </TextBlock>

                <TextBlock Grid.Column="1"
                          FontSize="11"
                          Foreground="#666666">
                    <Run Text="Elements: "/>
                    <Run Text="{Binding PreviewViewModel.PreviewElements.Count, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
