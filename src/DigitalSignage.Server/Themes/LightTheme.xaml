<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="PrimaryColorValue">#007ACC</Color>
    <Color x:Key="SecondaryColorValue">#68217A</Color>
    <Color x:Key="AccentColorValue">#FF6B6B</Color>
    <Color x:Key="BackgroundColorValue">#F5F5F5</Color>
    <Color x:Key="SurfaceColorValue">#FFFFFF</Color>
    <Color x:Key="TextColorValue">#333333</Color>
    <Color x:Key="TextSecondaryColorValue">#666666</Color>
    <Color x:Key="BorderColorValue">#CCCCCC</Color>
    <Color x:Key="HoverColorValue">#E8E8E8</Color>
    <Color x:Key="PressedColorValue">#D8D8D8</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColorValue}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColorValue}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColorValue}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColorValue}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColorValue}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColorValue}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColorValue}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColorValue}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColorValue}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColorValue}"/>

    <!-- Window Styles -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- TextBlock Styles -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- TextBox Styles -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <!-- ComboBox Styles -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <!-- ListBox Styles -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <!-- DataGrid Styles -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

</ResourceDictionary>
